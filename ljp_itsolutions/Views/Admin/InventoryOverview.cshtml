@model IEnumerable<ljp_itsolutions.Models.Ingredient>
@{
    ViewData["Title"] = "Inventory Control";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <style>
        .select2-container .select2-selection--single {
            height: 38px !important;
            border: 1px solid #dee2e6 !important;
            border-radius: 0.375rem !important;
        }
        .select2-container--default .select2-selection--single .select2-selection__rendered {
            line-height: 36px !important;
        }
        .select2-container--default .select2-selection--single .select2-selection__arrow {
            height: 36px !important;
        }
    </style>
}

<div class="container-fluid py-2">
    <!-- Controls -->
    <div class="card border-0 shadow-sm rounded-4 mb-4 p-3 bg-white">
        <div class="d-flex flex-wrap gap-3 align-items-center justify-content-between">
            <div class="d-flex align-items-center gap-3">
                <div class="input-group" style="max-width: 300px;">
                    <span class="input-group-text bg-light border-end-0 text-muted"><i class="fas fa-search"></i></span>
                    <input type="text" id="inventorySearch" class="form-control bg-light border-start-0" placeholder="Search ingredients...">
                </div>
            </div>
            <div class="d-flex gap-2">
                <button class="btn btn-outline-primary rounded-pill px-4" data-bs-toggle="modal" data-bs-target="#stockIntakeModal">
                    <i class="fas fa-truck-loading me-2"></i>Stock Intake
                </button>
                <button class="btn btn-primary rounded-pill px-4" data-bs-toggle="modal" data-bs-target="#addIngredientModal">
                    <i class="fas fa-plus me-2"></i>Add Ingredient
                </button>
            </div>
        </div>
    </div>

    <!-- Stats Row  -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden" style="border-left: 3px solid #3b82f6 !important;">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted x-small fw-bold text-uppercase tracking-wider mb-1">Total Items</p>
                            <h4 class="fw-bold mb-0">@ViewBag.TotalCount</h4>
                            <span class="text-muted xx-small">Unique Ingredients</span>
                        </div>
                        <div class="bg-primary bg-opacity-10 rounded-3 p-2 text-primary">
                            <i class="fas fa-cubes"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden" style="border-left: 3px solid @(ViewBag.OutOfStockCount > 0 ? "#ef4444" : "#10b981") !important;">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted x-small fw-bold text-uppercase tracking-wider mb-1">Critical</p>
                            <h4 class="fw-bold mb-0 @(ViewBag.OutOfStockCount > 0 ? "text-danger" : "text-success")">@ViewBag.OutOfStockCount</h4>
                            <span class="@(ViewBag.OutOfStockCount > 0 ? "text-danger" : "text-muted") xx-small">@(ViewBag.OutOfStockCount > 0 ? "Needs Urgent Reorder" : "Stock Levels Stable")</span>
                        </div>
                        <div class="@(ViewBag.OutOfStockCount > 0 ? "bg-danger" : "bg-success") bg-opacity-10 rounded-3 p-2 @(ViewBag.OutOfStockCount > 0 ? "text-danger" : "text-success")">
                            <i class="fas @(ViewBag.OutOfStockCount > 0 ? "fa-exclamation-triangle" : "fa-check-circle")"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden" style="border-left: 3px solid @(ViewBag.LowStockCount > 0 ? "#f59e0b" : "#3b82f6") !important;">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted x-small fw-bold text-uppercase tracking-wider mb-1">Low Stock</p>
                            <h4 class="fw-bold mb-0 @(ViewBag.LowStockCount > 0 ? "text-warning" : "text-primary")">@ViewBag.LowStockCount</h4>
                            <span class="@(ViewBag.LowStockCount > 0 ? "text-warning" : "text-muted") xx-small">@(ViewBag.LowStockCount > 0 ? "Below Threshold" : "Healthy Buffer")</span>
                        </div>
                        <div class="@(ViewBag.LowStockCount > 0 ? "bg-warning" : "bg-primary") bg-opacity-10 rounded-3 p-2 @(ViewBag.LowStockCount > 0 ? "text-warning" : "text-primary")">
                            <i class="fas @(ViewBag.LowStockCount > 0 ? "fa-arrow-down" : "fa-shield-alt")"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Inventory Table -->
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0" id="inventoryTable">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3 text-uppercase x-small fw-bold text-muted">Item Name</th>
                        <th class="py-3 text-uppercase x-small fw-bold text-muted">Unit</th>
                        <th class="py-3 text-uppercase x-small fw-bold text-muted" style="width: 30%;">Stock Level</th>
                        <th class="py-3 text-uppercase x-small fw-bold text-muted">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            var stockPercent = Math.Min(100, (double)item.StockQuantity / ((double)item.LowStockThreshold * 3) * 100);
                            string colorClass = "success";
                            string statusText = "In Stock";
                            
                            if (item.StockQuantity < 0)
                            {
                                colorClass = "danger";
                                statusText = "Critical";
                            }
                            else if (item.StockQuantity == 0)
                            {
                                colorClass = "danger";
                                statusText = "Out of Stock";
                            }
                            else if (item.StockQuantity < item.LowStockThreshold)
                            {
                                colorClass = "warning";
                                statusText = "Low Stock";
                            }

                            <tr style="cursor: pointer;" onclick="openItemModal(@item.IngredientID)" class="inventory-row">
                                <td class="ps-4">
                                    <div class="fw-bold text-dark">@item.Name</div>
                                </td>
                                <td class="text-muted small">@item.Unit</td>
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="progress flex-grow-1" style="height: 6px;">
                                            <div class="progress-bar bg-@colorClass" role="progressbar" style="width: @stockPercent%"></div>
                                        </div>
                                        <span class="x-small fw-bold text-muted" style="width: 50px;">
                                            @item.StockQuantity / @(item.LowStockThreshold * 3)
                                        </span>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge rounded-pill bg-@colorClass bg-opacity-10 text-@colorClass border border-@colorClass border-opacity-10 px-3">
                                        @statusText
                                    </span>
                                </td>
                            </tr>
                            
                            <!-- Hidden Data Store -->
                            <div id="data-@item.IngredientID" class="d-none inventory-data"
                                 data-name="@item.Name"
                                 data-unit="@item.Unit"
                                 data-stock="@item.StockQuantity"
                                 data-threshold="@item.LowStockThreshold"
                                 data-status="@statusText"
                                 data-color="@colorClass"
                                 data-laststocked="@(item.LastStockedDate?.ToString("MMM dd, yyyy") ?? "Never")"
                                 data-expiry="@(item.ExpiryDate?.ToString("MMM dd, yyyy") ?? "N/A")"
                                 data-expiry-raw="@(item.ExpiryDate?.ToString("yyyy-MM-dd") ?? "")">
                            </div>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-5">
                                <div class="py-5">
                                    <i class="fas fa-box-open fa-4x text-muted opacity-25 mb-4"></i>
                                    <h6 class="fw-bold text-dark">Inventory Empty</h6>
                                    <p class="text-muted small">No ingredients found in the inventory.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- Pagination Controls -->
        <div class="d-flex justify-content-between align-items-center p-3 bg-light border-top">
            <div class="text-muted x-small">
                Showing <span id="startRange">0</span> to <span id="endRange">0</span> of <span id="totalItems">0</span> items
            </div>
            <nav>
                <ul class="pagination pagination-sm mb-0" id="pagination">
                    <!-- Pagination buttons will be injected here -->
                </ul>
            </nav>
        </div>
    </div>
</div>

<!-- Stock Intake Modal -->
<div class="modal fade" id="stockIntakeModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header bg-primary text-white border-bottom-0">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-sm bg-success bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center text-success">
                        <i class="fas fa-plus fw-bold"></i>
                    </div>
                    <div>
                        <h5 class="modal-title fw-bolder text-dark mb-0">Stock Intake</h5>
                        <p class="text-muted small mb-0 uppercase tracking-widest">Restock Inventory</p>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4 pt-2">
                <form asp-action="IntakeStock" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-4">
                        <label class="form-label small fw-bold text-muted uppercase">Select Ingredient</label>
                        <select name="IngredientID" class="form-select select2 bg-light border-0" required style="width: 100%; padding: 0.75rem;">
                            <option value="">Choose item...</option>
                            @foreach (var item in Model)
                            {
                                <option value="@item.IngredientID" data-unit="@item.Unit">@item.Name (@item.StockQuantity @item.Unit)</option>
                            }
                        </select>
                    </div>
                    <div class="row g-3 mb-4">
                        <div class="col-md-12">
                            <label class="form-label small fw-bold text-muted uppercase">Quantity to Add</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0 text-muted ps-3"><i class="fas fa-balance-scale"></i></span>
                                <input type="number" step="0.01" name="Quantity" class="form-control bg-light border-0 py-2" required placeholder="0.00">
                                <span class="input-group-text bg-light border-0 text-muted pe-3 fw-bold" id="intakeUnitBadge">-</span>
                            </div>
                        </div>
                    </div>
                    <div class="mb-4">
                        <label class="form-label small fw-bold text-muted uppercase">Intake Date</label>
                        <input type="date" name="IntakeDate" class="intake-date-input form-control bg-light border-0 py-2" required />
                        <div class="form-text x-small text-muted mt-1"><i class="fas fa-clock me-1"></i>Date of physical stocking</div>
                    </div>
                    <div class="mb-4">
                        <label class="form-label small fw-bold text-muted uppercase">Expiry Date (Optional)</label>
                        <input type="date" name="ExpiryDate" class="form-control bg-light border-0 py-2" />
                        <div class="form-text x-small text-muted mt-1"><i class="fas fa-calendar-times me-1"></i>New expiry date for this batch</div>
                    </div>
                    <div class="mb-4">
                        <label class="form-label small fw-bold text-muted uppercase">Remarks (Optional)</label>
                        <textarea name="Remarks" class="form-control bg-light border-0 py-2" rows="3" placeholder="e.g. Supplier Batch #101, Weekly Restock"></textarea>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary rounded-pill fw-bold py-3 shadow-sm">
                            <i class="fas fa-check me-2"></i>Confirm Stock Intake
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Add Ingredient Modal -->
<div class="modal fade" id="addIngredientModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
            <div class="modal-header border-0 pb-0 pt-4 px-4 bg-white">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-sm bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center text-primary">
                        <i class="fas fa-box-open fw-bold"></i>
                    </div>
                    <div>
                        <h5 class="modal-title fw-bolder text-dark mb-0">New Item</h5>
                        <p class="text-muted small mb-0 uppercase tracking-widest">Create Ingredient</p>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4 pt-3">
                <form id="addIngredientForm">
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-muted uppercase">Item Name</label>
                        <input type="text" class="form-control bg-light border-0 py-2" id="addName" required placeholder="e.g. Arabica Beans">
                    </div>
                    <div class="row g-3 mb-3">
                        <div class="col-6">
                            <label class="form-label small fw-bold text-muted uppercase">Unit</label>
                            <select class="form-select bg-light border-0 py-2" id="addUnit" required>
                                <option value="pcs">pcs</option>
                                <option value="g">g (Grams)</option>
                                <option value="kg">kg (Kilograms)</option>
                                <option value="ml">ml (Milliliters)</option>
                                <option value="L">L (Liters)</option>
                            </select>
                        </div>
                        <div class="col-6">
                            <label class="form-label small fw-bold text-muted uppercase">Initial Stock</label>
                            <input type="number" step="0.01" class="form-control bg-light border-0 py-2" id="addStock" value="0" required>
                        </div>
                    </div>
                    <div class="mb-4">
                        <label class="form-label small fw-bold text-muted uppercase">Low Stock Threshold</label>
                        <input type="number" step="0.01" class="form-control bg-light border-0 py-2" id="addThreshold" value="10" required>
                        <div class="form-text x-small text-muted mt-1"><i class="fas fa-info-circle me-1"></i>You'll be notified when stock drops below this.</div>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary rounded-pill fw-bold py-3 shadow-sm">
                            <i class="fas fa-plus me-2"></i>Create Ingredient
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Item Details Modal -->
<div class="modal fade" id="itemModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
            <div class="modal-header border-0 pb-0 pt-4 px-4 bg-white">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-sm bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center text-primary" style="width: 48px; height: 48px;">
                        <i class="fas fa-cubes fa-lg"></i>
                    </div>
                    <div>
                        <h4 class="modal-title fw-bolder text-dark mb-0" id="modalItemName">Item Name</h4>
                        <p class="text-muted small mb-0 uppercase tracking-widest">Inventory Control</p>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            
            <div class="modal-body p-4 bg-white">
                <input type="hidden" id="modalItemId">
                
                <!-- Quick Stats -->
                <div class="row g-3 mb-4">
                    <div class="col-6 col-md-3">
                        <div class="p-3 bg-light rounded-4 text-center h-100">
                            <small class="text-muted d-block mb-1 uppercase fw-bold x-small">Current Stock</small>
                            <div class="h5 fw-bold text-dark mb-0"><span id="displayStock">0</span> <small class="text-muted" id="modalUnitStat">unit</small></div>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="p-3 bg-light rounded-4 text-center h-100">
                            <small class="text-muted d-block mb-1 uppercase fw-bold x-small">Threshold</small>
                            <div class="h5 fw-bold text-dark mb-0" id="displayThreshold">0</div>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="p-3 bg-light rounded-4 text-center h-100">
                            <small class="text-muted d-block mb-1 uppercase fw-bold x-small">Last Stocked</small>
                            <div class="h6 fw-bold text-dark mb-0" id="modalLastStocked">Never</div>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="p-3 bg-light rounded-4 text-center h-100">
                            <small class="text-muted d-block mb-1 uppercase fw-bold x-small">Expiry</small>
                            <div class="h6 fw-bold text-dark mb-0" id="modalExpiry">N/A</div>
                        </div>
                    </div>
                </div>

                <div class="row g-4">
                    <!-- Update Panel -->
                    <div class="col-lg-6">
                        <div class="pe-lg-3">
                            <h6 class="fw-bold text-dark mb-3 d-flex align-items-center">
                                <span class="bg-primary bg-opacity-10 p-2 rounded-3 me-2" style="width: 32px; height: 32px; display: inline-flex; align-items: center; justify-content: center;">
                                    <i class="fas fa-edit text-primary small"></i>
                                </span>
                                Update Information
                            </h6>
                            
                            <div class="mb-3">
                                <label class="form-label small fw-bold text-muted">Set New Stock Level</label>
                                <div class="input-group">
                                    <input type="number" step="0.01" class="form-control bg-light border-0" id="editStock" placeholder="Enter new quantity">
                                    <span class="input-group-text bg-light border-0 text-muted" id="modalUnitEntry">unit</span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label small fw-bold text-muted">Update Threshold</label>
                                <div class="input-group">
                                    <input type="number" step="0.01" class="form-control bg-light border-0" id="editThreshold" placeholder="Alert level">
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label small fw-bold text-muted">Update Expiry Date</label>
                                <input type="date" class="form-control bg-light border-0" id="editExpiry">
                            </div>

                            <div class="mb-0">
                                <label class="form-label small fw-bold text-muted">Reason / Adjust Remarks</label>
                                <textarea class="form-control bg-light border-0" id="editRemarks" rows="2" placeholder="e.g. Supplier delivery, manual count fix..."></textarea>
                            </div>
                        </div>
                    </div>

                    <!-- Activity Panel -->
                    <div class="col-lg-6 border-start-lg">
                        <h6 class="fw-bold text-dark mb-3 d-flex align-items-center">
                            <span class="bg-primary bg-opacity-10 p-2 rounded-3 me-2" style="width: 32px; height: 32px; display: inline-flex; align-items: center; justify-content: center;">
                                <i class="fas fa-history text-primary small"></i>
                            </span>
                            Recent Activity
                        </h6>
                        <div id="activityLogContainer" class="rounded-0 overflow-auto" style="max-height: 250px;">
                            <p class="text-muted small p-3 text-center mb-0">No recent activity</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer border-0 px-4 pb-4 pt-0 bg-white d-flex gap-2">
                <div class="ms-auto d-flex gap-2">
                    <button type="button" class="btn btn-light rounded-pill px-4 fw-bold py-2" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary rounded-pill px-5 fw-bold py-2 shadow-sm" onclick="updateStock()">
                        Apply Updates
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        const itemModal = new bootstrap.Modal(document.getElementById('itemModal'));

        $(document).ready(function() {
            // Initialize Select2
            $('.select2').select2({
                dropdownParent: $('#stockIntakeModal')
            });

            // Update unit badge when ingredient selected
            $('select[name="IngredientID"]').on('change', function() {
                const unit = $(this).find(':selected').data('unit');
                $('#intakeUnitBadge').text(unit || '-');
            });

            // Set Date Defaults & Constraints for Intake Modal
            const today = new Date().toISOString().split('T')[0];
            const intakeDateInputs = document.querySelectorAll('.intake-date-input');
            intakeDateInputs.forEach(input => {
                input.value = today;
                input.min = today; // Prevent backtracking
            });
        });

        // Pagination state
        let currentPage = 1;
        const rowsPerPage = 10;
        let filteredRows = [];

        function initPagination() {
            const rows = Array.from(document.querySelectorAll('#inventoryTable tbody tr.inventory-row'));
            filteredRows = rows;
            updatePagination();
        }

        function updatePagination() {
            const totalItems = filteredRows.length;
            const totalPages = Math.ceil(totalItems / rowsPerPage);
            
            if (currentPage > totalPages) currentPage = Math.max(1, totalPages);

            const start = (currentPage - 1) * rowsPerPage;
            const end = start + rowsPerPage;

            // Hide all rows
            document.querySelectorAll('#inventoryTable tbody tr.inventory-row').forEach(row => row.style.display = 'none');
            
            // Show filtered
            filteredRows.slice(start, end).forEach(row => row.style.display = '');

            // Update range text
            if (totalItems > 0) {
                document.getElementById('startRange').textContent = start + 1;
                document.getElementById('endRange').textContent = Math.min(end, totalItems);
                document.getElementById('totalItems').textContent = totalItems;
            } else {
                document.getElementById('startRange').textContent = 0;
                document.getElementById('endRange').textContent = 0;
                document.getElementById('totalItems').textContent = 0;
            }

            renderPaginationButtons(totalPages);
        }

        function renderPaginationButtons(totalPages) {
            const container = document.getElementById('pagination');
            container.innerHTML = '';
            if (totalPages <= 1) return;

            const prevLi = document.createElement('li');
            prevLi.className = `page-item ${currentPage === 1 ? 'disabled' : ''}`;
            prevLi.innerHTML = `<a class="page-link" href="#" onclick="changePage(${currentPage - 1})"><i class="fas fa-chevron-left x-small"></i></a>`;
            container.appendChild(prevLi);

            for (let i = 1; i <= totalPages; i++) {
                if (i === 1 || i === totalPages || (i >= currentPage - 1 && i <= currentPage + 1)) {
                    const li = document.createElement('li');
                    li.className = `page-item ${i === currentPage ? 'active' : ''}`;
                    li.innerHTML = `<a class="page-link" href="#" onclick="changePage(${i})">${i}</a>`;
                    container.appendChild(li);
                } else if (i === currentPage - 2 || i === currentPage + 2) {
                    const li = document.createElement('li');
                    li.className = 'page-item disabled';
                    li.innerHTML = '<span class="page-link">...</span>';
                    container.appendChild(li);
                }
            }

            const nextLi = document.createElement('li');
            nextLi.className = `page-item ${currentPage === totalPages ? 'disabled' : ''}`;
            nextLi.innerHTML = `<a class="page-link" href="#" onclick="changePage(${currentPage + 1})"><i class="fas fa-chevron-right x-small"></i></a>`;
            container.appendChild(nextLi);
        }

        window.changePage = function(page) {
            if (page < 1 || page > Math.ceil(filteredRows.length / rowsPerPage)) return;
            currentPage = page;
            updatePagination();
            event.preventDefault();
        };

        // Search functionality
        document.getElementById('inventorySearch').addEventListener('keyup', function() {
            const searchValue = this.value.toLowerCase();
            const allRows = Array.from(document.querySelectorAll('#inventoryTable tbody tr.inventory-row'));
            
            filteredRows = allRows.filter(row => {
                const text = row.textContent.toLowerCase();
                return text.includes(searchValue);
            });
            
            currentPage = 1;
            updatePagination();
        });

        document.addEventListener('DOMContentLoaded', initPagination);

        async function openItemModal(id) {
            const data = document.getElementById(`data-${id}`);
            if (!data) return;

            document.getElementById('modalItemId').value = id;
            document.getElementById('modalItemName').textContent = data.dataset.name;
            
            // Stats
            document.getElementById('displayStock').textContent = data.dataset.stock;
            document.getElementById('displayThreshold').textContent = data.dataset.threshold + " " + data.dataset.unit;
            document.getElementById('modalUnitStat').textContent = data.dataset.unit;
            document.getElementById('modalLastStocked').textContent = data.dataset.laststocked;
            document.getElementById('modalExpiry').textContent = data.dataset.expiry;

            // Form Fields
            document.getElementById('editStock').value = data.dataset.stock;
            document.getElementById('editThreshold').value = data.dataset.threshold;
            document.getElementById('editExpiry').value = data.dataset.expiryRaw;
            document.getElementById('editRemarks').value = "";
            document.getElementById('modalUnitEntry').textContent = data.dataset.unit;
            
            // Load activity logs
            const container = document.getElementById('activityLogContainer');
            container.innerHTML = '<p class="text-muted small p-3 text-center">Loading activity...</p>';
            

            try {
                const res = await fetch(`@Url.Action("GetIngredientDetails", "Manager")?id=${id}`);
                const result = await res.json();
                
                if (result.logs && result.logs.length > 0) {
                    container.innerHTML = result.logs.map(log => `
                        <div class="p-3 mb-2 bg-light border-0 rounded-3 x-small">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="badge ${log.quantityChange > 0 ? 'bg-success' : 'bg-danger'} bg-opacity-10 ${log.quantityChange > 0 ? 'text-success' : 'text-danger'} rounded-pill px-2">
                                    ${log.quantityChange > 0 ? '+' : ''}${log.quantityChange.toFixed(2)} ${data.dataset.unit}
                                </span>
                                <span class="text-muted opacity-75">${new Date(log.logDate).toLocaleDateString()}</span>
                            </div>
                            <div class="text-dark fw-bold mb-1">${log.changeType}</div>
                            <div class="text-muted mb-0 italic" style="font-size: 0.7rem;">${log.remarks || 'No remarks provided'}</div>
                        </div>
                    `).join('');
                } else {
                    container.innerHTML = '<p class="text-muted small p-3 text-center">No recent activity</p>';
                }
            } catch (err) {
                container.innerHTML = '<p class="text-danger small p-3 text-center">Failed to load logs</p>';
            }

            itemModal.show();
        }

        async function updateStock() {
            const id = document.getElementById('modalItemId').value;
            const quantity = document.getElementById('editStock').value;
            const threshold = document.getElementById('editThreshold').value;
            const expiry = document.getElementById('editExpiry').value;
            const remarks = document.getElementById('editRemarks').value;

            try {
                const res = await fetch(`@Url.Action("UpdateStock", "Admin")?id=${id}&quantity=${quantity}&threshold=${threshold}&expiryDate=${expiry}&remarks=${encodeURIComponent(remarks)}`, {
                    method: 'POST'
                });
                if (res.ok) location.reload();
                else alert('Failed to update stock.');
            } catch (err) {
                alert('An error occurred.');
            }
        }

        document.getElementById('addIngredientForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const data = {
                Name: document.getElementById('addName').value,
                Unit: document.getElementById('addUnit').value,
                StockQuantity: parseFloat(document.getElementById('addStock').value),
                LowStockThreshold: parseFloat(document.getElementById('addThreshold').value)
            };

            try {
                const res = await fetch('@Url.Action("AddIngredient", "Admin")', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                if (res.ok) location.reload();
                else alert('Failed to add ingredient.');
            } catch (err) {
                alert('An error occurred.');
            }
        });
    </script>
}

