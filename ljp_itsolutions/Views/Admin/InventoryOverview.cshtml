@model IEnumerable<ljp_itsolutions.Models.Ingredient>
@{
    ViewData["Title"] = "Inventory Control";
}

<div class="container-fluid py-2">
    <!-- Controls -->
    <div class="card border-0 shadow-sm rounded-4 mb-4 p-3 bg-white">
        <div class="d-flex flex-wrap gap-3 align-items-center justify-content-between">
            <div class="input-group" style="max-width: 300px;">
                <span class="input-group-text bg-light border-end-0 text-muted"><i class="fas fa-search"></i></span>
                <input type="text" id="inventorySearch" class="form-control bg-light border-start-0" placeholder="Search ingredients...">
            </div>
            <div class="d-flex gap-2">
                <button class="btn btn-light shadow-sm" onclick="location.reload()">
                    <i class="fas fa-sync-alt text-primary"></i>
                </button>
                <button class="btn btn-primary rounded-pill px-4" data-bs-toggle="modal" data-bs-target="#addIngredientModal">
                    <i class="fas fa-plus me-2"></i>Add Ingredient
                </button>
            </div>
        </div>
    </div>

    <!-- Stats Row -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 bg-primary text-white overflow-hidden">
                <div class="card-body p-4 position-relative">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="avatar-sm bg-white bg-opacity-20 rounded-circle d-flex align-items-center justify-content-center">
                            <i class="fas fa-cubes"></i>
                        </div>
                        <span class="badge bg-white text-primary rounded-pill">Total Items</span>
                    </div>
                    <h3 class="fw-bold mb-0">@ViewBag.TotalCount</h3>
                    <p class="mb-0 x-small opacity-75">Tracked Ingredients</p>
                    <i class="fas fa-boxes position-absolute bottom-0 end-0 opacity-10 fa-5x me-n3 mb-n3"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 bg-danger text-white overflow-hidden">
                <div class="card-body p-4 position-relative">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="avatar-sm bg-white bg-opacity-20 rounded-circle d-flex align-items-center justify-content-center">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <span class="badge bg-white text-danger rounded-pill">Critical</span>
                    </div>
                    <h3 class="fw-bold mb-0">@ViewBag.OutOfStockCount</h3>
                    <p class="mb-0 x-small opacity-75">Out of Stock Items</p>
                    <i class="fas fa-ban position-absolute bottom-0 end-0 opacity-10 fa-5x me-n3 mb-n3"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 bg-warning text-dark overflow-hidden">
                <div class="card-body p-4 position-relative">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="avatar-sm bg-white bg-opacity-20 rounded-circle d-flex align-items-center justify-content-center">
                            <i class="fas fa-arrow-down"></i>
                        </div>
                        <span class="badge bg-white text-warning rounded-pill border">Low Stock</span>
                    </div>
                    <h3 class="fw-bold mb-0">@ViewBag.LowStockCount</h3>
                    <p class="mb-0 x-small opacity-75">Restock Needed Soon</p>
                    <i class="fas fa-battery-quarter position-absolute bottom-0 end-0 opacity-10 fa-5x me-n3 mb-n3"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Inventory Table -->
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0" id="inventoryTable">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3 text-uppercase x-small fw-bold text-muted">Item Name</th>
                        <th class="py-3 text-uppercase x-small fw-bold text-muted">Unit</th>
                        <th class="py-3 text-uppercase x-small fw-bold text-muted" style="width: 30%;">Stock Level</th>
                        <th class="py-3 text-uppercase x-small fw-bold text-muted">Status</th>
                        <th class="pe-4 py-3 text-end text-uppercase x-small fw-bold text-muted">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            var stockPercent = Math.Min(100, (double)item.StockQuantity / ((double)item.LowStockThreshold * 3) * 100);
                            string colorClass = "success";
                            string statusText = "In Stock";
                            
                            if (item.StockQuantity == 0)
                            {
                                colorClass = "danger";
                                statusText = "Out of Stock";
                            }
                            else if (item.StockQuantity < item.LowStockThreshold)
                            {
                                colorClass = "warning";
                                statusText = "Low Stock";
                            }

                            <tr style="cursor: pointer;" onclick="openItemModal(@item.IngredientID)">
                                <td class="ps-4">
                                    <div class="fw-bold text-dark">@item.Name</div>
                                </td>
                                <td class="text-muted small">@item.Unit</td>
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="progress flex-grow-1" style="height: 6px;">
                                            <div class="progress-bar bg-@colorClass" role="progressbar" style="width: @stockPercent%"></div>
                                        </div>
                                        <span class="x-small fw-bold text-muted" style="width: 50px;">
                                            @item.StockQuantity / @(item.LowStockThreshold * 3)
                                        </span>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge rounded-pill bg-@colorClass bg-opacity-10 text-@colorClass border border-@colorClass border-opacity-10 px-3">
                                        @statusText
                                    </span>
                                </td>
                                <td class="pe-4 text-end">
                                    <button class="btn btn-sm btn-light rounded-pill px-3 fw-bold text-primary shadow-sm"
                                            onclick="event.stopPropagation(); openItemModal(@item.IngredientID)">
                                        Details
                                    </button>
                                </td>
                            </tr>
                            
                            <!-- Hidden Data for Modal -->
                            <div id="data-@item.IngredientID" class="d-none"
                                 data-name="@item.Name"
                                 data-unit="@item.Unit"
                                 data-stock="@item.StockQuantity"
                                 data-threshold="@item.LowStockThreshold"
                                 data-status="@statusText"
                                 data-color="@colorClass">
                            </div>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5">
                                <div class="py-5">
                                    <i class="fas fa-box-open fa-4x text-muted opacity-25 mb-4"></i>
                                    <h6 class="fw-bold text-dark">Inventory Empty</h6>
                                    <p class="text-muted small">No ingredients found in the inventory.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add Ingredient Modal -->
<div class="modal fade" id="addIngredientModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header bg-primary text-white border-bottom-0">
                <h5 class="modal-title fw-bold">Add Ingredient</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body pt-4">
                <form id="addIngredientForm">
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-muted">Item Name</label>
                        <input type="text" class="form-control bg-light border-0" id="addName" required placeholder="e.g. Arabica Beans">
                    </div>
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-muted">Unit</label>
                        <select class="form-select bg-light border-0" id="addUnit" required>
                            <option value="pcs">pcs</option>
                            <option value="g">g (Grams)</option>
                            <option value="kg">kg (Kilograms)</option>
                            <option value="ml">ml (Milliliters)</option>
                            <option value="L">L (Liters)</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-muted">Initial Stock</label>
                        <input type="number" step="0.01" class="form-control bg-light border-0" id="addStock" value="0" required>
                    </div>
                    <div class="mb-4">
                        <label class="form-label small fw-bold text-muted">Low Stock Threshold</label>
                        <input type="number" step="0.01" class="form-control bg-light border-0" id="addThreshold" value="10" required>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary rounded-pill fw-bold py-2">Save Ingredient</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Item Details Modal -->
<div class="modal fade" id="itemModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header bg-primary text-white border-0">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-sm bg-white bg-opacity-20 rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                        <i class="fas fa-box"></i>
                    </div>
                    <div>
                        <h6 class="modal-title fw-bold mb-0">Item Details</h6>
                        <p class="mb-0 x-small text-white text-opacity-75 uppercase tracking-wider" id="modalItemName">Item Name</p>
                    </div>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4 text-center">
                <input type="hidden" id="modalItemId">
                <div class="mb-4">
                    <div class="d-flex justify-content-center align-items-baseline gap-2 mb-2">
                        <input type="number" step="0.01" class="form-control form-control-lg text-center fw-bold border-0 bg-light rounded-3" id="editStock" style="width: 150px; font-size: 2.5rem;">
                        <span class="text-muted text-uppercase x-small fw-bold" id="modalUnit">Units</span>
                    </div>
                    <span class="badge bg-success rounded-pill px-3 py-2 mb-3" id="modalStatusBadge">In Stock</span>
                </div>

                <div class="row g-3">
                    <div class="col-12">
                        <div class="p-3 bg-light rounded-3 border">
                            <small class="text-muted d-block uppercase x-small fw-bold mb-1">Restock Threshold</small>
                            <div class="fw-medium text-dark" id="modalThreshold">0</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-0 p-3">
                <button type="button" class="btn btn-light rounded-pill px-4 fw-bold flex-fill" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary rounded-pill px-4 fw-bold flex-fill" onclick="updateStock()">
                    Update Stock
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const itemModal = new bootstrap.Modal(document.getElementById('itemModal'));

        // Search functionality
        document.getElementById('inventorySearch').addEventListener('keyup', function() {
            const value = this.value.toLowerCase();
            const rows = document.querySelectorAll('#inventoryTable tbody tr');
            
            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(value) ? '' : 'none';
            });
        });

        function openItemModal(id) {
            const data = document.getElementById(`data-${id}`);
            if (!data) return;

            document.getElementById('modalItemId').value = id;
            document.getElementById('modalItemName').textContent = data.dataset.name;
            document.getElementById('editStock').value = data.dataset.stock;
            document.getElementById('modalUnit').textContent = data.dataset.unit;
            document.getElementById('modalThreshold').textContent = data.dataset.threshold;
            
            const badge = document.getElementById('modalStatusBadge');
            badge.textContent = data.dataset.status;
            badge.className = `badge bg-${data.dataset.color} rounded-pill px-3 py-2 mb-3`;
            
            itemModal.show();
        }

        async function updateStock() {
            const id = document.getElementById('modalItemId').value;
            const quantity = document.getElementById('editStock').value;

            try {
                const res = await fetch(`@Url.Action("UpdateStock", "Admin")?id=${id}&quantity=${quantity}`, {
                    method: 'POST'
                });
                if (res.ok) location.reload();
                else alert('Failed to update stock.');
            } catch (err) {
                alert('An error occurred.');
            }
        }

        document.getElementById('addIngredientForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const data = {
                Name: document.getElementById('addName').value,
                Unit: document.getElementById('addUnit').value,
                StockQuantity: parseFloat(document.getElementById('addStock').value),
                LowStockThreshold: parseFloat(document.getElementById('addThreshold').value)
            };

            try {
                const res = await fetch('@Url.Action("AddIngredient", "Admin")', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                if (res.ok) location.reload();
                else alert('Failed to add ingredient.');
            } catch (err) {
                alert('An error occurred.');
            }
        });
    </script>
}

<style>
    .x-small { font-size: 0.75rem; }
    .uppercase { text-transform: uppercase; }
    .tracking-wider { letter-spacing: 0.05em; }
    .avatar-sm { width: 40px; height: 40px; }
    tbody tr:hover { background-color: rgba(var(--bs-primary-rgb), 0.03) !important; }
</style>
