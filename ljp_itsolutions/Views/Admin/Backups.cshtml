@{
    ViewData["Title"] = "Backups & Archives";
}

<div class="container-fluid">
    <div class="welcome-section mb-4">
        <h2 class="welcome-title">Backups & Archives</h2>
        <p class="text-muted">Manage system data backups and archival processes to ensure data durability.</p>
    </div>

    <div class="card-custom">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="fw-bold mb-0">Database Backups</h5>
            <button class="btn btn-amber btn-sm">
                <i class="fas fa-plus me-1"></i>Create Backup
            </button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-custom">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Size</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-muted small">@DateTime.Now.AddDays(-1).ToString("yyyy-MM-dd HH:mm")</td>
                            <td>45.2 MB</td>
                            <td><span class="badge bg-success">Healthy</span></td>
                            <td>
                                <button class="btn btn-outline-primary btn-sm"><i class="fas fa-download"></i></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
