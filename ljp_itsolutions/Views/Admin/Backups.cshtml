@model IEnumerable<System.IO.FileInfo>
@{
    ViewData["Title"] = "Backups & Archives";
    ViewBag.ModuleCount = 4;
}

<div class="container-fluid">
    <!-- Welcome Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="fw-bold mb-1">Backups & Archives</h2>
                    <p class="text-muted mb-0">Manage system data backups and ensure data durability</p>
                </div>
                <form asp-action="CreateBackup" method="post">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Create Backup
                    </button>
                </form>
            </div>
        </div>
    </div>
    
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Backup Status Cards -->
    <div class="row g-4 mb-4">
        <div class="col-lg-3 col-md-6">
            <div class="card-custom">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="flex-grow-1">
                            <p class="text-muted small mb-2">Last Backup</p>
                            @if (Model != null && Model.Any())
                            {
                                <h6 class="fw-bold mb-2">@Model.First().CreationTime.ToString("MMM dd, HH:mm")</h6>
                                <small class="text-success">
                                    <i class="fas fa-check-circle me-1"></i>Available
                                </small>
                            }
                            else
                            {
                                <h6 class="fw-bold mb-2">None</h6>
                                <small class="text-muted">No backups yet</small>
                            }
                        </div>
                        <div class="stat-icon bg-success bg-opacity-10">
                            <i class="fas fa-clock text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card-custom">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="flex-grow-1">
                            <p class="text-muted small mb-2">Total Backups</p>
                            <h6 class="fw-bold mb-2">@(Model?.Count() ?? 0)</h6>
                            <small class="text-muted">
                                <i class="fas fa-database me-1"></i>Stored locally
                            </small>
                        </div>
                        <div class="stat-icon bg-primary bg-opacity-10">
                            <i class="fas fa-archive text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card-custom">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="flex-grow-1">
                            <p class="text-muted small mb-2">Total Size</p>
                            @{
                                long totalSize = Model?.Sum(f => f.Length) ?? 0;
                                string sizeStr = (totalSize / 1024.0 / 1024.0).ToString("N2") + " MB";
                            }
                            <h6 class="fw-bold mb-2">@sizeStr</h6>
                            <small class="text-info">
                                <i class="fas fa-hdd me-1"></i>Disk usage
                            </small>
                        </div>
                        <div class="stat-icon bg-info bg-opacity-10">
                            <i class="fas fa-server text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-3 col-md-6">
            <div class="card-custom">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="flex-grow-1">
                            <p class="text-muted small mb-2">Auto Backup</p>
                            <h6 class="fw-bold mb-2">Manual</h6>
                            <small class="text-warning">
                                <i class="fas fa-exclamation-triangle me-1"></i>Not scheduled
                            </small>
                        </div>
                        <div class="stat-icon bg-warning bg-opacity-10">
                            <i class="fas fa-cog text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Backup List -->
    <div class="row">
        <div class="col-12">
            <div class="card-custom">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0">
                        <i class="fas fa-list text-primary me-2"></i>Backup History
                    </h5>
                    <div class="d-flex gap-2">
                        <button class="btn btn-sm btn-outline-secondary" onclick="window.location.reload()">
                            <i class="fas fa-sync-alt me-1"></i>Refresh
                        </button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-custom mb-0">
                            <thead>
                                <tr>
                                    <th>Backup File</th>
                                    <th>Date Created</th>
                                    <th>Size</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var file in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center gap-2">
                                                    <i class="fas fa-file-alt text-muted"></i>
                                                    <span class="fw-semibold">@file.Name</span>
                                                </div>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    <i class="far fa-calendar me-1"></i>@file.CreationTime.ToString("MMM dd, yyyy HH:mm:ss")
                                                </small>
                                            </td>
                                            <td>
                                                @{
                                                    var size = (file.Length / 1024.0).ToString("N2") + " KB";
                                                    if (file.Length > 1024 * 1024)
                                                    {
                                                        size = (file.Length / 1024.0 / 1024.0).ToString("N2") + " MB";
                                                    }
                                                }
                                                @size
                                            </td>
                                            <td>
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check me-1"></i>Success
                                                </span>
                                            </td>
                                            <td>
                                                <div class="d-flex gap-1">
                                                    <!-- Note: Download logic not implemented, just a button for now -->
                                                    <button class="btn btn-outline-primary btn-sm" title="Download (Not Implemented)">
                                                        <i class="fas fa-download"></i>
                                                    </button>
                                                    <form asp-action="DeleteBackup" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this backup?');">
                                                        <input type="hidden" name="fileName" value="@file.Name" />
                                                        <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-5 text-muted">
                                            <i class="fas fa-archive fa-3x mb-3 d-block"></i>
                                            No backups found.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
