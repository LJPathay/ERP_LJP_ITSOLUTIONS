@{
    ViewData["Title"] = "Backups & Archives";
    ViewBag.ModuleCount = 4;
}

<div class="container-fluid">
    <!-- Welcome Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="fw-bold mb-1">Backups & Archives</h2>
                    <p class="text-muted mb-0">Manage system data backups and ensure data durability</p>
                </div>
                <button class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Create Backup
                </button>
            </div>
        </div>
    </div>

    <!-- Backup Status Cards -->
    <div class="row g-4 mb-4">
        <div class="col-lg-3 col-md-6">
            <div class="card-custom">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="flex-grow-1">
                            <p class="text-muted small mb-2">Last Backup</p>
                            <h6 class="fw-bold mb-2">@DateTime.Now.AddHours(-2).ToString("MMM dd, HH:mm")</h6>
                            <small class="text-success">
                                <i class="fas fa-check-circle me-1"></i>Successful
                            </small>
                        </div>
                        <div class="stat-icon bg-success bg-opacity-10">
                            <i class="fas fa-clock text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card-custom">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="flex-grow-1">
                            <p class="text-muted small mb-2">Total Backups</p>
                            <h6 class="fw-bold mb-2">24</h6>
                            <small class="text-muted">
                                <i class="fas fa-database me-1"></i>All time
                            </small>
                        </div>
                        <div class="stat-icon bg-primary bg-opacity-10">
                            <i class="fas fa-archive text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card-custom">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="flex-grow-1">
                            <p class="text-muted small mb-2">Storage Used</p>
                            <h6 class="fw-bold mb-2">1.2 GB</h6>
                            <small class="text-info">
                                <i class="fas fa-hdd me-1"></i>Of 10 GB
                            </small>
                        </div>
                        <div class="stat-icon bg-info bg-opacity-10">
                            <i class="fas fa-server text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card-custom">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="flex-grow-1">
                            <p class="text-muted small mb-2">Auto Backup</p>
                            <h6 class="fw-bold mb-2">Enabled</h6>
                            <small class="text-success">
                                <i class="fas fa-sync me-1"></i>Daily at 2:00 AM
                            </small>
                        </div>
                        <div class="stat-icon bg-warning bg-opacity-10">
                            <i class="fas fa-cog text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Backup List -->
    <div class="row">
        <div class="col-12">
            <div class="card-custom">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0">
                        <i class="fas fa-list text-primary me-2"></i>Backup History
                    </h5>
                    <div class="d-flex gap-2">
                        <input type="text" class="form-control form-control-sm" placeholder="Search backups..." style="width: 200px;">
                        <button class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-sync-alt"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-custom mb-0">
                            <thead>
                                <tr>
                                    <th>Backup ID</th>
                                    <th>Date & Time</th>
                                    <th>Size</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var backups = new[]
                                    {
                                        new { Id = "BKP-001", Date = DateTime.Now.AddHours(-2), Size = "52.3 MB", Type = "Auto", Status = "Success" },
                                        new { Id = "BKP-002", Date = DateTime.Now.AddDays(-1), Size = "51.8 MB", Type = "Manual", Status = "Success" },
                                        new { Id = "BKP-003", Date = DateTime.Now.AddDays(-2), Size = "50.2 MB", Type = "Auto", Status = "Success" },
                                        new { Id = "BKP-004", Date = DateTime.Now.AddDays(-3), Size = "49.7 MB", Type = "Auto", Status = "Success" },
                                        new { Id = "BKP-005", Date = DateTime.Now.AddDays(-4), Size = "48.9 MB", Type = "Auto", Status = "Success" }
                                    };

                                    foreach (var backup in backups)
                                    {
                                        <tr>
                                            <td><span class="badge bg-secondary">@backup.Id</span></td>
                                            <td>
                                                <small class="text-muted">
                                                    <i class="far fa-calendar me-1"></i>@backup.Date.ToString("MMM dd, yyyy HH:mm")
                                                </small>
                                            </td>
                                            <td>@backup.Size</td>
                                            <td>
                                                @if (backup.Type == "Auto")
                                                {
                                                    <span class="badge bg-info">@backup.Type</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-primary">@backup.Type</span>
                                                }
                                            </td>
                                            <td>
                                                @if (backup.Status == "Success")
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check me-1"></i>@backup.Status
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="fas fa-times me-1"></i>@backup.Status
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex gap-1">
                                                    <button class="btn btn-outline-primary btn-sm" title="Download">
                                                        <i class="fas fa-download"></i>
                                                    </button>
                                                    <button class="btn btn-outline-success btn-sm" title="Restore">
                                                        <i class="fas fa-undo"></i>
                                                    </button>
                                                    <button class="btn btn-outline-danger btn-sm" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Backup Configuration -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card-custom">
                <div class="card-header bg-white">
                    <h5 class="fw-bold mb-0">
                        <i class="fas fa-cog text-warning me-2"></i>Backup Configuration
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label small fw-semibold">Backup Frequency</label>
                            <select class="form-select">
                                <option selected>Daily</option>
                                <option>Weekly</option>
                                <option>Monthly</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label small fw-semibold">Backup Time</label>
                            <input type="time" class="form-control" value="02:00">
                        </div>
                        <div class="col-md-4">
                            <label class="form-label small fw-semibold">Retention Period (days)</label>
                            <input type="number" class="form-control" value="30" min="7" max="365">
                        </div>
                        <div class="col-12">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="autoBackup" checked>
                                <label class="form-check-label small" for="autoBackup">
                                    Enable automatic backups
                                </label>
                            </div>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Save Configuration
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
