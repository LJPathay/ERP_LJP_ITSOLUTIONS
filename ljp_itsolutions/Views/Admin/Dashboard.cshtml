@model dynamic
@{
    ViewData["Title"] = "Admin Dashboard";
    ViewBag.ModuleCount = 4;
}

<!-- Dashboard Content -->
<div class="container-fluid">
    <!-- welcome section removed to avoid duplication with layout header -->
    <div class="mb-4">
        <p class="text-muted mb-0">Welcome back! Here's what's happening with your system today.</p>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="flex-grow-1">
                        <p class="text-muted small mb-2">Total Users</p>
                        <h3 class="fw-bold mb-2">@Model.TotalUsers</h3>
                        <small class="text-muted">All registered users</small>
                    </div>
                    <div class="stat-icon bg-primary bg-opacity-10">
                        <i class="fas fa-users text-primary"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="flex-grow-1">
                        <p class="text-muted small mb-2">Active Users</p>
                        <h3 class="fw-bold mb-2">@Model.ActiveUsers</h3>
                        <small class="text-success">
                            <i class="fas fa-check-circle me-1"></i>Currently active
                        </small>
                    </div>
                    <div class="stat-icon bg-success bg-opacity-10">
                        <i class="fas fa-user-check text-success"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="flex-grow-1">
                        <p class="text-muted small mb-2">System Logs</p>
                        <h3 class="fw-bold mb-2">@Model.TotalAuditLogs</h3>
                        <small class="text-muted">Total audit entries</small>
                    </div>
                    <div class="stat-icon bg-info bg-opacity-10">
                        <i class="fas fa-file-alt text-info"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="flex-grow-1">
                        <p class="text-muted small mb-2">Failed Logins</p>
                        <h3 class="fw-bold mb-2">@Model.FailedLogins</h3>
                        <small class="text-danger">
                            <i class="fas fa-exclamation-triangle me-1"></i>Security alerts
                        </small>
                    </div>
                    <div class="stat-icon bg-danger bg-opacity-10">
                        <i class="fas fa-shield-alt text-danger"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card-custom">
                <div class="card-body">
                    <h6 class="fw-bold mb-3">
                        <i class="fas fa-bolt text-warning me-2"></i>Quick Actions
                    </h6>
                    <div class="row g-3">
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("Users", "Admin")" class="btn btn-outline-primary w-100 d-flex align-items-center justify-content-center py-3">
                                <i class="fas fa-user-plus me-2"></i>Add New User
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("AuditLogs", "Admin")" class="btn btn-outline-info w-100 d-flex align-items-center justify-content-center py-3">
                                <i class="fas fa-file-alt me-2"></i>View All Logs
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("Transactions", "Admin")" class="btn btn-outline-success w-100 d-flex align-items-center justify-content-center py-3">
                                <i class="fas fa-receipt me-2"></i>View Transactions
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("SystemSettings", "Admin")" class="btn btn-outline-secondary w-100 d-flex align-items-center justify-content-center py-3">
                                <i class="fas fa-cog me-2"></i>System Settings
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row g-4 mb-4">
        <div class="col-lg-8">
            <div class="card-custom h-100">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0">
                        <i class="fas fa-chart-line text-primary me-2"></i>Sales & Revenue Trends
                    </h5>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            Last 7 Days
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.SalesTrendLabels != null && ((IEnumerable<string>)Model.SalesTrendLabels).Any())
                    {
                        <div style="height: 300px; width: 100%;">
                            <canvas id="salesTrendsChart"></canvas>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-chart-line fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No sales data available for this period</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card-custom h-100">
                <div class="card-header bg-white">
                    <h5 class="fw-bold mb-0">
                        <i class="fas fa-chart-pie text-success me-2"></i>Roles Overview
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.RoleDistribution != null && ((IEnumerable<dynamic>)Model.RoleDistribution).Any())
                    {
                        <div style="height: 300px; width: 100%; display: flex; justify-content: center; align-items: center;">
                            <canvas id="userRolesChart"></canvas>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-chart-pie fa-3x text-muted mb-3"></i>
                            <p class="text-muted mb-0">No data available</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activities Table -->
    <div class="row">
        <div class="col-12">
            <div class="card-custom">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0">
                        <i class="fas fa-history text-info me-2"></i>Recent User Activities
                    </h5>
                    <a href="@Url.Action("AuditLogs", "Admin")" class="btn btn-sm btn-primary">
                        View All Logs <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-custom mb-0">
                            <thead>
                                <tr>
                                    <th>User</th>
                                    <th>Role</th>
                                    <th>Action</th>
                                    <th>Timestamp</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.RecentActivityLogs != null && Model.RecentActivityLogs.Count > 0)
                                {
                                    foreach (var log in Model.RecentActivityLogs)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center gap-2">
                                                    <div class="user-avatar-sm bg-primary bg-opacity-10">
                                                        <i class="fas fa-user text-primary small"></i>
                                                    </div>
                                                    <span class="fw-semibold">@(log.User?.FullName ?? "System")</span>
                                                </div>
                                            </td>
                                            <td>
                                                @if (log.User?.Role != null)
                                                {
                                                    <span class="badge bg-primary">@log.User.Role.RoleName</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">System</span>
                                                }
                                            </td>
                                            <td>@log.Action</td>
                                            <td>
                                                <small class="text-muted">
                                                    <i class="far fa-clock me-1"></i>@log.Timestamp.ToString("MMM dd, yyyy HH:mm")
                                                </small>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center py-5">
                                            <div class="d-flex flex-column align-items-center">
                                                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                                <h6 class="text-muted mb-2">No Recent Activity</h6>
                                                <p class="text-muted small mb-3">Activity logs will appear here as users interact with the system</p>
                                                <a href="@Url.Action("Users", "Admin")" class="btn btn-sm btn-primary">
                                                    <i class="fas fa-plus me-1"></i>Add First User
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Sales Trends Chart
        @if (Model.SalesTrendLabels != null && ((IEnumerable<string>)Model.SalesTrendLabels).Any())
        {
            <text>
            const ctxSales = document.getElementById('salesTrendsChart');
            if (ctxSales) {
                const salesCtx = ctxSales.getContext('2d');
                
                // Create gradient
                let gradient = salesCtx.createLinearGradient(0, 0, 0, 400);
                gradient.addColorStop(0, 'rgba(13, 110, 253, 0.2)');   
                gradient.addColorStop(1, 'rgba(13, 110, 253, 0.0)');

                new Chart(salesCtx, {
                    type: 'line',
                    data: {
                        labels: [@Html.Raw(string.Join(", ", ((IEnumerable<string>)Model.SalesTrendLabels).Select(l => $"'{l}'")))],
                        datasets: [{
                            label: 'Revenue (₱)',
                            data: [@string.Join(", ", (IEnumerable<decimal>)Model.SalesTrendData)],
                            borderColor: '#0d6efd',
                            backgroundColor: gradient,
                            borderWidth: 2,
                            tension: 0.4, // Smooth curves
                            fill: true,
                            pointBackgroundColor: '#ffffff',
                            pointBorderColor: '#0d6efd',
                            pointBorderWidth: 2,
                            pointRadius: 4,
                            pointHoverRadius: 6
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { display: false },
                            tooltip: {
                                intersect: false,
                                mode: 'index',
                                backgroundColor: 'rgba(0, 0, 0, 0.8)',
                                padding: 12,
                                cornerRadius: 6,
                                titleFont: { size: 14, weight: 'bold' },
                                bodyFont: { size: 13 },
                                callbacks: {
                                    label: function(context) {
                                        let value = context.parsed.y;
                                        return 'Revenue: ₱' + value.toLocaleString('en-US', { minimumFractionDigits: 2 });
                                    }
                                }
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                grid: {
                                    borderDash: [2, 4],
                                    color: 'rgba(0, 0, 0, 0.05)',
                                    drawBorder: false
                                },
                                ticks: {
                                    font: { size: 11 },
                                    callback: function(value) {
                                        return '₱' + value;
                                    }
                                }
                            },
                            x: {
                                grid: { display: false },
                                ticks: { font: { size: 11 } }
                            }
                        },
                        interaction: {
                            intersect: false,
                            mode: 'index',
                        },
                    }
                });
            }
            </text>
        }

        @if (Model.RoleDistribution != null && ((IEnumerable<dynamic>)Model.RoleDistribution).Any())
        {
            <text>
            // Prepare role distribution data
            var roleLabels = [@Html.Raw(string.Join(", ", ((IEnumerable<dynamic>)Model.RoleDistribution).Select(r => $"\"{r.Role}\"")))];
            var roleCounts = [@Html.Raw(string.Join(", ", ((IEnumerable<dynamic>)Model.RoleDistribution).Select(r => r.Count)))];
            var roleColors = ['#0d6efd', '#198754', '#ffc107', '#dc3545', '#6c757d', '#0dcaf0'];

            // User Roles Doughnut Chart
            const ctx2 = document.getElementById('userRolesChart');
            if (ctx2) {
                new Chart(ctx2.getContext('2d'), {
                    type: 'doughnut',
                    data: {
                        labels: roleLabels,
                        datasets: [{
                            data: roleCounts,
                            backgroundColor: roleColors,
                            borderWidth: 0,
                            hoverOffset: 15
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        layout: {
                            padding: 10
                        },
                        plugins: {
                            legend: {
                                position: 'bottom',
                                labels: {
                                    padding: 20,
                                    usePointStyle: true,
                                    pointStyle: 'circle',
                                    font: { size: 11 }
                                }
                            },
                            tooltip: {
                                backgroundColor: 'rgba(0, 0, 0, 0.8)',
                                padding: 12,
                                cornerRadius: 8,
                                callbacks: {
                                    label: function(context) {
                                        let value = context.parsed || 0;
                                        let total = context.dataset.data.reduce((a, b) => a + b, 0);
                                        let percentage = ((value / total) * 100).toFixed(1);
                                        return ` ${context.label}: ${value} users (${percentage}%)`;
                                    }
                                }
                            }
                        },
                        cutout: '70%'
                    }
                });
            }
            </text>
        }
    </script>
}
