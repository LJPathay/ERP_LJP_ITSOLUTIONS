@model dynamic
@{
    ViewData["Title"] = "Manager Reports";
    ViewBag.ModuleCount = 4;
}

<div class="container-fluid py-3">
    <!-- Financial & Inventory KPIs -->
    <div class="row g-3 mb-4">
        <!-- Monthly Revenue -->
        <div class="col-md-6 col-lg-3">
            <div class="card border shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-start justify-content-between">
                        <div>
                            <p class="text-muted small fw-bold mb-1">Monthly Revenue</p>
                            <h3 class="fw-bold mb-2">₱@Model.MonthlyRevenue.ToString("N2")</h3>
                            @if(Model.LastMonthRevenue > 0) {
                                var growth = ((Model.MonthlyRevenue - Model.LastMonthRevenue) / Model.LastMonthRevenue) * 100;
                                <small class="@(growth >= 0 ? "text-success" : "text-danger")">
                                    <i class="fas @(growth >= 0 ? "fa-arrow-up" : "fa-arrow-down") me-1"></i>@Math.Abs(growth).ToString("N1")% vs last month
                                </small>
                            } else {
                                <small class="text-muted">No data from last month</small>
                            }
                        </div>
                        <div class="text-success opacity-50">
                            <i class="fas fa-chart-line fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Inventory Value -->
        <div class="col-md-6 col-lg-3">
            <div class="card border shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-start justify-content-between">
                        <div>
                            <p class="text-muted small fw-bold mb-1">Inventory Value</p>
                            <h3 class="fw-bold mb-2">₱@Model.InventoryValue.ToString("N2")</h3>
                            <small class="text-primary">
                                Total asset value
                            </small>
                        </div>
                        <div class="text-primary opacity-50">
                            <i class="fas fa-box fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Low Stock Items -->
        <div class="col-md-6 col-lg-3">
            <div class="card border shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-start justify-content-between">
                        <div>
                            <p class="text-muted small fw-bold mb-1">Low Stock Alerts</p>
                            <h3 class="fw-bold mb-2">@Model.LowStockCount</h3>
                            <small class="@(Model.LowStockCount > 0 ? "text-danger" : "text-success")">
                                Items need restock
                            </small>
                        </div>
                        <div class="text-warning opacity-50">
                            <i class="fas fa-exclamation-triangle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Staff on Duty (Approx) -->
        <div class="col-md-6 col-lg-3">
            <div class="card border shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-start justify-content-between">
                        <div>
                            <p class="text-muted small fw-bold mb-1">Active Staff</p>
                            <h3 class="fw-bold mb-2">@Model.Staff.Count</h3>
                            <small class="text-info">
                                Registered employees
                            </small>
                        </div>
                        <div class="text-info opacity-50">
                            <i class="fas fa-user-friends fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Staff List -->
    <div class="row">
        <div class="col-12">
            <div class="card border shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="fw-bold mb-0">Staff Directory</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Name</th>
                                    <th>Role</th>
                                    <th>Status</th>
                                    <th>Email</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var staff in Model.Staff)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                <div class="me-3">
                                                    <div class="bg-light rounded-circle text-primary d-flex align-items-center justify-content-center fw-bold" style="width: 35px; height: 35px;">
                                                        @staff.FullName.Substring(0, 1)
                                                    </div>
                                                </div>
                                                <div>
                                                    <h6 class="mb-0 fw-semibold">@staff.FullName</h6>
                                                    <small class="text-muted">@staff.Username</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            @if (staff.Role == "Admin")
                                            {
                                                <span class="badge bg-danger">Admin</span>
                                            }
                                            else if (staff.Role == "Manager")
                                            {
                                                <span class="badge bg-primary">Manager</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@staff.Role</span>
                                            }
                                        </td>
                                        <td>
                                            @if (staff.IsActive)
                                            {
                                                <span class="badge bg-success bg-opacity-10 text-success">
                                                    Active
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </td>
                                        <td>@staff.Email</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
