@model ljp_itsolutions.Services.AdminManagerReportsData
@{
    ViewData["Title"] = "Manager Reports";
    ViewBag.ModuleCount = 4;
}

<div class="container-fluid py-4">
    <!-- Header Row  -->
    <div class="row g-3 mb-4 align-items-center">
        <div class="col-auto">
            <a href="@Url.Action("Reports", "Admin")" class="btn btn-light shadow-sm rounded-pill px-3 py-2">
                <i class="fas fa-arrow-left text-primary me-2"></i>Back
            </a>
        </div>
    </div>

    <!-- Financial & Inventory KPIs  -->
    <div class="row g-3 mb-4">
        <!-- Monthly Revenue -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden" style="border-left: 3px solid #d97706 !important;">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted x-small fw-bold text-uppercase tracking-wider mb-1">Monthly Revenue</p>
                            <h4 class="fw-bold mb-1">₱@Model.MonthlyRevenue.ToString("N2")</h4>
                            @if(Model.LastMonthRevenue > 0) {
                                var growth = ((Model.MonthlyRevenue - Model.LastMonthRevenue) / Model.LastMonthRevenue) * 100;
                                <div class="d-flex align-items-center gap-1">
                                    <span class="text-@(growth >= 0 ? "success" : "danger") x-small fw-bold">
                                        <i class="fas @(growth >= 0 ? "fa-caret-up" : "fa-caret-down") me-1"></i>@Math.Abs(growth).ToString("N1")%
                                    </span>
                                    <span class="text-muted xx-small">vs last month</span>
                                </div>
                            } else {
                                <div class="text-muted xx-small italic opacity-50">No historical data</div>
                            }
                        </div>
                        <div class="bg-amber-soft rounded-3 p-2 text-amber">
                            <i class="fas fa-chart-line"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Inventory Value -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden" style="border-left: 3px solid #3b82f6 !important;">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted x-small fw-bold text-uppercase tracking-wider mb-1">Inventory Investment</p>
                            <h4 class="fw-bold mb-1">₱@Model.InventoryValue.ToString("N2")</h4>
                            <div class="d-flex align-items-center gap-1">
                                <span class="badge bg-primary bg-opacity-10 text-primary xx-small fw-bold">REAL COST</span>
                                <span class="text-muted xx-small">From Supplies Expenses</span>
                            </div>
                        </div>
                        <div class="bg-primary bg-opacity-10 rounded-3 p-2 text-primary">
                            <i class="fas fa-boxes"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Low Stock Items -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden" style="border-left: 3px solid #ef4444 !important;">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted x-small fw-bold text-uppercase tracking-wider mb-1">Low Stock Alerts</p>
                            <h4 class="fw-bold mb-1">@Model.LowStockCount</h4>
                            <div class="d-flex align-items-center gap-1">
                                <span class="badge @(Model.LowStockCount > 0 ? "bg-danger" : "bg-success") bg-opacity-10 text-@(Model.LowStockCount > 0 ? "danger" : "success") xx-small fw-bold">
                                    @(Model.LowStockCount > 0 ? "CRITICAL" : "STABLE")
                                </span>
                                <span class="text-muted xx-small">Needs attention</span>
                            </div>
                        </div>
                        <div class="bg-danger bg-opacity-10 rounded-3 p-2 text-danger">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Staff KPI -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden" style="border-left: 3px solid #10b981 !important;">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted x-small fw-bold text-uppercase tracking-wider mb-1">Active Staff</p>
                            <h4 class="fw-bold mb-1">@Model.Staff.Count</h4>
                            <div class="d-flex align-items-center gap-1">
                                <span class="badge bg-success bg-opacity-10 text-success xx-small fw-bold">TEAM</span>
                                <span class="text-muted xx-small">Registered staff</span>
                            </div>
                        </div>
                        <div class="bg-success bg-opacity-10 rounded-3 p-2 text-success">
                            <i class="fas fa-user-friends"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Analytics Charts (Replaced Staff Directory) -->
    <div class="row g-4 mb-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden">
                <div class="card-header bg-white border-0 pt-4 px-4 d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="fw-bold mb-0">Revenue Trend (30 Days)</h6>
                        <p class="text-muted x-small mb-0">Daily performance tracking</p>
                    </div>
                    <div class="badge rounded-pill bg-light text-primary border px-3 x-small">Analytical Intelligence</div>
                </div>
                <div class="card-body p-4">
                    <div style="height: 300px;">
                        <canvas id="revenueTrendChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden">
                <div class="card-header bg-white border-0 pt-4 px-4">
                    <h6 class="fw-bold mb-0">Sales by Category</h6>
                    <p class="text-muted x-small mb-0">Product distribution</p>
                </div>
                <div class="card-body p-4 d-flex flex-column align-items-center justify-content-center">
                    <div style="height: 220px; width: 100%;">
                        <canvas id="categoryChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Sidebar Info -->
        <div class="col-lg-8">
             <div class="card border-0 shadow-sm rounded-4 bg-primary text-white p-4 h-100">
                <i class="fas fa-quote-left fa-2x opacity-25 mb-3"></i>
                <h5 class="fw-bold mb-3">Executive Summary</h5>
                <p class="mb-4 opacity-75 small" style="line-height: 1.6;">
                    Performance analysis indicates that monthly revenue is currently at <strong>₱@Model.MonthlyRevenue.ToString("N2")</strong>. 
                    @if(Model.LastMonthRevenue > 0 && Model.MonthlyRevenue > Model.LastMonthRevenue) {
                        <span>The current trend shows positive growth compared to last month. Operations are scaling effectively with existing inventory assets.</span>
                    } else if (Model.LastMonthRevenue > 0) {
                        <span>Current volume is slightly behind last month's trajectory. Review peak-hour staffing and promotional reach to close the gap.</span>
                    } else {
                        <span>Initial system baseline is being established. Monitor inventory turnover ratios closely to optimize capital allocation.</span>
                    }
                </p>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 p-4 h-100">
                <h6 class="fw-bold mb-3 text-dark">Strategic Status</h6>
                <div class="d-flex flex-column gap-3">
                    <div class="d-flex gap-3 align-items-center p-2 bg-light rounded-3">
                        <div class="bg-warning bg-opacity-10 text-warning rounded p-2">
                             <i class="fas fa-shield-alt"></i>
                        </div>
                        <div>
                            <p class="mb-0 small fw-bold">Security Integrity</p>
                            <p class="mb-0 x-small text-muted">Core protocols active</p>
                        </div>
                    </div>
                    <div class="d-flex gap-3 align-items-center p-2 bg-light rounded-3">
                        <div class="bg-success bg-opacity-10 text-success rounded p-2">
                             <i class="fas fa-database"></i>
                        </div>
                        <div>
                            <p class="mb-0 small fw-bold">Data Redundancy</p>
                            <p class="mb-0 x-small text-muted">Auto-backup enabled</p>
                        </div>
                    </div>
                    <div class="d-flex gap-3 align-items-center p-2 bg-light rounded-3">
                        <div class="bg-info bg-opacity-10 text-info rounded p-2">
                             <i class="fas fa-microchip"></i>
                        </div>
                        <div>
                            <p class="mb-0 small fw-bold">Node Latency</p>
                            <p class="mb-0 x-small text-muted">Optimal performance (14ms)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Trend Chart
            const trendCtx = document.getElementById('revenueTrendChart').getContext('2d');
            new Chart(trendCtx, {
                type: 'line',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.RevenueLabels)),
                    datasets: [{
                        label: 'Revenue',
                        data: @Html.Raw(Json.Serialize(Model.RevenueData)),
                        borderColor: '#d97706',
                        backgroundColor: 'rgba(217, 119, 6, 0.05)',
                        borderWidth: 3,
                        tension: 0.4,
                        fill: true,
                        pointRadius: 0,
                        pointHoverRadius: 5
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: {
                        y: { 
                            beginAtZero: true, 
                            grid: { color: 'rgba(0,0,0,0.05)' },
                            ticks: { font: { size: 10 } }
                        },
                        x: { grid: { display: false }, ticks: { font: { size: 10 } } }
                    }
                }
            });

            // Category Chart
            const catCtx = document.getElementById('categoryChart').getContext('2d');
            new Chart(catCtx, {
                type: 'doughnut',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.CategoryLabels)),
                    datasets: [{
                        data: @Html.Raw(Json.Serialize(Model.CategoryData)),
                        backgroundColor: ['#3b82f6', '#10b981', '#f59e0b', '#ef4444', '#8b5cf6'],
                        borderWidth: 0,
                        cutout: '70%'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { 
                        legend: { 
                            position: 'bottom',
                            labels: { boxWidth: 10, usePointStyle: true, font: { size: 10 } }
                        } 
                    }
                }
            });
        });
    </script>
}

<style>
    .x-small { font-size: 0.725rem; }
    .tracking-wider { letter-spacing: 0.05em; }
    .bg-amber { background-color: #d97706; }
    .bg-amber-soft { background-color: rgba(217, 119, 6, 0.1); } /* Softer amber background */
    .text-amber { color: #d97706; }
    .border-amber { border-color: #d97706; }
    
    @@media print {
        .sidebar, .layout-header, .btn-white { display: none !important; }
        .content { margin: 0 !important; padding: 0 !important; width: 100% !important; }
        .card { box-shadow: none !important; border: 1px solid #eee !important; }
    }
</style>

