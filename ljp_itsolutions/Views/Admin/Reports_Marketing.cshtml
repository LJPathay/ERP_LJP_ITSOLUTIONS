net@model dynamic
@{
    ViewData["Title"] = "Marketing Reports";
    ViewBag.ModuleCount = 4;
}

<div class="container-fluid py-3">
    <!-- KPIs -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card border shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted small fw-bold mb-1">Active Promotions</p>
                            <h3 class="fw-bold mb-0">@Model.ActivePromotionsCount</h3>
                            <small class="text-success">
                                Running now
                            </small>
                        </div>
                        <div class="text-success opacity-50">
                            <i class="fas fa-tags fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted small fw-bold mb-1">Total Customers</p>
                            <h3 class="fw-bold mb-0">@Model.TotalCustomers</h3>
                            <small class="text-primary">
                                Database records
                            </small>
                        </div>
                        <div class="text-primary opacity-50">
                            <i class="fas fa-address-book fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted small fw-bold mb-1">New This Month</p>
                            <h3 class="fw-bold mb-0">@Model.NewCustomersThisMonth</h3>
                            <small class="text-info">
                                First time orders
                            </small>
                        </div>
                        <div class="text-info opacity-50">
                            <i class="fas fa-chart-line fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Active Promotions List -->
    <div class="row">
        <div class="col-12">
            <div class="card border shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="fw-bold mb-0">Active Campaigns</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Promotion Name</th>
                                    <th>Duration</th>
                                    <th>Discount</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.ActivePromotions != null && Model.ActivePromotions.Count > 0)
                                {
                                    foreach (var promo in Model.ActivePromotions)
                                    {
                                        <tr>
                                            <td class="ps-4">
                                                <div class="fw-bold">@promo.PromotionName</div>
                                                <small class="text-muted">Marketing Campaign</small>
                                            </td>
                                            <td>
                                                <div class="small text-muted">
                                                    @promo.StartDate.ToString("MMM dd") - @promo.EndDate.ToString("MMM dd, yyyy")
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-warning text-dark">
                                                    @if (promo.DiscountType == "Percentage")
                                                    {
                                                        <span>@promo.DiscountValue.ToString("0")% OFF</span>
                                                    }
                                                    else
                                                    {
                                                        <span>â‚±@promo.DiscountValue.ToString("N2") OFF</span>
                                                    }
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge bg-success bg-opacity-10 text-success">
                                                    Active
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center py-5">
                                            <div class="d-flex flex-column align-items-center">
                                                <h6 class="text-muted mb-2">No Active Promotions</h6>
                                                <p class="text-muted small mb-0">Create a new campaign to boost sales</p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
