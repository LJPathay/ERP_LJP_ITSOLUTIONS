@{
    ViewData["Title"] = "Reports";
    ViewBag.ModuleCount = 4;
}

@section Navigation {
    <partial name="_AdminNavigation" />
    </ul>
}

<div class="container-fluid">
    <!-- Report Filters -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card-custom">
                <div class="card-body">
                    <div class="row g-3 align-items-end">
                        <div class="col-md-3">
                            <label class="form-label small">Report Type</label>
                            <select class="form-select">
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label small">Start Date</label>
                            <input type="date" class="form-control" value="2024-01-01">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label small">End Date</label>
                            <input type="date" class="form-control" value="2024-01-31">
                        </div>
                        <div class="col-md-3">
                            <button class="btn btn-amber">
                                <i class="fas fa-search me-2"></i>Generate Report
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Dynamic Report Content -->
    <div class="row g-4 mb-4">
        <div class="col-lg-8">
            <div class="card-custom" id="systemReport">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0">System Overview Report</h5>
                    <div class="d-flex gap-2">
                        <button class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-download me-1"></i>Export
                        </button>
                        <button class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-sync-alt me-1"></i>Refresh
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <p class="text-muted small mb-1">Total Revenue</p>
                            <h3 class="fw-bold mb-0">?125,430</h3>
                            <div class="d-flex align-items-center gap-1 mt-2">
                                <i class="fas fa-peso-sign text-success"></i>
                                <span class="text-success small fw-semibold">15.3% vs last month</span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <p class="text-muted small mb-1">Total Orders</p>
                            <h3 class="fw-bold mb-0">3,542</h3>
                            <div class="d-flex align-items-center gap-1 mt-2">
                                <i class="fas fa-shopping-bag text-primary"></i>
                                <span class="text-primary small fw-semibold">8.2% vs last month</span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <p class="text-muted small mb-1">Active Promotions</p>
                            <h3 class="fw-bold mb-0">12</h3>
                            <div class="d-flex align-items-center gap-1 mt-2">
                                <i class="fas fa-tags text-warning"></i>
                                <span class="text-warning small fw-semibold">No change</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card-custom" id="userReport" style="display: none;">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0">User Activity Report</h5>
                    <div class="d-flex gap-2">
                        <button class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-download me-1"></i>Export
                        </button>
                        <button class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-sync-alt me-1"></i>Refresh
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-custom mb-0">
                            <thead>
                                <tr>
                                    <th>Timestamp</th>
                                    <th>User</th>
                                    <th>Action</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="status-indicator status-online"></div>
                                            <span class="fw-semibold">System</span>
                                        </div>
                                    </td>
                                    <td>Database backup completed</td>
                                    <td><span class="badge badge-success">Success</span></td>
                                    <td><span class="badge badge-success">Completed</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Financial Summary -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <div class="card-custom" id="financialReport" style="display: none;">
                <div class="card-header">
                    <h5 class="fw-bold mb-0">Financial Summary Report</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <p class="text-muted small mb-1">Total Revenue</p>
                            <h3 class="fw-bold mb-0">?125,430</h3>
                            <p class="text-success small mb-0">+15.3% from last month</p>
                        </div>
                        <div class="col-md-4">
                            <p class="text-muted small mb-1">Total Orders</p>
                            <h3 class="fw-bold mb-0">3,542</h3>
                            <p class="text-success small mb-0">+8.2% from last month</p>
                        </div>
                        <div class="col-md-4">
                            <p class="text-muted small mb-1">Average Order Value</p>
                            <h3 class="fw-bold mb-0">?35.40</h3>
                            <p class="text-info small mb-0">Per order</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Transaction Monitoring -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <div class="card-custom" id="transactionReport" style="display: none;">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0">Transaction Monitoring Report</h5>
                    <div class="d-flex gap-2">
                        <button class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-download me-1"></i>Export Transactions
                        </button>
                        <button class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-sync-alt me-1"></i>Refresh
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-custom mb-0">
                            <thead>
                                <tr>
                                    <th>Transaction ID</th>
                                    <th>Date</th>
                                    <th>Amount</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>#TRX-001</td>
                                    <td>2024-01-31 10:30 AM</td>
                                    <td>?1,250.00</td>
                                    <td><span class="badge badge-success">Completed</span></td>
                                    <td><span class="badge badge-success">Completed</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Report type switching
        document.getElementById('reportType').addEventListener('change', function() {
            const reportType = this.value;
            
            // Hide all reports
            document.getElementById('systemReport').style.display = 'none';
            document.getElementById('userReport').style.display = 'none';
            document.getElementById('financialReport').style.display = 'none';
            document.getElementById('transactionReport').style.display = 'none';
            
            // Show selected report
            switch(reportType) {
                case 'system':
                    document.getElementById('systemReport').style.display = 'block';
                    break;
                case 'user':
                    document.getElementById('userReport').style.display = 'block';
                    break;
                case 'financial':
                    document.getElementById('financialReport').style.display = 'block';
                    break;
                case 'transaction':
                    document.getElementById('transactionReport').style.display = 'block';
                    break;
            }
        });

        // Initialize charts
        const systemCtx = document.getElementById('systemChart')?.getContext('2d');
        if (systemCtx) {
            new Chart(systemCtx, {
                type: 'line',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                    datasets: [{
                        label: 'System Health',
                        data: [95, 92, 88, 90, 93],
                        borderColor: '#d97706',
                        backgroundColor: 'rgba(217, 119, 6, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                    label: 'Sales',
                    data: [45, 120, 215, 180, 145, 125, 190, 165, 135, 110, 95, 75],
                    backgroundColor: '#d97706',
                    borderRadius: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: { display: false }
                },
                scales: { y: { beginAtZero: true } }
            }
        });
    </script>
}