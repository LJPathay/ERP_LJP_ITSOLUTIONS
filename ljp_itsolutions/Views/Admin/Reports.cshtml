@model ljp_itsolutions.Services.AdminReportsData
@{
    ViewData["Title"] = "Business Reports";
}

<div class="container-fluid py-2">
    <!-- Top Metrics Row (Compact) -->
    <div class="row g-3 mb-4">
        <div class="col-lg-4 col-md-6">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden" style="border-left: 3px solid #0d6efd !important;">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted x-small fw-bold text-uppercase tracking-wider mb-1">Total Revenue</p>
                            <h4 class="fw-bold mb-1">₱@Model.TotalRevenue.ToString("N2")</h4>
                            <div class="d-flex align-items-center gap-1">
                                <span class="badge bg-primary bg-opacity-10 text-primary xx-small fw-bold">ALL TIME</span>
                                <span class="text-muted xx-small">Completed orders</span>
                            </div>
                        </div>
                        <div class="bg-primary bg-opacity-10 rounded-3 p-2 text-primary">
                            <i class="fas fa-peso-sign"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden" style="border-left: 3px solid #6c757d !important;">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted x-small fw-bold text-uppercase tracking-wider mb-1">Total Orders</p>
                            <h4 class="fw-bold mb-1">@Model.TotalOrders</h4>
                            <div class="d-flex align-items-center gap-1">
                                <span class="badge bg-secondary bg-opacity-10 text-secondary xx-small fw-bold">SYSTEM WIDE</span>
                                <span class="text-muted xx-small">Transactions</span>
                            </div>
                        </div>
                        <div class="bg-secondary bg-opacity-10 rounded-3 p-2 text-secondary">
                            <i class="fas fa-shopping-bag"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden" style="border-left: 3px solid #ffc107 !important;">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted x-small fw-bold text-uppercase tracking-wider mb-1">Active Promotions</p>
                            <h4 class="fw-bold mb-1">@Model.ActivePromotions</h4>
                            <div class="d-flex align-items-center gap-1">
                                <span class="badge bg-warning bg-opacity-10 text-warning xx-small fw-bold">LIVE</span>
                                <span class="text-muted xx-small">Campaigns running</span>
                            </div>
                        </div>
                        <div class="bg-warning bg-opacity-10 rounded-3 p-2 text-warning">
                            <i class="fas fa-tags"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Report Modules -->
    <h6 class="fw-bold text-dark mb-3 ps-1">Report Modules</h6>
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card border shadow-sm rounded-3 h-100">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="bg-primary bg-opacity-10 p-3 rounded-circle d-flex align-items-center justify-content-center">
                            <i class="fas fa-chart-bar text-primary"></i>
                        </div>
                        <h6 class="fw-bold text-dark mb-0">Sales & Performance</h6>
                    </div>
                    <p class="text-muted small mb-4">Detailed sales analytics, cashier performance measures, and daily transaction summaries.</p>
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Reports_Manager", "Admin")" class="btn btn-outline-primary btn-sm text-start ps-3">
                            <i class="fas fa-user-tie me-2"></i>Manager Reports
                        </a>
                        <a href="@Url.Action("Reports_Cashier", "Admin")" class="btn btn-outline-primary btn-sm text-start ps-3">
                            <i class="fas fa-cash-register me-2"></i>Cashier Reports
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="d-flex justify-content-between align-items-center mb-3 px-1">
        <h6 class="fw-bold text-dark mb-0">Recent Activity</h6>
        <a href="@Url.Action("Transactions", "Admin")" class="btn btn-sm btn-link text-decoration-none fw-bold">View All <i class="fas fa-arrow-right ms-1"></i></a>
    </div>
    
    <div class="card border shadow-sm rounded-3 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3 fw-bold text-muted small">Order ID</th>
                        <th class="py-3 fw-bold text-muted small">Date</th>
                        <th class="py-3 fw-bold text-muted small">Amount</th>
                        <th class="pe-4 py-3 text-end fw-bold text-muted small">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.RecentTransactions != null && Model.RecentTransactions.Count > 0)
                    {
                        foreach (var order in Model.RecentTransactions)
                        {
                            <tr>
                                <td class="ps-4"><span class="text-dark family-monospace">#@order.OrderID.ToString().Substring(0, 8)...</span></td>
                                <td class="text-muted small">@order.OrderDate.ToString("MMM dd, HH:mm")</td>
                                <td class="fw-bold text-dark">₱@order.FinalAmount.ToString("N2")</td>
                                <td class="pe-4 text-end">
                                    @if (order.PaymentStatus == "Completed" || order.PaymentStatus == "Paid")
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success">Paid</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning bg-opacity-10 text-warning">@order.PaymentStatus</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted small">No recent transactions found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
