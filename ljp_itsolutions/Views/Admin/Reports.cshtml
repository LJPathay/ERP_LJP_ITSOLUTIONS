@model dynamic
@{
    ViewData["Title"] = "Business Reports";
}

<div class="container-fluid py-2">
    <!-- Top Metrics Row -->
    <div class="row g-3 mb-4">
        <div class="col-lg-4 col-md-6">
            <div class="card border shadow-sm rounded-3 h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <p class="text-muted small fw-bold mb-1">Total Revenue</p>
                            <h3 class="fw-bold mb-0 text-dark">₱@Model.TotalRevenue.ToString("N2")</h3>
                        </div>
                        <div class="bg-light rounded-circle p-3 d-flex align-items-center justify-content-center">
                            <i class="fas fa-peso-sign text-primary fa-lg"></i>
                        </div>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <span class="badge bg-light text-dark border">All Time</span>
                        <span class="text-muted small">Completed orders</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="card border shadow-sm rounded-3 h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <p class="text-muted small fw-bold mb-1">Total Orders</p>
                            <h3 class="fw-bold mb-0 text-dark">@Model.TotalOrders</h3>
                        </div>
                        <div class="bg-light rounded-circle p-3 d-flex align-items-center justify-content-center">
                            <i class="fas fa-shopping-bag text-primary fa-lg"></i>
                        </div>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <span class="badge bg-light text-dark border">System Wide</span>
                        <span class="text-muted small">Processed transactions</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="card border shadow-sm rounded-3 h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <p class="text-muted small fw-bold mb-1">Active Promotions</p>
                            <h3 class="fw-bold text-dark mb-0">@Model.ActivePromotions</h3>
                        </div>
                        <div class="bg-light rounded-circle p-3 d-flex align-items-center justify-content-center">
                            <i class="fas fa-tags text-warning fa-lg"></i>
                        </div>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <span class="badge bg-warning bg-opacity-10 text-warning">Running Now</span>
                        <span class="text-muted small">Marketing campaigns</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Report Modules -->
    <h6 class="fw-bold text-dark mb-3 ps-1">Report Modules</h6>
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card border shadow-sm rounded-3 h-100">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="bg-primary bg-opacity-10 p-3 rounded-circle d-flex align-items-center justify-content-center">
                            <i class="fas fa-chart-bar text-primary"></i>
                        </div>
                        <h6 class="fw-bold text-dark mb-0">Sales & Performance</h6>
                    </div>
                    <p class="text-muted small mb-4">Detailed sales analytics, cashier performance measures, and daily transaction summaries.</p>
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Reports_Manager", "Admin")" class="btn btn-outline-primary btn-sm text-start ps-3">
                            <i class="fas fa-user-tie me-2"></i>Manager Reports
                        </a>
                        <a href="@Url.Action("Reports_Cashier", "Admin")" class="btn btn-outline-primary btn-sm text-start ps-3">
                            <i class="fas fa-cash-register me-2"></i>Cashier Reports
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="d-flex justify-content-between align-items-center mb-3 px-1">
        <h6 class="fw-bold text-dark mb-0">Recent Activity</h6>
        <a href="@Url.Action("Transactions", "Admin")" class="btn btn-sm btn-link text-decoration-none fw-bold">View All <i class="fas fa-arrow-right ms-1"></i></a>
    </div>
    
    <div class="card border shadow-sm rounded-3 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3 fw-bold text-muted small">Order ID</th>
                        <th class="py-3 fw-bold text-muted small">Date</th>
                        <th class="py-3 fw-bold text-muted small">Amount</th>
                        <th class="pe-4 py-3 text-end fw-bold text-muted small">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.RecentTransactions != null && Model.RecentTransactions.Count > 0)
                    {
                        foreach (var order in Model.RecentTransactions)
                        {
                            <tr>
                                <td class="ps-4"><span class="text-dark family-monospace">#@order.OrderID.ToString().Substring(0, 8)...</span></td>
                                <td class="text-muted small">@order.OrderDate.ToString("MMM dd, HH:mm")</td>
                                <td class="fw-bold text-dark">₱@order.FinalAmount.ToString("N2")</td>
                                <td class="pe-4 text-end">
                                    @if (order.PaymentStatus == "Completed" || order.PaymentStatus == "Paid")
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success">Paid</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning bg-opacity-10 text-warning">@order.PaymentStatus</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted small">No recent transactions found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
