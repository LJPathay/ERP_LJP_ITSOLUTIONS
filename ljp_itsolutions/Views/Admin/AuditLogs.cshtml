@model IEnumerable<ljp_itsolutions.Models.AuditLog>
@{
    ViewData["Title"] = "Audit Logs";
    ViewData["PageTitle"] = "View Audit Logs";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4 d-none">
        <div class="col-12">
            <p class="text-muted mb-0">Monitor system activities and user actions</p>
        </div>
    </div>

    <!-- Audit Logs Table -->
    <div class="row">
        <div class="col-12">
            <div class="card-custom">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0">System Audit Logs</h5>
                    <div class="input-group input-group-sm w-auto">
                        <input type="text" id="logSearch" class="form-control" placeholder="Search logs...">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-custom mb-0">
                            <thead>
                                <tr>
                                    <th>Log ID</th>
                                    <th>Timestamp</th>
                                    <th>User</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var log in Model)
                                    {
                                        <tr>
                                            <td>#@log.AuditID</td>
                                            <td>@log.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                            <td>
                                                <div class="d-flex align-items-center gap-2">
                                                    <div class="user-avatar-sm bg-amber">
                                                        <i class="fas fa-user text-white small"></i>
                                                    </div>
                                                    <span class="fw-semibold">@(log.User?.FullName ?? "System")</span>
                                                    @if (log.User != null)
                                                    {
                                                        <small class="text-muted">(@log.User.Username)</small>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">@log.Action</span>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center py-4 text-muted">No audit logs found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#logSearch').on('keyup', function() {
                var value = $(this).val().toLowerCase();
                $("table tbody tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}