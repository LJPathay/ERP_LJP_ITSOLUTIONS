@model dynamic
@{
    ViewData["Title"] = "Cashier Reports";
    ViewBag.ModuleCount = 4;
}

<div class="container-fluid py-3">
    <!-- Key Metrics Cards -->
    <div class="row g-3 mb-4">
        <!-- Today's Sales -->
        <div class="col-lg-3 col-md-6">
            <div class="card border shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="flex-grow-1">
                            <p class="text-muted small fw-bold mb-2">Today's Sales</p>
                            <h3 class="fw-bold mb-2">₱@Model.TodaysSales.ToString("N2")</h3>
                            @if (Model.YesterdaysSales > 0)
                            {
                                var percentChange = ((Model.TodaysSales - Model.YesterdaysSales) / Model.YesterdaysSales) * 100;
                                var isPositive = percentChange >= 0;
                                <small class="@(isPositive ? "text-success" : "text-danger")">
                                    <i class="fas @(isPositive ? "fa-arrow-up" : "fa-arrow-down") me-1"></i>@Math.Abs(percentChange).ToString("N1")% vs yesterday
                                </small>
                            }
                            else
                            {
                                <small class="text-muted">No sales yesterday</small>
                            }
                        </div>
                        <div class="text-success opacity-50">
                            <i class="fas fa-peso-sign fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Transactions -->
        <div class="col-lg-3 col-md-6">
            <div class="card border shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="flex-grow-1">
                            <p class="text-muted small fw-bold mb-2">Transactions</p>
                            <h3 class="fw-bold mb-2">@Model.TodaysTransactions</h3>
                            <small class="text-primary">
                                Completed orders
                            </small>
                        </div>
                        <div class="text-primary opacity-50">
                            <i class="fas fa-shopping-bag fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Avg Transaction -->
        <div class="col-lg-3 col-md-6">
            <div class="card border shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="flex-grow-1">
                            <p class="text-muted small fw-bold mb-2">Avg. Transaction</p>
                            <h3 class="fw-bold mb-2">₱@Model.AvgTransactionValue.ToString("N2")</h3>
                            <small class="text-info">
                                Per order
                            </small>
                        </div>
                        <div class="text-info opacity-50">
                            <i class="fas fa-chart-bar fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Top Item -->
        <div class="col-lg-3 col-md-6">
            <div class="card border shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="flex-grow-1">
                            <p class="text-muted small fw-bold mb-2">Top Item</p>
                            <h6 class="fw-bold mb-1 text-truncate" title="@Model.TopItemName">@Model.TopItemName</h6>
                            <small class="text-warning">
                                <i class="fas fa-star me-1"></i>@Model.TopItemCount sold
                            </small>
                        </div>
                        <div class="text-warning opacity-50">
                            <i class="fas fa-trophy fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <!-- Recent Cash Transactions -->
        <div class="col-lg-8">
            <div class="card border shadow-sm h-100">
                <div class="card-header bg-white py-3">
                    <h5 class="fw-bold mb-0">Recent Cash Transactions</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Trax ID</th>
                                    <th>Time</th>
                                    <th>Customer</th>
                                    <th>Cashier</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.RecentTransactions != null && Model.RecentTransactions.Count > 0)
                                {
                                    foreach (var trx in Model.RecentTransactions)
                                    {
                                        <tr>
                                            <td class="ps-4"><span class="badge bg-secondary">#@trx.OrderID.ToString().Substring(0, 8)</span></td>
                                            <td>@trx.OrderDate.ToString("hh:mm tt")</td>
                                            <td>@(trx.Customer?.FullName ?? "Walk-in")</td>
                                            <td>@(trx.Cashier?.FullName ?? "N/A")</td>
                                            <td class="fw-bold">₱@trx.FinalAmount.ToString("N2")</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-4 text-muted">No cash transactions yet today</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Inventory Alerts -->
        <div class="col-lg-4">
            <div class="card border shadow-sm h-100">
                <div class="card-header bg-white py-3">
                    <h5 class="fw-bold mb-0">Low Stock Alerts</h5>
                </div>
                <div class="card-body">
                    @if (Model.LowStockItems != null && Model.LowStockItems.Count > 0)
                    {
                        foreach (var item in Model.LowStockItems)
                        {
                            <div class="alert alert-warning d-flex align-items-center justify-content-between mb-2 p-2" role="alert">
                                <div class="d-flex align-items-center overflow-hidden">
                                    <i class="fas fa-box-open me-2 text-warning"></i>
                                    <div class="text-truncate">
                                        <small class="fw-bold d-block text-truncate">@item.Name</small>
                                        <small class="text-muted">Only @item.StockQuantity left</small>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-check-circle text-success fa-3x mb-3"></i>
                            <h6 class="text-muted">Inventory levels look good!</h6>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
