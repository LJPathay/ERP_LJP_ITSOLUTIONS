@model dynamic
@{
    ViewData["Title"] = "Cashier Reports";
    ViewBag.ModuleCount = 4;
}

<div class="container-fluid py-4">
    <!-- Header with Back Button -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div class="d-flex align-items-center gap-3">
            <a href="@Url.Action("Reports", "Admin")" class="btn btn-white shadow-sm rounded-pill px-3 py-2">
                <i class="fas fa-arrow-left text-primary me-2"></i>Back
            </a>
            <div>
                <h5 class="fw-bold mb-0">Cashier Performance</h5>
                <p class="text-muted x-small mb-0">Daily sales metrics & transaction history</p>
            </div>
        </div>
        <div class="text-end d-none d-md-block">
            <div class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill border border-success border-opacity-25 x-small fw-bold">
                <i class="fas fa-circle me-2 small"></i>LIVE FEED
            </div>
        </div>
    </div>

    <!-- Key Metrics Cards -->
    <div class="row g-3 mb-4">
        <!-- Today's Sales -->
        <div class="col-lg-3 col-md-6">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden" style="border-left: 3px solid #10b981 !important;">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted x-small fw-bold text-uppercase tracking-wider mb-1">Today's Revenue</p>
                            <h4 class="fw-bold mb-1">₱@Model.TodaysSales.ToString("N2")</h4>
                            @if (Model.YesterdaysSales > 0)
                            {
                                var percentChange = ((Model.TodaysSales - Model.YesterdaysSales) / Model.YesterdaysSales) * 100;
                                <div class="d-flex align-items-center gap-1">
                                    <span class="text-@(percentChange >= 0 ? "success" : "danger") x-small fw-bold">
                                        <i class="fas @(percentChange >= 0 ? "fa-caret-up" : "fa-caret-down") me-1"></i>@Math.Abs(percentChange).ToString("N1")%
                                    </span>
                                    <span class="text-muted xx-small">vs yesterday</span>
                                </div>
                            } else {
                                <div class="text-muted xx-small italic opacity-50">No previous day data</div>
                            }
                        </div>
                        <div class="bg-success bg-opacity-10 rounded-3 p-2 text-success">
                            <i class="fas fa-peso-sign"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Transactions -->
        <div class="col-lg-3 col-md-6">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden" style="border-left: 3px solid #3b82f6 !important;">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted x-small fw-bold text-uppercase tracking-wider mb-1">Transactions</p>
                            <h4 class="fw-bold mb-1">@Model.TodaysTransactions</h4>
                            <div class="d-flex align-items-center gap-1">
                                <span class="badge bg-primary bg-opacity-10 text-primary xx-small fw-bold">VOLUME</span>
                                <span class="text-muted xx-small">Orders today</span>
                            </div>
                        </div>
                        <div class="bg-primary bg-opacity-10 rounded-3 p-2 text-primary">
                            <i class="fas fa-shopping-bag"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Avg Transaction -->
        <div class="col-lg-3 col-md-6">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden" style="border-left: 3px solid #8b5cf6 !important;">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted x-small fw-bold text-uppercase tracking-wider mb-1">Avg. Ticket</p>
                            <h4 class="fw-bold mb-1">₱@Model.AvgTransactionValue.ToString("N2")</h4>
                             <div class="d-flex align-items-center gap-1">
                                <span class="badge bg-purple bg-opacity-10 text-purple xx-small fw-bold" style="color: #8b5cf6; background: rgba(139, 92, 246, 0.1);">EFFICIENCY</span>
                                <span class="text-muted xx-small">Per customer</span>
                            </div>
                        </div>
                        <div class="bg-purple bg-opacity-10 rounded-3 p-2 text-purple" style="color: #8b5cf6; background: rgba(139, 92, 246, 0.1);">
                            <i class="fas fa-chart-pie"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Top Item -->
        <div class="col-lg-3 col-md-6">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden" style="border-left: 3px solid #f59e0b !important;">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="overflow-hidden">
                            <p class="text-muted x-small fw-bold text-uppercase tracking-wider mb-1">Best Seller</p>
                            <h6 class="fw-bold mb-1 text-truncate" title="@Model.TopItemName">@Model.TopItemName</h6>
                            <div class="d-flex align-items-center gap-1">
                                <span class="badge bg-warning bg-opacity-10 text-warning xx-small fw-bold">TOP PICK</span>
                                <span class="text-muted xx-small">@Model.TopItemCount sold</span>
                            </div>
                        </div>
                        <div class="bg-warning bg-opacity-10 rounded-3 p-2 text-warning">
                            <i class="fas fa-star"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <!-- Recent Cash Transactions -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-header bg-white border-0 py-3 px-4 d-flex justify-content-between align-items-center">
                    <h6 class="fw-bold mb-0 text-dark">Recent Transactions</h6>
                    <a href="@Url.Action("Transactions", "Admin")" class="text-decoration-none xx-small fw-bold text-primary">VIEW ALL <i class="fas fa-chevron-right ms-1"></i></a>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4 py-2 text-uppercase xx-small fw-bold text-muted">ID</th>
                                <th class="py-2 text-uppercase xx-small fw-bold text-muted">Time</th>
                                <th class="py-2 text-uppercase xx-small fw-bold text-muted">Customer</th>
                                <th class="py-2 text-uppercase xx-small fw-bold text-muted">Cashier</th>
                                <th class="pe-4 py-2 text-uppercase xx-small fw-bold text-muted text-end">Amount Paid</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.RecentTransactions != null && Model.RecentTransactions.Count > 0)
                            {
                                foreach (var trx in Model.RecentTransactions)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <span class="family-monospace text-dark fw-bold">#@trx.OrderID.ToString().Substring(0, 8)</span>
                                        </td>
                                        <td class="text-muted small">@trx.OrderDate.ToString("hh:mm tt")</td>
                                        <td>
                                            <div class="d-flex align-items-center gap-2">
                                                <div class="avatar-xs bg-light rounded-circle d-flex align-items-center justify-content-center" style="width: 24px; height: 24px;">
                                                    <i class="fas fa-user text-muted x-small"></i>
                                                </div>
                                                <span class="text-dark small">@(trx.Customer?.FullName ?? "Walk-in")</span>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-light text-dark rounded-pill px-2 border">@(trx.Cashier?.FullName ?? "System")</span>
                                        </td>
                                        <td class="pe-4 text-end fw-bold text-primary">₱@trx.FinalAmount.ToString("N2")</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-5 text-muted">
                                        <i class="fas fa-receipt fa-3x opacity-25 mb-3 d-block"></i>
                                        No cash transactions recorded today.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Inventory Alerts -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-header bg-white border-0 py-3 px-4">
                    <h5 class="fw-bold mb-0 text-dark">Inventory Risk</h5>
                </div>
                <div class="card-body px-4 pt-0">
                    <p class="text-muted x-small mb-4">Items listed below are falling below safe operating thresholds.</p>
                    
                    @if (Model.LowStockItems != null && Model.LowStockItems.Count > 0)
                    {
                        <div class="d-flex flex-column gap-3">
                            @foreach (var item in Model.LowStockItems)
                            {
                                var pct = (item.StockQuantity / 20.0) * 100.0;
                                <div class="inventory-alert-item">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <span class="fw-bold text-dark small">@item.Name</span>
                                        <span class="badge @(item.StockQuantity < 5 ? "bg-danger" : "bg-warning") bg-opacity-10 text-@(item.StockQuantity < 5 ? "danger" : "warning") x-small">
                                            @item.StockQuantity units left
                                        </span>
                                    </div>
                                    <div class="progress" style="height: 4px;">
                                        <div class="progress-bar @(item.StockQuantity < 5 ? "bg-danger" : "bg-warning")" role="progressbar" style="width: @pct%"></div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="avatar-lg bg-success bg-opacity-10 text-success rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 64px; height: 64px;">
                                <i class="fas fa-check-circle fa-2x"></i>
                            </div>
                            <h6 class="fw-bold text-dark mb-1">All Clear</h6>
                            <p class="text-muted small mb-0">Stock levels are currently optimal.</p>
                        </div>
                    }
                </div>
                <div class="card-footer bg-light border-0 p-3 mt-auto">
                    <a href="@Url.Action("InventoryOverview", "Admin")" class="btn btn-primary w-100 rounded-pill fw-bold btn-sm">
                        <i class="fas fa-truck-loading me-2"></i>Restock Management
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .x-small { font-size: 0.725rem; }
    .tracking-wider { letter-spacing: 0.05em; }
    .family-monospace { font-family: 'SFMono-Regular', Consolas, 'Liberation Mono', Menlo, monospace; }
    
    .inventory-alert-item {
        padding: 8px 0;
    }
    
    @@media print {
        .sidebar, .layout-header, .btn-white { display: none !important; }
        .content { margin: 0 !important; padding: 0 !important; width: 100% !important; }
        .card { box-shadow: none !important; border: 1px solid #eee !important; }
    }
</style>

