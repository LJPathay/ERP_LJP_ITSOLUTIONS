@{
    ViewData["Title"] = "Cashier Reports";
    ViewBag.ModuleCount = 4;
}



<!-- Cashier Reports Content -->
<div class="container-fluid">
    <!-- Daily Sales Summary -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <div class="card-custom">
                <div class="card-header">
                    <h5 class="fw-bold mb-0">Daily Sales Summary</h5>
                    <div class="d-flex gap-2">
                        <button class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-calendar me-2"></i>Today
                        </button>
                        <button class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-calendar-alt me-2"></i>This Week
                        </button>
                        <button class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-calendar me-2"></i>This Month
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <p class="text-muted small mb-1">Today's Sales</p>
                            <h3 class="fw-bold mb-0">?2,450</h3>
                            <p class="text-success small mb-0">+5.2% from yesterday</p>
                        </div>
                        </div>
                        <div class="col-md-4">
                            <p class="text-muted small mb-1">Transactions</p>
                            <h3 class="fw-bold mb-0">156</h3>
                            <p class="text-muted small mb-0">Average: ?15.75</p>
                        </div>
                        </div>
                        <div class="col-md-4">
                            <p class="text-muted small mb-1">Top Item</p>
                            <h3 class="fw-bold mb-0">Caramel Macchiato</h3>
                            <p class="text-muted small mb-0">42 sold</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cash Transactions -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <div class="card-custom">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0">Cash Transactions</h5>
                    <div class="d-flex gap-2">
                        <button class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-download me-2"></i>Export
                        </button>
                        <button class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-sync-alt me-2"></i>Refresh
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-custom mb-0">
                            <thead>
                                <tr>
                                    <th>Transaction ID</th>
                                    <th>Time</th>
                                    <th>Cashier</th>
                                    <th>Amount</th>
                                    <th>Payment Method</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>#CASH-001</td>
                                    <td>09:30 AM</td>
                                    <td>John Doe</td>
                                    <td><span class="badge badge-amber">Cashier</span></td>
                                    <td>?50.00</td>
                                    <td><span class="badge badge-success">Cash</span></td>
                                </tr>
                                <tr>
                                    <td>#CASH-002</td>
                                    <td>09:45 AM</td>
                                    <td>Jane Smith</td>
                                    <td><span class="badge badge-amber">Cashier</span></td>
                                    <td>?75.00</td>
                                    <td><span class="badge badge-success">Card</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Shift Summary -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <div class="card-custom">
                <div class="card-header">
                    <h5 class="fw-bold mb-0">Shift Summary</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <p class="text-muted small mb-1">Current Shift</p>
                            <h4 class="fw-bold">Morning Shift</h4>
                            <p class="text-muted small mb-1">Time: 6:00 AM - 2:00 PM</p>
                            <p class="text-muted small mb-1">Cashier: <span class="badge badge-amber">John Doe</span></p>
                            <p class="text-muted small mb-1">Sales: <span class="text-success">?1,250</span></p>
                        </div>
                        </div>
                        <div class="col-md-4">
                            <p class="text-muted small mb-1">Previous Shift</p>
                            <h4 class="fw-bold">Evening Shift</h4>
                            <p class="text-muted small mb-1">Time: 2:00 PM - 10:00 PM</p>
                            <p class="text-muted small mb-1">Cashier: <span class="badge badge-amber">Jane Smith</span></p>
                            <p class="text-muted small mb-1">Sales: <span class="text-success">?980</span></p>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Inventory Alerts -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <div class="card-custom">
                <div class="card-header">
                    <h5 class="fw-bold mb-0">Inventory Alerts</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning d-flex align-items-center" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <div>
                            <h6 class="mb-0">Low Stock Alert</h6>
                            <p class="mb-0">3 items are running low on stock</p>
                            <p class="mb-0"><strong>Items:</strong> Coffee Beans, Milk, Sugar</p>
                            <button class="btn btn-sm btn-outline-secondary ms-2">View Details</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Daily Sales Chart
        const dailySalesCtx = document.getElementById('dailySalesChart').getContext('2d');
        new Chart(dailySalesCtx, {
            type: 'bar',
            data: {
                labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                datasets: [{
                    label: 'Sales',
                    data: [1200, 1350, 1100, 980, 750],
                    backgroundColor: '#d97706',
                    borderColor: '#d97706',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            display: true
                        }
                    }
                }
            }
        });

        // Cash Transactions Chart
        const cashTransactionsCtx = document.getElementById('cashTransactionsChart').getContext('2d');
        new Chart(cashTransactionsCtx, {
            type: 'doughnut',
            data: {
                labels: ['Cash', 'Card', 'Digital Wallet'],
                datasets: [{
                    data: [65, 25, 10],
                    backgroundColor: ['#d97706', '#f59e0b', '#34d399'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });

        // Inventory Status Chart
        const inventoryStatusCtx = document.getElementById('inventoryStatusChart').getContext('2d');
        new Chart(inventoryStatusCtx, {
            type: 'pie',
            data: {
                labels: ['In Stock', 'Low Stock', 'Out of Stock', 'Discontinued'],
                datasets: [{
                    data: [85, 8, 5, 2],
                    backgroundColor: ['#10b981', '#f59e0b', '#ef4444', '#f871c1c'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });

        document.addEventListener('DOMContentLoaded', function() {
            console.log('Cashier Reports loaded successfully');
        });
    </script>
}
