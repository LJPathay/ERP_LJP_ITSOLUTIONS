@{
    ViewData["Title"] = "System Configuration";
}

<div class="container-fluid">
    <div class="welcome-section mb-4">
        <h2 class="welcome-title">System Settings</h2>
        <p class="text-muted">Configure your ERP system settings, business rules, and integration parameters.</p>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card-custom h-100">
                <div class="card-header">
                    <h5 class="fw-bold mb-0">General Settings</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Language, timezone, and currency configuration.</p>
                    <button class="btn btn-outline-primary btn-sm">Configure</button>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card-custom h-100">
                <div class="card-header">
                    <h5 class="fw-bold mb-0">Security Policies</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Password requirements and session timeout settings.</p>
                    <button class="btn btn-outline-primary btn-sm">Configure</button>
                </div>
            </div>
        </div>
    </div>
</div>
