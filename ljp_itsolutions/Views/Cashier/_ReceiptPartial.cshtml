@model ljp_itsolutions.Models.Order
@{
    Layout = null;
    var cashierName = Model.Cashier?.FullName ?? "Staff";
    var receiptNo = Model.OrderID.ToString().Substring(0, 8).ToUpper();
}

<div class="thermal-receipt-container">
    <div class="thermal-receipt shadow-sm">
        <!-- Header Ribbon -->
        <div class="receipt-header text-center pt-3">
            <h2 class="receipt-title my-2">CASH RECEIPT</h2>
            <div class="separator">------------------------------------------</div>
        </div>

        <!-- Metadata -->
        <div class="receipt-metadata px-4 mb-3">
            <div class="receipt-row">
                <span class="label">Receipt :</span>
                <span class="value">@receiptNo</span>
            </div>
            <div class="receipt-row">
                <span class="label">Manager :</span>
                <span class="value">@cashierName</span>
            </div>
            <div class="receipt-row mt-2">
                <span class="value text-uppercase">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm:ss")</span>
            </div>
            <div class="receipt-row">
                <span class="label">Address</span>
            </div>
            
            <div class="receipt-row mt-2">
                <span class="label">Client :</span>
                <span class="value">@(Model.Customer?.FullName ?? "Guest")</span>
            </div>
            <div class="receipt-row">
                <span class="label">Location :</span>
                <span class="value">Store #001</span>
            </div>
        </div>

        <!-- Items -->
        <div class="receipt-items px-4 mb-3">
            @{ int i = 1; }
            @foreach (var item in Model.OrderDetails)
            {
                <div class="item-entry">
                    <div class="item-name">@i. @item.Product?.ProductName</div>
                    <div class="item-cost-row">
                        <span class="cost-label">Cost</span>
                        <span class="dots"></span>
                        <span class="cost-value">₱@item.Subtotal.ToString("N2")</span>
                    </div>
                </div>
                i++;
            }
        </div>

        <!-- Totals -->
        <div class="receipt-totals px-4">
            <div class="separator text-center">------------------------------------------</div>
            <div class="item-cost-row fw-bold py-1">
                <span class="cost-label">Total</span>
                <span class="dots border-dark"></span>
                <span class="cost-value">₱@Model.FinalAmount.ToString("N2")</span>
            </div>
            <div class="separator text-center">------------------------------------------</div>
            <div class="card-info mt-2 text-center small text-uppercase" style="letter-spacing: 1px;">
                XXXX XXXX XXXX 1234 @Model.PaymentMethod
            </div>
        </div>

        <!-- Footer -->
        <div class="receipt-footer text-center mt-4 pb-5">
            <p class="mb-2 fw-bold text-uppercase">Thank You For Your Business!</p>
            
            <div class="barcode-container my-3">
                <span class="barcode-number">@receiptNo</span>
            </div>

        <!-- Torn Edge Effect -->
        <div class="torn-edge"></div>
    </div>
</div>

<style>
    :root {
        --receipt-width: 380px;
    }

    .thermal-receipt-container {
        background: #f0f0f0; /* Contrast background for the paper */
        padding: 40px 20px;
        display: flex;
        justify-content: center;
    }

    .thermal-receipt {
        font-family: 'Courier New', Courier, monospace;
        color: #1a1a1a;
        width: 100%;
        max-width: var(--receipt-width);
        background: #fff;
        position: relative;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        padding-bottom: 20px;
    }

    .receipt-title {
        font-size: 1.5rem;
        font-weight: 900;
        letter-spacing: 2px;
        color: #000;
    }

    .separator {
        font-size: 0.9rem;
        letter-spacing: -1px;
        color: #444;
        margin: 5px 0;
    }

    .receipt-row {
        display: flex;
        justify-content: flex-start;
        font-size: 0.9rem;
        line-height: 1.3;
        margin-bottom: 2px;
    }

    .receipt-row .label {
        width: 90px;
        font-weight: 600;
    }

    .item-entry {
        margin-bottom: 10px;
        font-size: 0.9rem;
    }

    .item-name {
        font-weight: 600;
        text-transform: uppercase;
    }

    .item-cost-row {
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .item-cost-row .dots {
        flex-grow: 1;
        border-bottom: 1px dotted #888;
        height: 14px;
        margin: 0 5px;
    }

    .barcode-visual {
        font-size: 2rem;
        letter-spacing: -2px;
        font-weight: 100;
        color: #000;
        line-height: 0.8;
    }

    .barcode-number {
        font-size: 0.8rem;
        display: block;
        letter-spacing: 4px;
        margin-top: 5px;
    }

    .support-info {
        font-size: 0.75rem;
        line-height: 1.4;
        color: #666;
    }

    /* Torn Edge Effect */
    .torn-edge {
        position: absolute;
        bottom: -10px;
        left: 0;
        width: 100%;
        height: 15px;
        background: radial-gradient(circle, transparent, transparent 50%, #f0f0f0 50%, #f0f0f0 100%) 0 -10px/20px 20px repeat-x;
        /* Matches the container background color */
    }

    @@media print {
        @@page {
            margin: 0;
            size: auto;
        }
        
        body * { visibility: hidden; }
        
        .thermal-receipt-container {
            background: none !important;
            padding: 0 !important;
            margin: 0 !important;
            width: 100% !important;
            display: block !important;
        }

        .thermal-receipt {
            visibility: visible !important;
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            top: 20px;
            box-shadow: none !important;
            width: 320px !important;
        }

        .thermal-receipt * {
            visibility: visible !important;
        }

        .torn-edge {
            display: none !important;
        }

        #receiptModalContent {
            visibility: visible !important;
            background: none !important;
        }
    }
</style>
