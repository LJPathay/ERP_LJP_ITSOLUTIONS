@model IEnumerable<ljp_itsolutions.Models.User>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Role & User Management";
    var roles = ViewBag.Roles as IEnumerable<string> ?? Enumerable.Empty<string>();
}

<div class="container-fluid py-2">
    <!-- Action Bar -->
    <div class="row g-3 mb-4 align-items-center">
        <div class="col-md-4">
            <div class="input-group shadow-sm rounded-pill overflow-hidden border">
                <span class="input-group-text bg-white border-0 ps-3">
                    <i class="fas fa-search text-muted"></i>
                </span>
                <input type="text" id="userSearch" class="form-control border-0 shadow-none ps-2 py-2" placeholder="Search by name or username...">
            </div>
        </div>
        <div class="col-md-3">
            <select id="roleFilter" class="form-select shadow-sm rounded-pill border py-2">
                <option value="">All Access Roles</option>
                @foreach (var role in roles)
                {
                    <option value="@role">@role</option>
                }
            </select>
        </div>
        <div class="col-md-5 text-end">
            <div class="d-flex gap-2 justify-content-end">
                @if (ViewBag.ShowArchived == true)
                {
                    <a href="@Url.Action("Users", new { showArchived = false })" class="btn btn-outline-secondary rounded-pill px-4">
                        <i class="fas fa-users-cog me-2"></i>Active Personnel
                    </a>
                }
                else
                {
                    <a href="@Url.Action("Users", new { showArchived = true })" class="btn btn-light border rounded-pill px-4">
                        <i class="fas fa-archive me-2 text-muted"></i>Archived
                    </a>
                    <button class="btn btn-primary rounded-pill px-4" data-bs-toggle="modal" data-bs-target="#addUserModal">
                        <i class="fas fa-plus-circle me-2"></i>Create User
                    </button>
                }
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success border-0 shadow-sm rounded-4 alert-dismissible fade show mb-4 py-3">
            <div class="d-flex align-items-center">
                <i class="fas fa-check-circle me-3 fa-lg"></i>
                <div>@TempData["Success"]</div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table align-middle mb-0 table-hover" id="usersTable">
                    <thead class="bg-light bg-opacity-50">
                        <tr>
                            <th class="ps-4 py-3 text-uppercase x-small fw-bold text-muted">Full Name</th>
                            <th class="py-3 text-uppercase x-small fw-bold text-muted">Account Identifiers</th>
                            <th class="py-3 text-uppercase x-small fw-bold text-muted">System Role</th>
                            <th class="py-3 text-uppercase x-small fw-bold text-muted text-center">Security Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr class="user-row" data-role="@user.Role" style="cursor: pointer;" 
                                onclick="openEditUserModal('@user.UserID', '@user.FullName', '@user.Username', '@user.Email', '@user.Role', @user.IsActive.ToString().ToLower())">
                                <td class="ps-4">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="avatar-sm rounded-circle d-flex align-items-center justify-content-center fw-bold text-white shadow-sm" 
                                             style="background: linear-gradient(135deg, var(--primary-color), var(--secondary-color)); width: 38px; height: 38px;">
                                            @(user.FullName?.Substring(0, 1) ?? "U")
                                        </div>
                                        <div class="user-info">
                                            <p class="mb-0 fw-bold text-dark">@user.FullName</p>
                                            <p class="text-muted x-small mb-0">Member since @user.CreatedAt.ToString("MMM yyyy")</p>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="small">
                                        <div class="d-flex align-items-center gap-2 mb-1">
                                            <i class="fas fa-user-circle text-muted x-small"></i>
                                            <span class="user-search-content fw-medium">@user.Username</span>
                                        </div>
                                        <div class="d-flex align-items-center gap-2">
                                            <i class="fas fa-envelope text-muted x-small"></i>
                                            <span class="text-muted">@(user.Email ?? "No email linked")</span>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge rounded-pill bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25 px-3 caps">
                                        @user.Role
                                    </span>
                                </td>
                                <td class="text-center">
                                    @if (user.IsActive)
                                    {
                                        <span class="badge rounded-pill bg-success px-3">ACTIVE</span>
                                    }
                                    else
                                    {
                                        <span class="badge rounded-pill bg-danger px-3">ARCHIVED</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- Pagination Controls -->
        <div class="d-flex justify-content-between align-items-center p-3 bg-light border-top">
            <div class="text-muted x-small">
                Showing <span id="startRange">0</span> to <span id="endRange">0</span> of <span id="totalItems">0</span> personnel
            </div>
            <nav>
                <ul class="pagination pagination-sm mb-0" id="pagination">
                    <!-- Pagination buttons will be injected here -->
                </ul>
            </nav>
        </div>
    </div>
</div>
</div>

<!-- Modals (Refined) -->
<div class="modal fade" id="addUserModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header bg-light border-0 pb-0 pt-4 px-4">
                <h5 class="fw-bold text-dark"><i class="fas fa-user-plus text-primary me-2"></i>Provision New User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="addUserForm">
                @Html.AntiForgeryToken()
                <div class="modal-body p-4">
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label x-small fw-bold text-muted">Legal Full Name</label>
                            <input type="text" name="FullName" id="add-fullname" class="form-control rounded-3" placeholder="e.g. John Doe" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label x-small fw-bold text-muted">Account Username</label>
                            <input type="text" name="Username" id="add-username" class="form-control rounded-3" placeholder="unique_handler" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label x-small fw-bold text-muted">Email</label>
                            <input type="email" name="Email" id="add-email" class="form-control rounded-3" placeholder="user@coffee.local" required>
                        </div>
                        <div class="col-12">
                            <label class="form-label x-small fw-bold text-muted">Security Role Assignment</label>
                            <select name="Role" id="add-role" class="form-select rounded-3" required>
                                @foreach (var role in roles)
                                {
                                    <option value="@role">@role</option>
                                }
                            </select>
                        </div>
                        <div class="col-12">
                            <label class="form-label x-small fw-bold text-muted">Initial Access Password</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 rounded-start-3"><i class="fas fa-lock x-small"></i></span>
                                <input type="password" name="Password" id="add-password" class="form-control border-start-0 rounded-end-3" required>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-0 p-4 pt-0">
                    <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary rounded-pill px-4" id="btnAddUser">Initialize Account</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Success Modal -->
<div class="modal fade" id="successModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-body text-center p-5">
                <div class="avatar-lg bg-success bg-opacity-10 text-success rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 80px; height: 80px;">
                    <i class="fas fa-check-circle fa-3x"></i>
                </div>
                <h4 class="fw-bold text-dark mb-2">Success!</h4>
                <p class="text-muted mb-4">The personnel account has been created successfully.</p>
                <div class="d-grid gap-2">
                    <button type="button" class="btn btn-primary rounded-pill fw-bold" onclick="location.reload()">Done</button>
                    <button type="button" class="btn btn-light rounded-pill fw-bold" onclick="resetAndAddAnother()">Add Another</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editUserModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header bg-light border-0 pb-0 pt-4 px-4">
                <h5 class="fw-bold text-dark"><i class="fas fa-user-edit text-warning me-2"></i>Update Personnel Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="EditUser" method="post" id="editUserForm">
                @Html.AntiForgeryToken()
                <input type="hidden" name="UserID" id="edit-userid" />
                <div class="modal-body p-4">
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label x-small fw-bold text-muted">Full Name</label>
                            <input type="text" name="FullName" id="edit-fullname" class="form-control rounded-3" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label x-small fw-bold text-muted">Username</label>
                            <input type="text" name="Username" id="edit-username" class="form-control rounded-3" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label x-small fw-bold text-muted">Email</label>
                            <input type="email" name="Email" id="edit-email" class="form-control rounded-3" required>
                        </div>
                        <div class="col-12">
                            <label class="form-label x-small fw-bold text-muted">Role Assignment</label>
                            <select name="Role" id="edit-role" class="form-select rounded-3" required>
                                @foreach (var role in roles)
                                {
                                    <option value="@role">@role</option>
                                }
                            </select>
                        </div>
                        <div class="col-12">
                            <div class="form-check form-switch p-2 bg-light rounded-3 ms-2">
                                <input type="checkbox" name="IsActive" id="edit-isactive" value="true" class="form-check-input ms-0 me-2" checked>
                                <label class="form-check-label fw-bold small">Enable Account Access</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-0 p-4 pt-0">
                    <button type="submit" class="btn btn-primary rounded-pill px-4">Commit Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Pagination state
        let currentPage = 1;
        const rowsPerPage = 10;
        let filteredRows = [];

        function initPagination() {
            const rows = Array.from(document.querySelectorAll('#usersTable tbody tr.user-row'));
            filteredRows = rows;
            updatePagination();
        }

        function updatePagination() {
            const totalItems = filteredRows.length;
            const totalPages = Math.ceil(totalItems / rowsPerPage);
            
            if (currentPage > totalPages) currentPage = Math.max(1, totalPages);

            const start = (currentPage - 1) * rowsPerPage;
            const end = start + rowsPerPage;

            // Hide all rows
            document.querySelectorAll('#usersTable tbody tr.user-row').forEach(row => row.style.display = 'none');
            
            // Show filtered
            filteredRows.slice(start, end).forEach(row => row.style.display = '');

            // Update range text
            if (totalItems > 0) {
                document.getElementById('startRange').textContent = start + 1;
                document.getElementById('endRange').textContent = Math.min(end, totalItems);
                document.getElementById('totalItems').textContent = totalItems;
            } else {
                document.getElementById('startRange').textContent = 0;
                document.getElementById('endRange').textContent = 0;
                document.getElementById('totalItems').textContent = 0;
            }

            renderPaginationButtons(totalPages);
        }

        function renderPaginationButtons(totalPages) {
            const container = document.getElementById('pagination');
            container.innerHTML = '';
            if (totalPages <= 1) return;

            const prevLi = document.createElement('li');
            prevLi.className = `page-item ${currentPage === 1 ? 'disabled' : ''}`;
            prevLi.innerHTML = `<a class="page-link" href="#" onclick="changePage(${currentPage - 1})"><i class="fas fa-chevron-left x-small"></i></a>`;
            container.appendChild(prevLi);

            for (let i = 1; i <= totalPages; i++) {
                if (i === 1 || i === totalPages || (i >= currentPage - 1 && i <= currentPage + 1)) {
                    const li = document.createElement('li');
                    li.className = `page-item ${i === currentPage ? 'active' : ''}`;
                    li.innerHTML = `<a class="page-link" href="#" onclick="changePage(${i})">${i}</a>`;
                    container.appendChild(li);
                } else if (i === currentPage - 2 || i === currentPage + 2) {
                    const li = document.createElement('li');
                    li.className = 'page-item disabled';
                    li.innerHTML = '<span class="page-link">...</span>';
                    container.appendChild(li);
                }
            }

            const nextLi = document.createElement('li');
            nextLi.className = `page-item ${currentPage === totalPages ? 'disabled' : ''}`;
            nextLi.innerHTML = `<a class="page-link" href="#" onclick="changePage(${currentPage + 1})"><i class="fas fa-chevron-right x-small"></i></a>`;
            container.appendChild(nextLi);
        }

        window.changePage = function(page) {
            if (page < 1 || page > Math.ceil(filteredRows.length / rowsPerPage)) return;
            currentPage = page;
            updatePagination();
            event.preventDefault();
        };

        const addUserModal = new bootstrap.Modal(document.getElementById('addUserModal'));
        const successModal = new bootstrap.Modal(document.getElementById('successModal'));
        const editModal = new bootstrap.Modal(document.getElementById('editUserModal'));

        window.openEditUserModal = function(id, fullname, username, email, role, isActive) {
            $('#edit-userid').val(id);
            $('#edit-fullname').val(fullname);
            $('#edit-username').val(username);
            $('#edit-email').val(email);
            $('#edit-role').val(role);
            $('#edit-isactive').prop('checked', isActive);
            editModal.show();
        };

        $('#addUserForm').on('submit', async function(e) {
            e.preventDefault();
            const btn = $('#btnAddUser');
            btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>Processing...');

            const data = {
                FullName: $('#add-fullname').val(),
                Username: $('#add-username').val(),
                Email: $('#add-email').val(),
                Role: $('#add-role').val(),
                Password: $('#add-password').val()
            };

            try {
                const res = await fetch('@Url.Action("CreateUser", "SuperAdmin")', {
                    method: 'POST',
                    headers: { 
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').first().val()
                    },
                    body: JSON.stringify(data)
                });

                if (res.ok) {
                    addUserModal.hide();
                    successModal.show();
                } else {
                    const err = await res.text();
                    alert(err || 'Failed to create user. Use unique identifiers.');
                }
            } catch (err) {
                alert('Connection error. Please try again.');
            } finally {
                btn.prop('disabled', false).html('Initialize Account');
            }
        });

        window.resetAndAddAnother = function() {
            $('#addUserForm')[0].reset();
            successModal.hide();
            addUserModal.show();
        };

        $(document).ready(function() {
            initPagination();

            // Search and Filter Logic
            function filterUsers() {
                var searchTerm = $('#userSearch').val().toLowerCase();
                var roleFilterValue = $('#roleFilter').val();
                var allRows = Array.from(document.querySelectorAll('.user-row'));

                filteredRows = allRows.filter(function(row) {
                    var $row = $(row);
                    var fullName = $row.find('.user-info p.fw-bold').text().toLowerCase();
                    var username = $row.find('.user-search-content').text().toLowerCase();
                    var userRole = $row.data('role');

                    var matchesSearch = fullName.includes(searchTerm) || username.includes(searchTerm);
                    var matchesRole = roleFilterValue === "" || userRole === roleFilterValue;

                    return matchesSearch && matchesRole;
                });

                currentPage = 1;
                updatePagination();

                if (filteredRows.length === 0) {
                    if ($('#noResultsRow').length === 0) {
                        $('#usersTable tbody').append('<tr id="noResultsRow"><td colspan="5" class="text-center py-5 text-muted"><i class="fas fa-user-slash fa-3x mb-3 opacity-25"></i><p>No personnel matching your criteria were found.</p></td></tr>');
                    }
                } else {
                    $('#noResultsRow').remove();
                }
            }

            $('#userSearch').on('keyup', filterUsers);
            $('#roleFilter').on('change', filterUsers);
        });
    </script>
}

<style>
    .hvr-danger:hover {
        background-color: var(--danger-color) !important;
        color: white !important;
        border-color: var(--danger-color) !important;
    }
    .x-small { font-size: 0.75rem; }
    .uppercase { text-transform: uppercase; }
    .caps { text-transform: uppercase; }
