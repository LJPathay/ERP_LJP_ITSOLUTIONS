@model dynamic
@{
    Layout = "_Layout";
    ViewData["Title"] = "System Control Center";
}

<div class="container-fluid py-2">
    <!-- Quick Actions (Refined) -->
    <div class="row g-4 mb-5">
        <div class="col-md-4 col-sm-6">
            <a href="@Url.Action("Users")" class="action-card-refined shadow-sm text-decoration-none">
                <div class="action-card-icon bg-amber-light text-amber">
                    <i class="fas fa-user-shield"></i>
                </div>
                <div class="ms-3">
                    <h6 class="fw-bold mb-1 text-dark">Identity & Access</h6>
                    <p class="text-muted x-small mb-0">Manage system users and access roles</p>
                </div>
            </a>
        </div>
        <div class="col-md-4 col-sm-6">
            <a href="@Url.Action("SystemSettings")" class="action-card-refined shadow-sm text-decoration-none">
                <div class="action-card-icon bg-secondary bg-opacity-10 text-secondary">
                    <i class="fas fa-sliders-h"></i>
                </div>
                <div class="ms-3">
                    <h6 class="fw-bold mb-1 text-dark">Global Settings</h6>
                    <p class="text-muted x-small mb-0">Advanced system-wide configurations</p>
                </div>
            </a>
        </div>
        <div class="col-md-4 col-sm-6">
            <a href="@Url.Action("Backups")" class="action-card-refined shadow-sm text-decoration-none">
                <div class="action-card-icon bg-success bg-opacity-10 text-success">
                    <i class="fas fa-cloud-download-alt"></i>
                </div>
                <div class="ms-3">
                    <h6 class="fw-bold mb-1 text-dark">System Backups</h6>
                    <p class="text-muted x-small mb-0">Manage data redundancy & recovery</p>
                </div>
            </a>
        </div>
    </div>

    <!-- Overview Section (Color Schema Aligned) -->
    <div class="row g-4 mb-5">
        <div class="col-xl-8">
            <div class="card-custom border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0 pt-4 px-4 d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="fw-bold mb-0">Enterprise Overview</h5>
                        <p class="text-muted x-small mb-0">Real-time system health and user engagement</p>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden" style="border-left: 3px solid #3b82f6 !important; background: #f8fafc;">
                                <div class="card-body p-3">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div>
                                            <p class="text-muted x-small fw-bold text-uppercase tracking-wider mb-1">Uptime</p>
                                            <h4 class="fw-bold text-primary mb-0">@Model.SystemUptime</h4>
                                        </div>
                                        <div class="bg-primary bg-opacity-10 rounded-3 p-2 text-primary">
                                            <i class="fas fa-server"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden" style="border-left: 3px solid #10b981 !important; background: #f8fafc;">
                                <div class="card-body p-3">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div>
                                            <p class="text-muted x-small fw-bold text-uppercase tracking-wider mb-1">Growth</p>
                                            <h4 class="fw-bold text-success mb-0">@Model.GrowthIndex</h4>
                                        </div>
                                        <div class="bg-success bg-opacity-10 rounded-3 p-2 text-success">
                                            <i class="fas fa-chart-line"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden" style="border-left: 3px solid #6366f1 !important; background: #f8fafc;">
                                <div class="card-body p-3">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div>
                                            <p class="text-muted x-small fw-bold text-uppercase tracking-wider mb-1">Total Users</p>
                                            <h4 class="fw-bold text-dark mb-0">@Model.UserCount</h4>
                                        </div>
                                        <div class="bg-indigo-light rounded-3 p-2 text-indigo" style="color: #6366f1; background: rgba(99, 102, 241, 0.1);">
                                            <i class="fas fa-users"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4 p-3 bg-light rounded-4 d-flex align-items-center gap-3">
                        <div class="pulse-indicator bg-success"></div>
                        <span class="small fw-medium text-muted">All background node services are performing optimally.</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Integrated Security Panel -->
        <div class="col-xl-4">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden">
                <div class="card-header bg-white border-0 pt-4 px-4 d-flex justify-content-between align-items-center">
                    <h6 class="fw-bold mb-0 text-uppercase small tracking-wider">
                        <i class="fas fa-shield-alt text-danger me-2"></i>Security Watch
                    </h6>
                    @if (Model.LockedOutUsersCount > 0)
                    {
                        <span class="badge bg-danger pulse-dot">ALERT</span>
                    }
                </div>
                <div class="card-body p-4">
                    <div class="security-stat-row mb-4">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <span class="text-muted small">Failed login attempts</span>
                            <span class="fw-bold @(Model.FailedLoginsCount > 10 ? "text-warning" : "text-dark")">@Model.FailedLoginsCount</span>
                        </div>
                        <div class="progress" style="height: 6px;">
                            <div class="progress-bar bg-warning" role="progressbar" style="width: @Math.Min(100, Model.FailedLoginsCount * 5)%"></div>
                        </div>
                    </div>
                    
                    <div class="security-stat-row mb-4">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <span class="text-muted small">Locked accounts</span>
                            <span class="fw-bold @(Model.LockedOutUsersCount > 0 ? "text-danger" : "text-dark")">@Model.LockedOutUsersCount</span>
                        </div>
                        <div class="progress" style="height: 6px;">
                            <div class="progress-bar bg-danger" role="progressbar" style="width: @(Model.UserCount > 0 ? (Model.LockedOutUsersCount * 100 / Model.UserCount) : 0)%"></div>
                        </div>
                    </div>

                    <a href="@Url.Action("AuditLogs")" class="btn btn-sm btn-dark w-100 rounded-pill mt-2">
                        View Audit Trails <i class="fas fa-arrow-right ms-2 x-small"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent System Activity -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white border-0 py-4 px-4 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0">System Activity Audit</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead class="bg-light bg-opacity-50">
                                <tr>
                                    <th class="ps-4 text-uppercase x-small fw-bold text-muted">Operator</th>
                                    <th class="text-uppercase x-small fw-bold text-muted">Activity Description</th>
                                    <th class="text-uppercase x-small fw-bold text-muted">Timestamp</th>
                                    <th class="pe-4 text-end text-uppercase x-small fw-bold text-muted">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var log in Model.AuditLogs)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center gap-3">
                                                <div class="avatar-sm-refined rounded-circle text-white d-flex align-items-center justify-content-center fw-bold" style="background: var(--primary-color);">
                                                    @(log.User?.FullName?.Substring(0, 1) ?? "S")
                                                </div>
                                                <div>
                                                    <p class="mb-0 fw-bold small">@(log.User?.FullName ?? "System Process")</p>
                                                    <p class="text-muted x-small mb-0">ID: #@log.AuditID</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="small fw-medium">@log.Action</span>
                                        </td>
                                        <td>
                                            <span class="text-muted x-small">@log.Timestamp.ToString("MMM dd, yyyy â€¢ HH:mm:ss")</span>
                                        </td>
                                        <td class="pe-4 text-end">
                                            <span class="badge rounded-pill bg-success bg-opacity-10 text-success border border-success border-opacity-25 px-3">COMPLETED</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .action-card-refined {
        background: white;
        border: 1px solid var(--border-color);
        padding: 1.25rem;
        border-radius: 1.1rem;
        display: flex;
        align-items: center;
        transition: all 0.2s ease;
    }

    .action-card-refined:hover {
        transform: translateY(-3px);
        box-shadow: var(--shadow-md) !important;
        border-color: var(--accent-color);
    }

    .action-card-icon {
        width: 44px;
        height: 44px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
        flex-shrink: 0;
    }

    .stat-widget-refined {
        background: var(--light-bg);
        transition: all 0.2s ease;
    }

    .stat-widget-refined:hover {
        background: white;
        border-color: var(--accent-color) !important;
    }

    .pulse-indicator {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        animation: pulse-green 2s infinite;
    }

    .pulse-dot {
        animation: pulse-red 2s infinite;
    }

    @@keyframes pulse-green {
        0% { box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.7); }
        70% { box-shadow: 0 0 0 8px rgba(16, 185, 129, 0); }
        100% { box-shadow: 0 0 0 0 rgba(16, 185, 129, 0); }
    }

    @@keyframes pulse-red {
        0% { box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.7); }
        70% { box-shadow: 0 0 0 8px rgba(239, 68, 68, 0); }
        100% { box-shadow: 0 0 0 0 rgba(239, 68, 68, 0); }
    }

    .avatar-sm-refined { width: 36px; height: 36px; font-size: 0.85rem; }
    .uppercase { text-transform: uppercase; }
    .tracking-wider { letter-spacing: 0.05em; }
</style>
