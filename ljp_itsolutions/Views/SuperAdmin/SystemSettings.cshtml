@model Dictionary<string, string>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Global System Configuration";
    string GetVal(string key, string defaultVal = "") => Model.ContainsKey(key) ? Model[key] : defaultVal;
    bool GetBool(string key) => Model.ContainsKey(key) && (Model[key].ToLower() == "true" || Model[key].ToLower() == "on");
}

<div class="container-fluid py-2">
    <form asp-action="UpdateSettings" method="post">
        @Html.AntiForgeryToken()
        
        <!-- Header Info -->
        <div class="row mb-5 align-items-center">
            <div class="col">
                <p class="text-muted small mb-0"><i class="fas fa-info-circle me-1"></i> These settings affect all users and branch operations across the ERP.</p>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary rounded-pill px-5 shadow-sm">
                    <i class="fas fa-save me-2"></i>Apply Changes
                </button>
            </div>
        </div>

        <div class="row g-4">
            <!-- Infrastructure & Connectivity -->
            <div class="col-xl-4 col-md-6">
                <div class="card-custom h-100 border-0 shadow-sm overflow-hidden">
                    <div class="card-header bg-white border-0 pt-4 px-4">
                        <h6 class="fw-bold mb-0 text-dark"><i class="fas fa-network-wired text-primary me-2"></i>Infrastructure & Connectivity</h6>
                    </div>
                    <div class="card-body p-4">
                        <div class="mb-4">
                            <label class="form-label x-small fw-bold text-muted uppercase tracking-wider">SMTP Mail Server</label>
                            <input type="text" name="SmtpServer" class="form-control rounded-3" value="@GetVal("SmtpServer")" placeholder="smtp.mailtrap.io">
                        </div>
                        <div class="mb-4">
                            <label class="form-label x-small fw-bold text-muted uppercase tracking-wider">SMTP Port</label>
                            <input type="number" name="SmtpPort" class="form-control rounded-3" value="@GetVal("SmtpPort")" placeholder="587">
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded-4">
                            <h6 class="x-small fw-bold text-primary uppercase tracking-wider mb-2">Connectivity Alerts</h6>
                            <div class="form-check form-switch mb-2">
                                <input type="checkbox" name="EmailNotifications" class="form-check-input" value="true" @(GetBool("EmailNotifications") ? "checked" : "")>
                                <label class="form-check-label small">System Email Dispatch</label>
                            </div>
                            <div class="form-check form-switch">
                                <input type="checkbox" name="DailyReports" class="form-check-input" value="true" @(GetBool("DailyReports") ? "checked" : "")>
                                <label class="form-check-label small">Auto-generate Daily EOD</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Security Policies -->
            <div class="col-xl-4 col-md-6">
                <div class="card-custom h-100 border-0 shadow-sm overflow-hidden">
                    <div class="card-header bg-white border-0 pt-4 px-4">
                        <h6 class="fw-bold mb-0 text-dark"><i class="fas fa-shield-alt text-danger me-2"></i>Security Policies</h6>
                    </div>
                    <div class="card-body p-4">
                        <div class="mb-4">
                            <label class="form-label x-small fw-bold text-muted uppercase tracking-wider">Session Duration (Minutes)</label>
                            <input type="number" name="SessionTimeout" class="form-control rounded-3" value="@GetVal("SessionTimeout")">
                        </div>
                        
                        <div class="bg-light p-3 rounded-4 mb-3">
                            <div class="form-check form-switch mb-2">
                                <input type="checkbox" name="TwoFactorAuth" class="form-check-input" value="true" @(GetBool("TwoFactorAuth") ? "checked" : "")>
                                <label class="form-check-label fw-bold small">Enforce 2FA for Admins</label>
                            </div>
                            <div class="form-check form-switch MB-2">
                                <input type="checkbox" name="AllowPublicRegistration" class="form-check-input" value="true" @(GetBool("AllowPublicRegistration") ? "checked" : "")>
                                <label class="form-check-label fw-bold small">Allow Public Registration</label>
                            </div>
                            <div class="form-check form-switch">
                                <input type="checkbox" name="RequireNumbers" class="form-check-input" value="true" @(GetBool("RequireNumbers") ? "checked" : "")>
                                <label class="form-check-label fw-bold small">Strong Password Policy</label>
                            </div>
                        </div>

                        <div>
                            <label class="form-label x-small fw-bold text-muted uppercase tracking-wider">Min Password Length</label>
                            <input type="number" name="PasswordMinLength" class="form-control rounded-3" value="@GetVal("PasswordMinLength")">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Advanced System Control -->
            <div class="col-xl-4 col-md-12">
                <div class="card-custom h-100 border-0 shadow-sm overflow-hidden">
                    <div class="card-header bg-white border-0 pt-4 px-4">
                        <h6 class="fw-bold mb-0 text-dark"><i class="fas fa-microchip text-warning me-2"></i>Advanced System Control</h6>
                    </div>
                    <div class="card-body p-4">
                        <div class="mb-4">
                            <div class="p-3 rounded-4 bg-danger bg-opacity-10 border border-danger border-opacity-25">
                                <div class="form-check form-switch mb-1">
                                    <input type="checkbox" name="MaintenanceMode" class="form-check-input" value="true" @(GetBool("MaintenanceMode") ? "checked" : "")>
                                    <label class="form-check-label fw-bold text-danger">Maintenance Mode</label>
                                </div>
                                <div class="x-small text-danger opacity-75 pe-4">Restricts system access to SuperAdmins only while enabled.</div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label x-small fw-bold text-muted uppercase tracking-wider">Log Retention Policy (Days)</label>
                            <div class="input-group">
                                <input type="number" name="LogRetentionDays" class="form-control rounded-3" value="@GetVal("LogRetentionDays")" placeholder="30">
                                <span class="input-group-text bg-light border-0 x-small">days</span>
                            </div>
                            <div class="x-small text-muted mt-1">Audit logs older than this will be auto-purged.</div>
                        </div>

                        <div class="bg-amber-light p-3 rounded-4">
                            <h6 class="x-small fw-bold text-amber uppercase tracking-wider mb-2">Automated Maintenance</h6>
                            <div class="form-check form-switch mb-2">
                                <input type="checkbox" name="LowStockAlerts" class="form-check-input" value="true" @(GetBool("LowStockAlerts") ? "checked" : "")>
                                <label class="form-check-label small">Background Inventory Scanning</label>
                            </div>
                            <div class="form-check form-switch">
                                <input type="checkbox" id="backupToggle" class="form-check-input" checked disabled>
                                <label class="form-check-label small">Automatic Security Backups</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<style>
    .uppercase { text-transform: uppercase; }
    .tracking-wider { letter-spacing: 0.05em; }
    .x-small { font-size: 0.75rem; }
</style>
