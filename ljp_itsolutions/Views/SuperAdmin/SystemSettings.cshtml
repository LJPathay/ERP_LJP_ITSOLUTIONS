@model Dictionary<string, string>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Global System Configuration";
    string GetVal(string key, string defaultVal = "") => Model.ContainsKey(key) ? Model[key] : defaultVal;
    bool GetBool(string key) => Model.ContainsKey(key) && (Model[key].ToLower() == "true" || Model[key].ToLower() == "on");
}

<div class="container-fluid py-2">
    <form asp-action="UpdateSettings" method="post">
        @Html.AntiForgeryToken()
        
        <!-- Header Info -->
        <div class="row mb-5 align-items-center">
            <div class="col">
                <p class="text-muted small mb-0"><i class="fas fa-info-circle me-1"></i> These settings affect all users and branch operations across the ERP.</p>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary rounded-pill px-5 shadow-sm">
                    <i class="fas fa-save me-2"></i>Apply Changes
                </button>
            </div>
        </div>

        <div class="row g-4">
            <!-- Core System Settings -->
            <div class="col-xl-4 col-md-6">
                <div class="card-custom h-100 border-0 shadow-sm overflow-hidden">
                    <div class="card-header bg-white border-0 pt-4 px-4">
                        <h6 class="fw-bold mb-0 text-dark"><i class="fas fa-cogs text-primary me-2"></i>Core Identity</h6>
                    </div>
                    <div class="card-body p-4">
                        <div class="mb-4">
                            <label class="form-label x-small fw-bold text-muted uppercase tracking-wider">System Name</label>
                            <input type="text" name="SystemName" class="form-control rounded-3" value="@GetVal("SystemName")" placeholder="Coffee ERP">
                        </div>
                        <div class="mb-4">
                            <label class="form-label x-small fw-bold text-muted uppercase tracking-wider">Company Registered Name</label>
                            <input type="text" name="CompanyName" class="form-control rounded-3" value="@GetVal("CompanyName")" placeholder="LJP IT Solutions">
                        </div>
                        <div class="row g-3">
                            <div class="col-6">
                                <label class="form-label x-small fw-bold text-muted uppercase tracking-wider">Currency</label>
                                <input type="text" name="Currency" class="form-control rounded-3" value="@GetVal("Currency")" placeholder="PHP (â‚±)">
                            </div>
                            <div class="col-6">
                                <label class="form-label x-small fw-bold text-muted uppercase tracking-wider">Tax Rate (%)</label>
                                <input type="text" name="TaxRate" class="form-control rounded-3" value="@GetVal("TaxRate")" placeholder="12">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Security Policies -->
            <div class="col-xl-4 col-md-6">
                <div class="card-custom h-100 border-0 shadow-sm overflow-hidden">
                    <div class="card-header bg-white border-0 pt-4 px-4">
                        <h6 class="fw-bold mb-0 text-dark"><i class="fas fa-shield-alt text-danger me-2"></i>Security Policies</h6>
                    </div>
                    <div class="card-body p-4">
                        <div class="mb-4">
                            <label class="form-label x-small fw-bold text-muted uppercase tracking-wider">Session Duration (Minutes)</label>
                            <input type="number" name="SessionTimeout" class="form-control rounded-3" value="@GetVal("SessionTimeout")">
                            <div class="x-small text-muted mt-1">Users will be logged out after this period of inactivity.</div>
                        </div>
                        
                        <div class="bg-light p-3 rounded-4 mb-3">
                            <div class="form-check form-switch mb-2">
                                <input type="checkbox" name="TwoFactorAuth" class="form-check-input" value="true" @(GetBool("TwoFactorAuth") ? "checked" : "")>
                                <label class="form-check-label fw-bold small">Enforce 2FA for Admins</label>
                            </div>
                            <div class="form-check form-switch mb-2">
                                <input type="checkbox" name="RequireSpecialChars" class="form-check-input" value="true" @(GetBool("RequireSpecialChars") ? "checked" : "")>
                                <label class="form-check-label fw-bold small">Require Special Characters</label>
                            </div>
                            <div class="form-check form-switch">
                                <input type="checkbox" name="RequireNumbers" class="form-check-input" value="true" @(GetBool("RequireNumbers") ? "checked" : "")>
                                <label class="form-check-label fw-bold small">Require Numeric Digits</label>
                            </div>
                        </div>

                        <div>
                            <label class="form-label x-small fw-bold text-muted uppercase tracking-wider">Min Password Length</label>
                            <input type="number" name="PasswordMinLength" class="form-control rounded-3" value="@GetVal("PasswordMinLength")">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Operations & Alerts -->
            <div class="col-xl-4 col-md-12">
                <div class="card-custom h-100 border-0 shadow-sm overflow-hidden">
                    <div class="card-header bg-white border-0 pt-4 px-4">
                        <h6 class="fw-bold mb-0 text-dark"><i class="fas fa-bell text-warning me-2"></i>Branch Operations</h6>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3 mb-4">
                            <div class="col-6">
                                <label class="form-label x-small fw-bold text-muted uppercase tracking-wider">Opening Time</label>
                                <input type="time" name="BusinessHourStart" class="form-control rounded-3" value="@GetVal("BusinessHourStart")">
                            </div>
                            <div class="col-6">
                                <label class="form-label x-small fw-bold text-muted uppercase tracking-wider">Closing Time</label>
                                <input type="time" name="BusinessHourEnd" class="form-control rounded-3" value="@GetVal("BusinessHourEnd")">
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label x-small fw-bold text-muted uppercase tracking-wider">Low Stock Threshold</label>
                            <input type="number" name="LowStockThreshold" class="form-control rounded-3" value="@GetVal("LowStockThreshold")">
                            <div class="x-small text-muted mt-1">Global alert trigger value for product quantity.</div>
                        </div>

                        <div class="bg-amber-light p-3 rounded-4">
                            <h6 class="x-small fw-bold text-amber uppercase tracking-wider mb-3">Notification Dispatch</h6>
                            <div class="form-check form-switch mb-2">
                                <input type="checkbox" name="EmailNotifications" class="form-check-input" value="true" @(GetBool("EmailNotifications") ? "checked" : "")>
                                <label class="form-check-label small">System Email Alerts</label>
                            </div>
                            <div class="form-check form-switch mb-2">
                                <input type="checkbox" name="LowStockAlerts" class="form-check-input" value="true" @(GetBool("LowStockAlerts") ? "checked" : "")>
                                <label class="form-check-label small">Inventory Level Alerts</label>
                            </div>
                            <div class="form-check form-switch">
                                <input type="checkbox" name="DailyReports" class="form-check-input" value="true" @(GetBool("DailyReports") ? "checked" : "")>
                                <label class="form-check-label small">Auto-generate Daily EOD</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<style>
    .uppercase { text-transform: uppercase; }
    .tracking-wider { letter-spacing: 0.05em; }
    .x-small { font-size: 0.75rem; }
</style>
