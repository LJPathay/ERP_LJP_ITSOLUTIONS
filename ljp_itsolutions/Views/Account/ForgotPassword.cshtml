@{
    Layout = "_GuestLayout";
    ViewData["Title"] = "Forgot Password";
}

<div class="login-container">
    <div class="cafe-panel">
        <div class="cafe-logo">
            <img src="@(Url.Content("~/images/logo.png"))" alt="Coffee Shop ERP" />
        </div>
        <div class="cafe-tagline">Smart Customer Engagement &amp; Marketing Analytics</div>
    </div>

    <div class="form-panel">
        <div class="form-wrapper">
            <div class="mobile-logo">
                <img src="@(Url.Content("~/images/logo.png"))" alt="Coffee Shop ERP" />
            </div>

            <div class="login-card">
                <div class="login-header text-center mb-4">
                    <h2>Forgot Password</h2>
                    <p>Enter your username or email to receive reset instructions</p>
                </div>

                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-info border-0 shadow-sm mb-4">
                        <i class="fas fa-info-circle me-2"></i> @TempData["Message"]
                    </div>
                }

                <form asp-controller="Account" asp-action="ForgotPasswordSubmit" method="post" novalidate>
                    @Html.AntiForgeryToken()

                    <div class="form-group mb-4">
                        <label class="form-label fw-bold mb-2">Username or Email</label>
                        <div class="input-group-custom">
                            <i class="fas fa-user input-icon"></i>
                            <input name="username" class="form-control-custom" placeholder="Enter your username or email" required />
                        </div>
                    </div>

                    <button type="submit" class="btn-signin">Send Reset Instructions</button>

                    <div class="text-center mt-4">
                        <a class="forgot-link" asp-action="Login"><i class="fas fa-arrow-left me-2"></i>Back to Login</a>
                    </div>
                </form>
            </div>

            <p class="footer-text">Â© 2026 LJP IT SOLUTIONS</p>
        </div>
    </div>
</div>
