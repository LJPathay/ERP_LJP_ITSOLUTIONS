@model ljp_itsolutions.Models.ResetPasswordViewModel
@{
    Layout = "_GuestLayout";
    ViewData["Title"] = "Reset Password";
}

<div class="login-container">
    <div class="cafe-panel">
        <div class="cafe-logo">
            <img src="@(Url.Content("~/images/logo.png"))" alt="Coffee Shop ERP" />
        </div>
        <div class="cafe-tagline">Smart Customer Engagement &amp; Marketing Analytics</div>
    </div>

    <div class="form-panel">
        <div class="form-wrapper">
            <div class="mobile-logo">
                <img src="@(Url.Content("~/images/logo.png"))" alt="Coffee Shop ERP" />
            </div>

            <div class="login-card">
                <div class="login-header text-center mb-4">
                    <h2>Reset Password</h2>
                    <p>Enter your new password below</p>
                </div>

                <form asp-controller="Account" asp-action="ResetPassword" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <input asp-for="UserId" type="hidden" />
                    <input asp-for="Token" type="hidden" />

                    <div class="form-group mb-4">
                        <label asp-for="NewPassword" class="form-label fw-bold mb-2">New Password</label>
                        <div class="input-group-custom">
                            <i class="fas fa-lock input-icon"></i>
                            <input asp-for="NewPassword" type="password" class="form-control-custom" placeholder="Minimum 6 characters" />
                        </div>
                        <span asp-validation-for="NewPassword" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="ConfirmPassword" class="form-label fw-bold mb-2">Confirm New Password</label>
                        <div class="input-group-custom">
                            <i class="fas fa-check-circle input-icon"></i>
                            <input asp-for="ConfirmPassword" type="password" class="form-control-custom" placeholder="Repeat your new password" />
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn-signin">Reset Password</button>

                    <div class="text-center mt-4">
                        <a class="forgot-link" asp-action="Login"><i class="fas fa-arrow-left me-2"></i>Back to Login</a>
                    </div>
                </form>
            </div>

            <p class="footer-text">Â© 2026 LJP IT SOLUTIONS</p>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
