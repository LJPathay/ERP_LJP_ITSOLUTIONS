@model IEnumerable<ljp_itsolutions.Models.Customer>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Customer Experience & Loyalty";
}

<div class="container-fluid py-2">
    <!-- Action Bar & Filters -->
    <div class="row g-3 mb-4 align-items-center">
        <div class="col-md-4">
            <div class="input-group shadow-sm rounded-pill overflow-hidden border bg-white">
                <span class="input-group-text bg-transparent border-0 ps-3">
                    <i class="fas fa-search text-muted"></i>
                </span>
                <input type="text" id="customerSearch" class="form-control border-0 shadow-none ps-2 py-2" placeholder="Search by name or contact number...">
            </div>
        </div>
        <div class="col-md-3">
            <select id="tierFilter" class="form-select shadow-sm rounded-pill border py-2">
                <option value="">All Loyalty Tiers</option>
                <option value="Gold">Gold Tier (500+)</option>
                <option value="Silver">Silver Tier (300+)</option>
                <option value="Bronze">Bronze Tier (100+)</option>
                <option value="Member">New Member (0-99)</option>
            </select>
        </div>
        <div class="col text-end">
            <div class="d-flex gap-2 justify-content-end">
                <button class="btn btn-primary rounded-pill px-4 shadow-sm" data-bs-toggle="modal" data-bs-target="#addCustomerModal">
                    <i class="fas fa-plus-circle me-2"></i>New Customer
                </button>
            </div>
        </div>
    </div>

    <!-- Table Section -->
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table align-middle mb-0" id="customersTable">
                    <thead class="bg-light bg-opacity-50">
                        <tr>
                            <th class="ps-4 py-3 text-uppercase x-small fw-bold text-muted">Customer Identity</th>
                            <th class="py-3 text-uppercase x-small fw-bold text-muted">Contact Info</th>
                            <th class="py-3 text-uppercase x-small fw-bold text-muted">Loyalty Engagement</th>
                            <th class="py-3 text-uppercase x-small fw-bold text-muted">Account Tier</th>
                            <th class="pe-4 py-3 text-end text-uppercase x-small fw-bold text-muted">Management</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model)
                        {
                            var tier = customer.Points >= 500 ? "Gold" : (customer.Points >= 300 ? "Silver" : (customer.Points >= 100 ? "Bronze" : "Member"));
                            var tierClass = tier == "Gold" ? "bg-warning text-dark" : 
                                           (tier == "Silver" ? "bg-secondary text-white" : 
                                           (tier == "Bronze" ? "bg-bronze text-white" : "bg-light text-dark border"));
                            
                            <tr class="customer-row" data-tier="@tier">
                                <td class="ps-4">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="avatar-sm rounded-circle d-flex align-items-center justify-content-center fw-bold text-white shadow-sm" 
                                             style="background: linear-gradient(135deg, var(--primary-color), var(--secondary-color)); width: 38px; height: 38px;">
                                            @(customer.FullName?.Substring(0, 1) ?? "C")
                                        </div>
                                        <div class="customer-info">
                                            <p class="mb-0 fw-bold text-dark search-name">@customer.FullName</p>
                                            <p class="text-muted x-small mb-0">ID: #CST-@customer.CustomerID.ToString().PadLeft(4, '0')</p>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="small">
                                        <div class="d-flex align-items-center gap-2 mb-1">
                                            <i class="fas fa-phone text-muted x-small"></i>
                                            <span class="search-phone fw-medium">@customer.PhoneNumber</span>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex flex-column" style="max-width: 140px;">
                                        <div class="d-flex justify-content-between align-items-center mb-1">
                                            <span class="fw-bold text-dark small">@customer.Points</span>
                                            <span class="text-muted x-small">pts</span>
                                        </div>
                                        <div class="progress rounded-pill shadow-none" style="height: 4px;">
                                            <div class="progress-bar bg-warning rounded-pill shadow-none" role="progressbar" 
                                                 style="width: @(Math.Min(customer.Points / 20.0, 100))%"></div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge rounded-pill @tierClass px-3">@tier</span>
                                </td>
                                <td class="pe-4 text-end">
                                    <div class="d-flex gap-2 justify-content-end">
                                        @if (customer.Points >= 10)
                                        {
                                            <button class="btn btn-sm btn-success rounded-pill px-3 shadow-sm reward-btn"
                                                    data-id="@customer.CustomerID"
                                                    data-name="@customer.FullName"
                                                    data-email="@customer.Email"
                                                    title="Generate 15% reward code (costs 10 pts)">
                                                <i class="fas fa-gift me-1"></i>Reward
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-light rounded-pill px-3 text-muted" disabled
                                                    title="Needs at least 10 points">
                                                <i class="fas fa-gift me-1"></i>Reward
                                            </button>
                                        }
                                        <button class="btn btn-sm btn-white border rounded-pill px-3 shadow-sm text-primary edit-btn"
                                                data-id="@customer.CustomerID"
                                                data-name="@customer.FullName"
                                                data-phone="@customer.PhoneNumber"
                                                data-email="@customer.Email"
                                                data-points="@customer.Points">
                                            Edit
                                        </button>
                                        <form asp-action="DeleteCustomer" method="post" onsubmit="return confirm('Remove this customer record?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@customer.CustomerID" />
                                            <button type="submit" class="btn btn-sm btn-light text-danger border rounded-pill px-3">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Hidden CSRF token for AJAX -->
@Html.AntiForgeryToken()

<!-- ===== Reward Result Modal ===== -->
<div class="modal fade" id="rewardResultModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
            <div class="modal-header border-0 p-0">
                <div id="rewardModalHeader" class="w-100 text-center py-4 px-4 text-white"
                     style="background: linear-gradient(135deg, #15803d, #22c55e);">
                    <div style="font-size:44px;">üéÅ</div>
                    <h5 class="fw-bold mb-0 mt-2">Reward Code Generated!</h5>
                </div>
            </div>
            <div class="modal-body p-4">
                <p class="text-muted small mb-3" id="rewardCustomerName"></p>

                <!-- Code display -->
                <div class="p-3 rounded-4 text-center mb-3"
                     style="background: linear-gradient(135deg, #f0fdf4, #dcfce7); border: 2px dashed #22c55e;">
                    <p class="text-success x-small fw-bold text-uppercase mb-1" style="letter-spacing:2px;">Discount Code</p>
                    <p id="rewardCode" class="fw-bold mb-1 text-success" style="font-size:1.4rem; font-family:monospace; letter-spacing:3px;"></p>
                    <p class="x-small text-success mb-0">15% OFF ‚Äî Valid 30 days</p>
                </div>

                <!-- Status row -->
                <div id="rewardEmailStatus" class="alert border-0 rounded-3 x-small mb-3 d-flex align-items-center gap-2"></div>

                <!-- Copy button -->
                <button id="copyCodeBtn" class="btn btn-success w-100 rounded-pill py-2 fw-bold shadow-sm">
                    <i class="fas fa-copy me-2"></i>Copy Code to Clipboard
                </button>
            </div>
            <div class="modal-footer border-0 bg-light px-4 pb-4 pt-0">
                <button type="button" class="btn btn-light rounded-pill px-4 w-100" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Add Customer Modal -->
<div class="modal fade" id="addCustomerModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header border-0 pb-0 pt-4 px-4">
                <h5 class="modal-title fw-bold text-dark">Add New Customer</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="CreateCustomer" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body p-4">
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-muted">Full Name</label>
                        <input type="text" name="FullName" class="form-control rounded-3" required placeholder="e.g. John Doe" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-muted">Phone Number</label>
                        <input type="text" name="PhoneNumber" class="form-control rounded-3" required placeholder="e.g. 09123456789" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-muted">Email (Optional)</label>
                        <input type="email" name="Email" class="form-control rounded-3" placeholder="e.g. user@domain.com" />
                    </div>
                </div>
                <div class="modal-footer bg-light border-0">
                    <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary rounded-pill px-4">Register Customer</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Customer Modal -->
<div class="modal fade" id="editCustomerModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header border-0 pb-0 pt-4 px-4">
                <h5 class="modal-title fw-bold text-dark">Update Customer Profile</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="EditCustomer" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="CustomerID" id="edit-id" />
                <div class="modal-body p-4">
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-muted">Full Name</label>
                        <input type="text" name="FullName" id="edit-name" class="form-control rounded-3" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-muted">Phone Number</label>
                        <input type="text" name="PhoneNumber" id="edit-phone" class="form-control rounded-3" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-muted">Email (Optional)</label>
                        <input type="email" name="Email" id="edit-email" class="form-control rounded-3" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-muted">Points</label>
                        <input type="number" name="Points" id="edit-points" class="form-control rounded-3" required />
                    </div>
                </div>
                <div class="modal-footer bg-light border-0">
                    <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary rounded-pill px-4">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {

            /* ‚îÄ‚îÄ Search & Filter ‚îÄ‚îÄ */
            function filterCustomers() {
                var searchTerm = $('#customerSearch').val().toLowerCase();
                var tierFilter = $('#tierFilter').val();

                $('.customer-row').each(function() {
                    var row = $(this);
                    var customerName = row.find('.search-name').text().toLowerCase();
                    var customerPhone = row.find('.search-phone').text().toLowerCase();
                    var customerTier = row.data('tier');

                    var matchesSearch = customerName.includes(searchTerm) || customerPhone.includes(searchTerm);
                    var matchesTier = tierFilter === "" || customerTier === tierFilter;

                    if (matchesSearch && matchesTier) {
                        row.show();
                    } else {
                        row.hide();
                    }
                });

                if ($('.customer-row:visible').length === 0) {
                    if ($('#noResultsRow').length === 0) {
                        $('#customersTable tbody').append('<tr id="noResultsRow"><td colspan="5" class="text-center py-5 text-muted"><i class="fas fa-users-slash fa-3x mb-3 opacity-25"></i><p>No customers found matching your criteria.</p></td></tr>');
                    }
                } else {
                    $('#noResultsRow').remove();
                }
            }

            $('#customerSearch').on('keyup', filterCustomers);
            $('#tierFilter').on('change', filterCustomers);

            /* ‚îÄ‚îÄ Edit Customer ‚îÄ‚îÄ */
            $('.edit-btn').click(function() {
                const id     = $(this).data('id');
                const name   = $(this).data('name');
                const phone  = $(this).data('phone');
                const email  = $(this).data('email');
                const points = $(this).data('points');

                $('#edit-id').val(id);
                $('#edit-name').val(name);
                $('#edit-phone').val(phone);
                $('#edit-email').val(email);
                $('#edit-points').val(points);

                new bootstrap.Modal(document.getElementById('editCustomerModal')).show();
            });

            /* ‚îÄ‚îÄ Generate Reward ‚îÄ‚îÄ */
            $('.reward-btn').click(function() {
                var btn        = $(this);
                var customerId = btn.data('id');
                var name       = btn.data('name');
                var email      = btn.data('email');

                btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-1"></i>Generating...');

                $.ajax({
                    url: '@Url.Action("GenerateReward", "Marketing")',
                    type: 'POST',
                    contentType: 'application/json',
                    headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').first().val() },
                    data: JSON.stringify({ 
                        customerId: customerId,
                        pointsToDeduct: 10,
                        discountValue: 15,
                        rewardName: "15% Loyalty Reward"
                    }),
                    success: function(res) {
                        if (res.success) {
                            // Populate modal
                            $('#rewardCustomerName').text('Customer: ' + name);
                            $('#rewardCode').text(res.promoCode);

                            // Email status badge
                            var hasEmail = email && email.trim() !== '';
                            if (hasEmail) {
                                $('#rewardEmailStatus')
                                    .removeClass('d-none alert-warning')
                                    .addClass('alert-success')
                                    .html('<i class="fas fa-envelope-check text-success"></i><span>Code emailed to <strong>' + email + '</strong></span>');
                            } else {
                                $('#rewardEmailStatus')
                                    .removeClass('d-none alert-success')
                                    .addClass('alert-warning')
                                    .html('<i class="fas fa-exclamation-triangle text-warning"></i><span>No email on file ‚Äî show this code to the customer manually.</span>');
                            }

                            new bootstrap.Modal(document.getElementById('rewardResultModal')).show();
                            // Refresh page after modal closes so points update
                            $('#rewardResultModal').on('hidden.bs.modal', function() {
                                location.reload();
                            });
                        } else {
                            alert('‚ö†Ô∏è ' + res.message);
                            btn.prop('disabled', false).html('<i class="fas fa-gift me-1"></i>Reward');
                        }
                    },
                    error: function() {
                        alert('Server error. Please try again.');
                        btn.prop('disabled', false).html('<i class="fas fa-gift me-1"></i>Reward');
                    }
                });
            });

            /* ‚îÄ‚îÄ Copy Code ‚îÄ‚îÄ */
            $('#copyCodeBtn').click(function() {
                var code = $('#rewardCode').text();
                navigator.clipboard.writeText(code).then(function() {
                    $('#copyCodeBtn').html('<i class="fas fa-check me-2"></i>Copied!');
                    setTimeout(function() {
                        $('#copyCodeBtn').html('<i class="fas fa-copy me-2"></i>Copy Code to Clipboard');
                    }, 2000);
                });
            });
        });
    </script>
}

