@model IEnumerable<dynamic>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Campaign Tactical Reports";
}

<div class="container-fluid py-2">
    <!-- Action Bar -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h6 class="fw-bold mb-0 text-dark">Tactical Performance Matrix</h6>
            <p class="text-muted x-small mb-0">Detailed analysis of active and historical marketing initiatives</p>
        </div>
        <button class="btn btn-light border rounded-pill px-4 shadow-none">
            <i class="fas fa-file-export me-2 text-muted"></i>Export Strategic Data
        </button>
    </div>

    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            foreach (var campaign in Model)
            {
                var isEnded = campaign.EndDate < DateTime.Now;
                var statusClass = campaign.IsActive ? (isEnded ? "bg-secondary" : "bg-success") : "bg-secondary";
                var statusText = campaign.IsActive ? (isEnded ? "COMPLETED" : "OPERATIONAL") : "TERMINATED";

                <div class="col-xl-4 col-md-6">
                    <div class="card border-0 shadow-sm rounded-4 h-100 transition-hover overflow-hidden">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-4">
                                <div class="avatar-sm bg-primary bg-opacity-10 text-primary rounded-4 d-flex align-items-center justify-content-center" style="width: 44px; height: 44px;">
                                    <i class="fas fa-bullhorn"></i>
                                </div>
                                <span class="badge rounded-pill @statusClass px-3 x-small fw-bold">@statusText</span>
                            </div>
                            
                            <h6 class="fw-bold text-dark mb-1">@campaign.PromotionName</h6>
                            <p class="text-muted x-small mb-4 uppercase tracking-wider fw-medium">
                                <i class="far fa-calendar-alt me-1"></i> @campaign.StartDate.ToString("MMM dd") — @campaign.EndDate.ToString("MMM dd, yyyy")
                            </p>
                            
                            <!-- KPI Grid -->
                            <div class="row g-2 mb-4">
                                <div class="col-6">
                                    <div class="bg-light p-3 rounded-4 border border-white shadow-sm border-2">
                                        <p class="x-small text-muted uppercase tracking-wider mb-1">Engagement</p>
                                        <h5 class="fw-bold text-dark mb-0">@campaign.UsageCount</h5>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="bg-light p-3 rounded-4 border border-white shadow-sm border-2">
                                        <p class="x-small text-muted uppercase tracking-wider mb-1">Gross Value</p>
                                        <h5 class="fw-bold text-dark mb-0">₱@campaign.TotalSalesValue.ToString("N0")</h5>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Detailed Metrics -->
                            <div class="p-3 bg-white border rounded-4 shadow-sm mb-4">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="x-small text-muted fw-bold uppercase">Equity Utilization</span>
                                    <span class="x-small fw-bold text-danger">₱@campaign.TotalDiscountGiven.ToString("N2")</span>
                                </div>
                                <div class="progress rounded-pill shadow-none" style="height: 4px;">
                                    <div class="progress-bar bg-danger rounded-pill shadow-none" role="progressbar" 
                                         style="width: @(campaign.TotalSalesValue > 0 ? (campaign.TotalDiscountGiven * 100 / campaign.TotalSalesValue) : 0)%"></div>
                                </div>
                            </div>
                            
                            <button class="btn btn-primary w-100 rounded-pill py-2 fw-bold shadow-none x-small">
                                OPEN TACTICAL DRILLDOWN
                            </button>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <div class="py-5">
                    <i class="fas fa-chart-pie fa-4x text-muted opacity-25 mb-4"></i>
                    <h5 class="fw-bold text-dark">No Strategic Data Available</h5>
                    <p class="text-muted x-small mx-auto" style="max-width: 400px;">Commit your first marketing initiative to begin accumulating performance metrics and tactical insights.</p>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .x-small { font-size: 0.75rem; }
    .uppercase { text-transform: uppercase; }
    .tracking-wider { letter-spacing: 0.1em; }
</style>
