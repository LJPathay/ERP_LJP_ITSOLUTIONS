@model IEnumerable<ljp_itsolutions.Models.Promotion>
@{
    ViewData["Title"] = "Promotions Management";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-end mb-4">
        <a asp-action="CreateCampaign" class="btn btn-primary shadow-sm rounded-pill px-4">
            <i class="fas fa-bullhorn me-2"></i>New Campaign
        </a>
    </div>

    <div class="row g-4">
        @foreach (var promo in Model)
        {
            <div class="col-md-4">
                <div class="card border-0 shadow-sm rounded-4 h-100 promo-card @(promo.IsActive ? "active-promo" : "inactive-promo")">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="fw-bold text-dark mb-0">@promo.PromotionName</h5>
                            <span class="badge @(promo.IsActive ? "bg-success" : "bg-secondary") rounded-pill">
                                @(promo.IsActive ? "Active" : "Paused")
                            </span>
                        </div>
                        
                        <div class="promo-discount mb-3">
                            <span class="fs-2 fw-bold text-primary">
                                @(promo.DiscountType == "Percentage" ? $"{promo.DiscountValue}%" : $"â‚±{promo.DiscountValue}")
                            </span>
                            <span class="text-muted ms-1">OFF</span>
                        </div>

                        <div class="promo-meta small text-muted mb-4">
                            <div class="d-flex align-items-center gap-2 mb-1">
                                <i class="far fa-calendar-alt"></i>
                                <span>@promo.StartDate.ToShortDateString() - @promo.EndDate.ToShortDateString()</span>
                            </div>
                            <div class="d-flex align-items-center gap-2">
                                <i class="fas fa-ticket-alt"></i>
                                <span>Code: @promo.PromotionName.Replace(" ", "").ToUpper()</span>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button class="btn btn-light flex-fill btn-sm rounded-pill py-2 fw-bold">Edit</button>
                            <a asp-action="PromotionPerformance" class="btn btn-outline-primary flex-fill btn-sm rounded-pill py-2 fw-bold">Stats</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .promo-card { border-left: 5px solid transparent !important; transition: all 0.3s; }
    .active-promo { border-left-color: #0d6efd !important; }
    .inactive-promo { border-left-color: #6c757d !important; opacity: 0.8; }
    .promo-card:hover { transform: translateY(-5px); box-shadow: 0 8px 25px rgba(0,0,0,0.1) !important; }
</style>
