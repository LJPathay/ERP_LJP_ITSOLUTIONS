@model IEnumerable<ljp_itsolutions.Models.Customer>
@{
    ViewData["Title"] = "Loyalty Overview";
}

<div class="container-fluid py-4">
    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-header bg-white border-0 pt-4 px-4 text-center">
                    <h5 class="fw-bold mb-0">Customer Tier Distribution</h5>
                </div>
                <div class="card-body p-4">
                    <div style="height: 250px;">
                        <canvas id="tierChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-header bg-white border-0 pt-4 px-4 text-center">
                    <h5 class="fw-bold mb-0">Top Points Distribution</h5>
                </div>
                <div class="card-body p-4">
                    <div style="height: 250px;">
                        <canvas id="pointsDistributionChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-header bg-white border-0 pt-4 px-4">
            <h5 class="fw-bold">Global Rankings (Top 10)</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Rank</th>
                            <th>Customer</th>
                            <th>Total Points</th>
                            <th class="pe-4 text-end">Tier Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int rank = 1; }
                        @foreach (var customer in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <span class="badge @(rank <= 3 ? "bg-warning text-dark shadow-sm" : "bg-light text-dark") rounded-circle p-2" style="width: 32px; height: 32px; display: inline-flex; align-items: center; justify-content: center; font-size: 0.8rem;">@rank</span>
                                </td>
                                <td>
                                    <div class="fw-bold">@customer.FullName</div>
                                    <small class="text-muted">Member ID: #CST-@customer.CustomerID</small>
                                </td>
                                <td class="fw-bold text-primary">@customer.Points.ToString("N0")</td>
                                <td class="pe-4 text-end">
                                    @if (customer.Points > 1000) { <span class="badge bg-warning text-dark">Gold Elite</span> }
                                    else if (customer.Points > 500) { <span class="badge bg-secondary">Silver Pro</span> }
                                    else { <span class="badge bg-light text-dark">Bronze Member</span> }
                                </td>
                            </tr>
                            rank++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Tier Distribution Chart
        const tierCtx = document.getElementById('tierChart').getContext('2d');
        new Chart(tierCtx, {
            type: 'doughnut',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.TierLabels)),
                datasets: [{
                    data: @Html.Raw(Json.Serialize(ViewBag.TierData)),
                    backgroundColor: ['#fbbf24', '#94a3b8', '#d1d5db'],
                    borderWidth: 0,
                    hoverOffset: 15
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'bottom', labels: { usePointStyle: true, padding: 20 } }
                },
                cutout: '70%'
            }
        });

        // Top Points Distribution
        const pointsCtx = document.getElementById('pointsDistributionChart').getContext('2d');
        new Chart(pointsCtx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.Select(c => c.FullName.Split(' ')[0]))),
                datasets: [{
                    label: 'Points',
                    data: @Html.Raw(Json.Serialize(Model.Select(c => c.Points))),
                    backgroundColor: '#4f46e5',
                    borderRadius: 8,
                    barThickness: 20
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    y: { beginAtZero: true, grid: { display: false } },
                    x: { grid: { display: false } }
                }
            }
        });
    </script>
}
