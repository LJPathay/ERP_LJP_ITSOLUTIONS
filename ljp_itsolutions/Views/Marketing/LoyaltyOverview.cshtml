@model IEnumerable<ljp_itsolutions.Models.Customer>
@{
    ViewData["Title"] = "Loyalty Overview";
}

<div class="container-fluid py-4">
    <div class="mb-4">
        <h2 class="fw-bold mb-1">‚≠ê Loyalty Program Overview</h2>
        <p class="text-muted">Analyze your top customers and point distributions</p>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-header bg-white border-0 pt-4 px-4">
                    <h5 class="fw-bold">Point Distibution by Tier</h5>
                </div>
                <div class="card-body p-4 d-flex align-items-center justify-content-center bg-light-subtle rounded-bottom-4" style="min-height: 250px;">
                    <div class="text-center text-muted">
                        <i class="fas fa-chart-pie fa-3x mb-3 opacity-25"></i>
                        <p>Tier Distribution Chart</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-header bg-white border-0 pt-4 px-4">
                    <h5 class="fw-bold">Monthly Redemption Trends</h5>
                </div>
                <div class="card-body p-4 d-flex align-items-center justify-content-center bg-light-subtle rounded-bottom-4" style="min-height: 250px;">
                    <div class="text-center text-muted">
                        <i class="fas fa-chart-line fa-3x mb-3 opacity-25"></i>
                        <p>Redemption Trends Chart</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-header bg-white border-0 pt-4 px-4">
            <h5 class="fw-bold">Top Points Holders</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr class="bg-light">
                            <th class="ps-4">Rank</th>
                            <th>Customer</th>
                            <th>Total Points</th>
                            <th>Estimated Wallet Value</th>
                            <th class="pe-4 text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int rank = 1; }
                        @foreach (var customer in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <span class="badge @(rank <= 3 ? "bg-warning text-dark" : "bg-light text-dark") rounded-circle p-2" style="width: 30px; height: 30px; display: inline-flex; align-items: center; justify-content: center;">@rank</span>
                                </td>
                                <td>
                                    <div class="fw-bold">@customer.FullName</div>
                                    <small class="text-muted">Member since @DateTime.Now.AddMonths(-rank*2).ToShortDateString()</small>
                                </td>
                                <td class="fw-bold text-primary">@customer.Points.ToString("N0")</td>
                                <td>$@((customer.Points * 0.05).ToString("F2"))</td>
                                <td class="pe-4 text-end">
                                    <button class="btn btn-sm btn-light">Reward</button>
                                </td>
                            </tr>
                            rank++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
