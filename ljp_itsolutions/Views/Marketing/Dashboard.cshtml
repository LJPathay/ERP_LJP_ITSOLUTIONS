@model dynamic
@{
    ViewData["Title"] = "Marketing Dashboard";
}

<div class="marketing-dashboard py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Marketing Analytics</h2>
            <p class="text-muted">Overview of your campaigns and customer engagement</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-primary border-0 shadow-sm bg-white">
                <i class="fas fa-download me-2"></i>Export Report
            </button>
            <a asp-action="CreateCampaign" class="btn btn-primary shadow-sm">
                <i class="fas fa-plus me-2"></i>New Campaign
            </a>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-4 h-100 kpi-card">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="icon-box bg-primary-subtle text-primary rounded-3 p-3">
                            <i class="fas fa-users fs-4"></i>
                        </div>
                        <h6 class="mb-0 text-muted fw-semibold">Total Customers</h6>
                    </div>
                    <h3 class="fw-bold mb-1">@Model.TotalCustomers</h3>
                    <div class="text-success small"><i class="fas fa-arrow-up me-1"></i>12% from last month</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-4 h-100 kpi-card">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="icon-box bg-success-subtle text-success rounded-3 p-3">
                            <i class="fas fa-tags fs-4"></i>
                        </div>
                        <h6 class="mb-0 text-muted fw-semibold">Active Promos</h6>
                    </div>
                    <h3 class="fw-bold mb-1">@Model.ActivePromotions</h3>
                    <div class="text-success small"><i class="fas fa-check me-1"></i>3 newly launched</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-4 h-100 kpi-card">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="icon-box bg-warning-subtle text-warning rounded-3 p-3">
                            <i class="fas fa-star fs-4"></i>
                        </div>
                        <h6 class="mb-0 text-muted fw-semibold">Loyalty Points</h6>
                    </div>
                    <h3 class="fw-bold mb-1">@Model.TotalPointsAwarded</h3>
                    <div class="small text-muted">Total awarded across all users</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-4 h-100 kpi-card">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="icon-box bg-info-subtle text-info rounded-3 p-3">
                            <i class="fas fa-shopping-cart fs-4"></i>
                        </div>
                        <h6 class="mb-0 text-muted fw-semibold">Conversion Rate</h6>
                    </div>
                    <h3 class="fw-bold mb-1">4.2%</h3>
                    <div class="text-danger small"><i class="fas fa-arrow-down me-1"></i>0.5% decrease</div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Main Chart Placeholder -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-header bg-white border-0 pt-4 px-4 d-flex justify-content-between">
                    <h5 class="fw-bold">Campaign Performance</h5>
                    <select class="form-select form-select-sm w-auto border-0 bg-light">
                        <option>Last 30 Days</option>
                        <option>Last 6 Months</option>
                    </select>
                </div>
                <div class="card-body p-4 d-flex align-items-center justify-content-center bg-light-subtle rounded-bottom-4" style="min-height: 300px;">
                    <div class="text-center text-muted">
                        <i class="fas fa-chart-line fa-3x mb-3 opacity-25"></i>
                        <p>Chart Visualization Placeholder</p>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Top Customers -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-header bg-white border-0 pt-4 px-4">
                    <h5 class="fw-bold">Most Loyal Customers</h5>
                </div>
                <div class="card-body px-0">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item border-0 py-3 px-4 d-flex align-items-center gap-3">
                            <div class="avatar bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">JD</div>
                            <div class="flex-fill">
                                <p class="mb-0 fw-bold">Jane Doe</p>
                                <small class="text-muted">1,240 Points</small>
                            </div>
                            <span class="badge bg-success-subtle text-success">Elite</span>
                        </div>
                        <div class="list-group-item border-0 py-3 px-4 d-flex align-items-center gap-3">
                            <div class="avatar bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">JS</div>
                            <div class="flex-fill">
                                <p class="mb-0 fw-bold">John Smith</p>
                                <small class="text-muted">950 Points</small>
                            </div>
                            <span class="badge bg-primary-subtle text-primary">Pro</span>
                        </div>
                        <div class="list-group-item border-0 py-3 px-4 d-flex align-items-center gap-3">
                            <div class="avatar bg-info text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">AW</div>
                            <div class="flex-fill">
                                <p class="mb-0 fw-bold">Alice Wong</p>
                                <small class="text-muted">820 Points</small>
                            </div>
                            <span class="badge bg-primary-subtle text-primary">Pro</span>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white border-0 text-center pb-4">
                    <a asp-action="Customers" class="text-decoration-none small fw-bold">View All Customers <i class="fas fa-chevron-right ms-1"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .kpi-card { transition: transform 0.2s; cursor: pointer; }
    .kpi-card:hover { transform: translateY(-5px); }
    .icon-box { width: 48px; height: 48px; display: flex; align-items: center; justify-content: center; }
</style>
