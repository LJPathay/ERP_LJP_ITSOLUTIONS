@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<ul class="nav flex-column gap-2 h-100">
    <li class="nav-item">
        <a class="nav-link @(currentController == "POS" ? "active" : "")" href="@Url.Action("Index", "POS")">
            <i class="fas fa-shopping-cart"></i>
            <span>POS / Create Order</span>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(currentController == "Cashier" && currentAction == "TransactionHistory" ? "active" : "")" href="@Url.Action("TransactionHistory", "Cashier")">
            <i class="fas fa-history"></i>
            <span>Transaction History</span>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(currentController == "Cashier" && currentAction == "ShiftManagement" ? "active" : "")" href="@Url.Action("ShiftManagement", "Cashier")">
            <i class="fas fa-cash-register"></i>
            <span>Shift Management</span>
        </a>
    </li>
</ul>
