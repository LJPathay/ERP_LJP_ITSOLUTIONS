@using Microsoft.AspNetCore.Http
@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();

    bool IsDashboardActive() => currentController == "Admin" && (currentAction == "Index" || currentAction == "Dashboard");
    bool IsUsersActive() => currentController == "Admin" && (currentAction == "Users" || currentAction == "ManageUsers");
    bool IsAuditLogsActive() => currentController == "Admin" && (currentAction == "AuditLogs" || currentAction == "Audit");
    
    bool IsCashierReportsActive() => currentController == "Admin" && currentAction == "Reports_Cashier";
    bool IsMarketingReportsActive() => currentController == "Admin" && currentAction == "Reports_Marketing";
    bool IsManagerReportsActive() => currentController == "Admin" && currentAction == "Reports_Manager";
    bool IsAnyReportActive() => IsCashierReportsActive() || IsMarketingReportsActive() || IsManagerReportsActive();

    bool IsTransactionsActive() => currentController == "Admin" && currentAction == "Transactions";
    bool IsSystemSettingsActive() => currentController == "Admin" && currentAction == "SystemSettings";
    bool IsBackupsActive() => currentController == "Admin" && currentAction == "Backups";
    bool IsAnySystemSettingActive() => IsTransactionsActive() || IsSystemSettingsActive() || IsBackupsActive();
}

<div class="nav flex-column">
    <div class="nav-item">
        <a class="nav-link d-flex align-items-center @(IsDashboardActive() ? "active" : "")" href="@Url.Action("Index", "Admin")">
            <i class="fas fa-th-large opacity-75"></i>
            <span>Dashboard</span>
        </a>
    </div>

    <div class="nav-item">
        <a class="nav-link d-flex align-items-center @(IsUsersActive() ? "active" : "")" href="@Url.Action("Users", "Admin")">
            <i class="fas fa-users opacity-75"></i>
            <span>Manage Users</span>
        </a>
    </div>

    <div class="nav-item">
        <a class="nav-link d-flex align-items-center @(IsAuditLogsActive() ? "active" : "")" href="@Url.Action("AuditLogs", "Admin")">
            <i class="fas fa-file-alt opacity-75"></i>
            <span>Audit Logs</span>
        </a>
    </div>

    <!-- Reports Dropdown -->
    <div class="nav-item dropdown">
        <a class="nav-link d-flex align-items-center dropdown-toggle no-caret @(IsAnyReportActive() ? "active" : "")" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fas fa-chart-bar opacity-75"></i>
            <span>Reports</span>
            <i class="fas fa-chevron-down ms-auto x-small opacity-50"></i>
        </a>
        <ul class="dropdown-menu shadow-lg border-0">
            <li>
                <a class="dropdown-item @(IsCashierReportsActive() ? "active" : "") d-flex align-items-center gap-2" href="@Url.Action("Reports_Cashier", "Admin")">
                    <i class="fas fa-cash-register opacity-75"></i>
                    <span>Cashier Reports</span>
                </a>
            </li>
            <li>
                <a class="dropdown-item @(IsMarketingReportsActive() ? "active" : "") d-flex align-items-center gap-2" href="@Url.Action("Reports_Marketing", "Admin")">
                    <i class="fas fa-bullhorn opacity-75"></i>
                    <span>Marketing Reports</span>
                </a>
            </li>
            <li>
                <a class="dropdown-item @(IsManagerReportsActive() ? "active" : "") d-flex align-items-center gap-2" href="@Url.Action("Reports_Manager", "Admin")">
                    <i class="fas fa-user-tie opacity-75"></i>
                    <span>Manager Reports</span>
                </a>
            </li>
        </ul>
    </div>

    <!-- System Dropdown -->
    <div class="nav-item dropdown">
        <a class="nav-link d-flex align-items-center dropdown-toggle no-caret @(IsAnySystemSettingActive() ? "active" : "")" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fas fa-cog opacity-75"></i>
            <span>System</span>
            <i class="fas fa-chevron-down ms-auto x-small opacity-50"></i>
        </a>
        <ul class="dropdown-menu shadow-lg border-0">
            <li>
                <a class="dropdown-item @(IsTransactionsActive() ? "active" : "") d-flex align-items-center gap-2" href="@Url.Action("Transactions", "Admin")">
                    <i class="fas fa-exchange-alt opacity-75"></i>
                    <span>Sales Transactions</span>
                </a>
            </li>
            <li>
                <a class="dropdown-item @(IsSystemSettingsActive() ? "active" : "") d-flex align-items-center gap-2" href="@Url.Action("SystemSettings", "Admin")">
                    <i class="fas fa-cog opacity-75"></i>
                    <span>General Settings</span>
                </a>
            </li>
            <li>
                <a class="dropdown-item @(IsBackupsActive() ? "active" : "") d-flex align-items-center gap-2" href="@Url.Action("Backups", "Admin")">
                    <i class="fas fa-database opacity-75"></i>
                    <span>Database Backups</span>
                </a>
            </li>
        </ul>
    </div>
</div>


