@using System.Security.Claims
@* Default application layout (authenticated) *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Coffee ERP - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-dashboard.css" asp-append-version="true" />
</head>
<body>
    @{
        var username = Context.Session.GetString("Username") ?? User.Identity?.Name ?? "guest";
        var userRole = Context.Session.GetString("UserRole") ?? User.FindFirst(ClaimTypes.Role)?.Value ?? "-";
    }
    <div class="app d-flex">
        <aside class="sidebar p-4 d-flex flex-column">
            <div class="brand mb-4">
                <div class="d-flex align-items-center justify-content-center mb-3">
                    <img src="@(Url.Content("~/images/logo.png"))" alt="Coffee ERP" class="sidebar-logo" />
                </div>
            </div>
            <nav class="nav flex-column gap-2">
                @if (IsSectionDefined("Navigation"))
                {
                    @RenderSection("Navigation")
                }
                else if (ViewContext.RouteData.Values["controller"]?.ToString() == "Admin")
                {
                    <partial name="_AdminNavigation" />
                }
                else
                {
                    <a class="nav-link active" href="/Admin/Dashboard">Dashboard</a>
                    <a class="nav-link" href="/Admin/Users">User & Access Management</a>
                    <a class="nav-link" href="/Admin/Reports">CRM</a>
                    <a class="nav-link" href="/Cashier/CreateOrder">POS & Orders</a>
                    <a class="nav-link" href="/Manager/Products">Product & Menu</a>
                    <a class="nav-link" href="/Marketing/Promotions">Marketing Automation</a>
                    <a class="nav-link" href="/Manager/Reports">Business Intelligence</a>
                    <a class="nav-link" href="/Admin/Reports">Finance & Budget</a>
                    <a class="nav-link" href="/Manager/Products">Inventory Management</a>
                }
            </nav>
        </aside>

        <main class="content flex-fill p-4">
            <header class="d-flex justify-content-between align-items-center mb-4">
                <div class="header-left">
                    <h1 class="h3 mb-0 fw-bold text-dark">Welcome back, @username</h1>
                    <div class="text-muted small mt-1">
                        <i class="far fa-clock me-1"></i>@DateTime.Now.ToString("dddd, MMMM d, yyyy")
                    </div>
                </div>
                <div class="header-right d-flex align-items-center gap-3">
                    <!-- Notifications -->
                    <div class="dropdown">
                        <button class="btn btn-header-icon position-relative" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-bell"></i>
                            <span class="notification-badge">3</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-lg shadow-lg border-0" style="min-width: 320px;">
                            <li class="dropdown-header d-flex justify-content-between align-items-center">
                                <span class="fw-bold">Notifications</span>
                                <a href="#" class="text-decoration-none small">Mark all as read</a>
                            </li>
                            <li class="dropdown-item notification-item">
                                <div class="d-flex align-items-start">
                                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-2 me-3">
                                        <i class="fas fa-user-plus fa-sm"></i>
                                    </div>
                                    <div>
                                        <p class="mb-0 small fw-bold">New user registered</p>
                                        <p class="mb-0 x-small text-muted">Jane Doe joined the system</p>
                                        <small class="text-muted x-small">5 mins ago</small>
                                    </div>
                                </div>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-center small text-primary fw-bold" href="#">View all notifications</a></li>
                        </ul>
                    </div>

                    <!-- User Profile -->
                    <div class="dropdown">
                        <button class="btn btn-profile d-flex align-items-center gap-3 shadow-sm border-0 bg-white" data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="profile-avatar bg-light d-flex align-items-center justify-content-center">
                                <i class="fas fa-user text-secondary"></i>
                            </div>
                            <div class="text-start d-none d-md-block">
                                <p class="mb-0 small fw-bold text-dark">@username</p>
                                <p class="mb-0 x-small text-muted">@userRole</p>
                            </div>
                            <i class="fas fa-chevron-down x-small text-muted ms-1"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 mt-2">
                            <li><a class="dropdown-item" href="#"><i class="fas fa-user-circle me-2 opacity-50"></i>My Profile</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2 opacity-50"></i>Account Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            @if (User?.Identity?.IsAuthenticated == true)
                            {
                                <li>
                                    <form method="post" asp-controller="Account" asp-action="Logout">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="fas fa-sign-out-alt me-2"></i>Sign Out
                                        </button>
                                    </form>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </header>

            <section>
                @RenderBody()
            </section>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/dashboard.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
