@using System.Security.Claims
@* Default application layout (authenticated) *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Coffee ERP - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-dashboard.css" asp-append-version="true" />
    <style>
        /* Sidebar layout styles */
        .app { min-height:100vh; }
        .sidebar { width:260px; background: linear-gradient(180deg,#6f2b00,#a14a00); color:white; }
        .sidebar .brand { color: #fff; }
        .sidebar .nav-link { color: rgba(255,255,255,0.9); padding: 12px 16px; }
        .sidebar .nav-link.active, .sidebar .nav-link:hover { background: rgba(255,255,255,0.06); border-radius:8px; }
        .content { background:#f7f8fa; }
        .kpi-card { background:white; border-radius:12px; padding:18px; box-shadow:0 6px 18px rgba(31,45,61,0.06); }
        .recent { background:white; border-radius:12px; padding:18px; box-shadow:0 6px 18px rgba(31,45,61,0.06); }
    </style>
</head>
<body>
    @{
        var username = Context.Session.GetString("Username") ?? User.Identity?.Name ?? "guest";
        var userRole = Context.Session.GetString("UserRole") ?? User.FindFirst(ClaimTypes.Role)?.Value ?? "-";
    }
    <div class="app d-flex">
        <aside class="sidebar p-4 d-flex flex-column">
            <div class="brand mb-4">
                <div class="d-flex align-items-center mb-3">
                    <div class="me-3" style="font-size:28px">☕</div>
                    <div>
                        <div class="h5 mb-0">Coffee ERP</div>
                        <div class="small text-amber-light">@userRole</div>
                    </div>
                </div>
            </div>
            <nav class="nav flex-column">
                @if (IsSectionDefined("Navigation"))
                {
                    @RenderSection("Navigation")
                }
                else
                {
                    <a class="nav-link active" href="/Admin/Dashboard">Dashboard</a>
                    <a class="nav-link" href="/Admin/Users">User & Access Management</a>
                    <a class="nav-link" href="/Admin/Reports">CRM</a>
                    <a class="nav-link" href="/Cashier/CreateOrder">POS & Orders</a>
                    <a class="nav-link" href="/Manager/Products">Product & Menu</a>
                    <a class="nav-link" href="/Marketing/Promotions">Marketing Automation</a>
                    <a class="nav-link" href="/Manager/Reports">Business Intelligence</a>
                    <a class="nav-link" href="/Admin/Reports">Finance & Budget</a>
                    <a class="nav-link" href="/Manager/Products">Inventory Management</a>
                }
            </nav>
        </aside>

        <main class="content flex-fill p-4">
            <header class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-1 fw-bold">Welcome back, @username</h1>
                    <div class="d-flex align-items-center gap-2">
                        <span class="badge bg-amber text-white">
                            <i class="fas fa-user-tag me-1"></i>@userRole
                        </span>
                        <span class="text-muted small">
                            <i class="fas fa-clock me-1"></i>@DateTime.Now.ToString("dddd, MMMM d, yyyy")
                        </span>
                    </div>
                </div>
                <div class="d-flex align-items-center gap-3">
                    <!-- Sidebar toggle for small screens -->
                    <button id="sidebarToggle" class="btn btn-light d-md-none" aria-label="Toggle sidebar">
                        <i class="fas fa-bars"></i>
                    </button>

                    <!-- Notifications -->
                    <div class="dropdown">
                        <button class="btn btn-light position-relative" data-bs-toggle="dropdown" aria-expanded="false" data-bs-toggle="tooltip" title="Notifications">
                            <i class="fas fa-bell"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                3
                                <span class="visually-hidden">unread notifications</span>
                            </span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-lg" style="min-width: 320px;">
                            <li class="dropdown-header d-flex justify-content-between align-items-center">
                                <span>Notifications</span>
                                <a href="#" class="text-decoration-none small">Mark all as read</a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li class="dropdown-item notification-item">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <div class="bg-blue-light text-primary rounded-circle p-2">
                                            <i class="fas fa-user-plus small"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <p class="mb-1 small fw-semibold">New user registered</p>
                                        <p class="mb-0 small text-muted">Jane Doe joined the system</p>
                                        <small class="text-muted"><i class="fas fa-clock me-1"></i>5 minutes ago</small>
                                    </div>
                                </div>
                            </li>
                            <li class="dropdown-item notification-item">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <div class="bg-green-light text-success rounded-circle p-2">
                                            <i class="fas fa-chart-line small"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <p class="mb-1 small fw-semibold">Sales report ready</p>
                                        <p class="mb-0 small text-muted">Monthly sales report is available</p>
                                        <small class="text-muted"><i class="fas fa-clock me-1"></i>1 hour ago</small>
                                    </div>
                                </div>
                            </li>
                            <li class="dropdown-item notification-item">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <div class="bg-amber-light text-warning rounded-circle p-2">
                                            <i class="fas fa-exclamation-triangle small"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <p class="mb-1 small fw-semibold">System maintenance</p>
                                        <p class="mb-0 small text-muted">Scheduled for tonight at 2 AM</p>
                                        <small class="text-muted"><i class="fas fa-clock me-1"></i>3 hours ago</small>
                                    </div>
                                </div>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-center" href="#">View all notifications</a></li>
                        </ul>
                    </div>

                    <!-- User Profile -->
                    <div class="dropdown">
                        <button class="btn btn-light d-flex align-items-center gap-2" data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="user-avatar-sm bg-amber">
                                <i class="fas fa-user text-white small"></i>
                            </div>
                            <div class="text-start d-none d-md-block">
                                <div class="fw-semibold small">@username</div>
                                <div class="small text-muted">@userRole</div>
                            </div>
                            <i class="fas fa-chevron-down small text-muted"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Profile</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Settings</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-key me-2"></i>Change Password</a></li>
                            <li><hr class="dropdown-divider"></li>
                            @if (User?.Identity?.IsAuthenticated == true)
                            {
                                <li>
                                    <form method="post" asp-controller="Account" asp-action="Logout">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="fas fa-sign-out-alt me-2"></i>Logout
                                        </button>
                                    </form>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </header>

            <section>
                @RenderBody()
            </section>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/dashboard.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
