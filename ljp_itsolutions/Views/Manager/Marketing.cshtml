@{
    ViewData["Title"] = "Marketing Performance";
    var performance = ViewBag.Performance as IEnumerable<dynamic>;
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Marketing Performance</h2>
            <p class="text-muted">Monitor how your campaigns are driving sales.</p>
        </div>
    </div>

    <!-- Performance Charts Placeholder -->
    <div class="row g-4 mb-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0 pt-3">
                    <h5 class="fw-bold mb-0">Campaign Success Rate</h5>
                </div>
                <div class="card-body">
                    <canvas id="campaignChart" height="300"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0 pt-3">
                    <h5 class="fw-bold mb-0">Top Performing Promo</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @if (performance != null && performance.Any())
                        {
                            foreach (var item in performance)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center py-3">
                                    <div>
                                        <h6 class="fw-bold mb-0">@item.Name</h6>
                                        <small class="text-muted">@item.Count uses</small>
                                    </div>
                                    <span class="fw-bold text-success">₱@item.Revenue.ToString("N2")</span>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="p-4 text-center text-muted">No campaign data yet.</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Marketing KPIs -->
    <div class="row g-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-4 text-center">
                <h6 class="text-muted small uppercase fw-bold mb-2">Active Campaigns</h6>
                <h3 class="fw-bold mb-0">@ViewBag.ActivePromos</h3>
                <small class="text-info mt-2"><i class="fas fa-bullhorn me-1"></i>Current Live</small>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-4 text-center">
                <h6 class="text-muted small uppercase fw-bold mb-2">Total Promo Uses</h6>
                <h3 class="fw-bold mb-0">@ViewBag.TotalPromoUses</h3>
                <small class="text-success mt-2"><i class="fas fa-check-circle me-1"></i>Orders with discount</small>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-4 text-center">
                <h6 class="text-muted small uppercase fw-bold mb-2">Avg. Discount</h6>
                <h3 class="fw-bold mb-0">₱@ViewBag.AvgDiscount.ToString("N2")</h3>
                <small class="text-danger mt-2"><i class="fas fa-tag me-1"></i>Average per order</small>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-4 text-center text-white bg-primary">
                <h6 class="text-light small uppercase fw-bold mb-2">Promo Revenue</h6>
                <h3 class="fw-bold mb-0">₱@ViewBag.TotalPromoRevenue.ToString("N0")</h3>
                <small class="text-light mt-2">Driven by campaigns</small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const ctx = document.getElementById('campaignChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar', // Changed from line to bar for better comparison
                data: {
                    labels: @Html.Raw(Json.Serialize(ViewBag.PromoLabels)),
                    datasets: [{
                        label: 'Revenue Generated (₱)',
                        data: @Html.Raw(Json.Serialize(ViewBag.PromoRevenue)),
                        backgroundColor: 'rgba(75, 192, 192, 0.6)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: { 
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) { return '₱' + value; }
                            }
                        }
                    },
                    plugins: {
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return 'Revenue: ₱' + context.parsed.y.toLocaleString();
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
}
