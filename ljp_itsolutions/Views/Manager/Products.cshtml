@model IEnumerable<ljp_itsolutions.Models.Product>
@{
    ViewData["Title"] = "Product Management";
    var categories = ViewBag.Categories as IEnumerable<ljp_itsolutions.Models.Category>;
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Product Management</h2>
            <p class="text-muted">Manage your coffee shop menu and prices.</p>
        </div>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addProductModal">
            <i class="fas fa-plus me-2"></i>Add New Product
        </button>
    </div>

    <!-- Quick Stats -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="kpi-card h-100">
                <div class="kpi-card-icon bg-primary bg-opacity-10 text-primary">
                    <i class="fas fa-coffee fa-lg"></i>
                </div>
                <p class="kpi-card-label">Active Menu Items</p>
                <h3 class="kpi-card-value">@Model.Count(p => p.IsAvailable)</h3>
            </div>
        </div>
        <div class="col-md-4">
            <div class="kpi-card h-100">
                <div class="kpi-card-icon bg-info bg-opacity-10 text-info">
                    <i class="fas fa-tags fa-lg"></i>
                </div>
                <p class="kpi-card-label">Price Range</p>
                <h3 class="kpi-card-value">
                    ₱@(Model.Any() ? Model.Min(p => p.Price).ToString("F2") : "0.00") - ₱@(Model.Any() ? Model.Max(p => p.Price).ToString("F2") : "0.00")
                </h3>
            </div>
        </div>
        <div class="col-md-4">
            <div class="kpi-card h-100">
                <div class="kpi-card-icon bg-danger bg-opacity-10 text-danger">
                    <i class="fas fa-eye-slash fa-lg"></i>
                </div>
                <p class="kpi-card-label">Hidden from POS</p>
                <h3 class="kpi-card-value text-danger">@Model.Count(p => !p.IsAvailable)</h3>
            </div>
        </div>
    </div>

    <!-- Products Table -->
    <div class="modern-table">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th class="ps-4">Product</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="me-3 position-relative">
                                        @if (!string.IsNullOrEmpty(item.ImageURL))
                                        {
                                            <img src="@item.ImageURL" alt="@item.ProductName" class="rounded-3 shadow-sm" style="width: 48px; height: 48px; object-fit: cover; border: 2px solid white;" />
                                        }
                                        else
                                        {
                                            <div class="bg-light rounded-3 d-flex align-items-center justify-content-center border" style="width: 48px; height: 48px;">
                                                <i class="fas fa-image text-muted"></i>
                                            </div>
                                        }
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark">@item.ProductName</div>
                                        <div class="text-muted text-xs">ID: #@item.ProductID</div>
                                    </div>
                                </div>
                            </td>
                            <td><span class="status-badge info">@item.Category?.CategoryName</span></td>
                            <td class="fw-bold text-dark">₱@item.Price.ToString("F2")</td>
                            <td>
                                @if (item.IsAvailable)
                                {
                                    <span class="status-badge success">Available</span>
                                }
                                else
                                {
                                    <span class="status-badge danger">Hidden</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-2">
                                    <button class="action-btn btn-edit" 
                                            data-id="@item.ProductID"
                                            data-name="@item.ProductName"
                                            data-category="@item.CategoryID"
                                            data-price="@item.Price"
                                            data-available="@item.IsAvailable.ToString().ToLower()">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <form asp-action="DeleteProduct" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                        <input type="hidden" name="id" value="@item.ProductID" />
                                        <button type="submit" class="action-btn danger"><i class="fas fa-trash"></i></button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add Product Modal -->
<div class="modal fade modern-modal" id="addProductModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="CreateProduct" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="modern-form-label">Product Photo</label>
                        <input type="file" name="photo" class="modern-form-control w-100" accept="image/*" required />
                        <div class="form-text text-xs">Upload a photo for POS display</div>
                    </div>
                    <div class="mb-3">
                        <label class="modern-form-label">Product Name</label>
                        <input type="text" name="ProductName" class="modern-form-control w-100" required placeholder="e.g. Iced Vanilla Latte" />
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            <label class="modern-form-label">Category</label>
                            <select name="CategoryID" class="modern-form-control w-100" required>
                                <option value="">Select Category</option>
                                @foreach (var cat in categories)
                                {
                                    <option value="@cat.CategoryID">@cat.CategoryName</option>
                                }
                            </select>
                        </div>
                        <div class="col">
                            <label class="modern-form-label">Price (₱)</label>
                            <input type="number" step="0.01" name="Price" class="modern-form-control w-100" required placeholder="0.00" />
                        </div>
                    </div>
                    <input type="hidden" name="StockQuantity" value="1000" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary rounded-pill px-4">Create Product</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Product Modal -->
<div class="modal fade modern-modal" id="editProductModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="EditProduct" method="post" enctype="multipart/form-data">
                <input type="hidden" name="ProductID" id="edit-id" />
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="modern-form-label">Product Photo (Optional)</label>
                        <input type="file" name="photo" class="modern-form-control w-100" accept="image/*" />
                        <div class="form-text text-xs">Leave blank to keep current photo</div>
                    </div>
                    <div class="mb-3">
                        <label class="modern-form-label">Product Name</label>
                        <input type="text" name="ProductName" id="edit-name" class="modern-form-control w-100" required />
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            <label class="modern-form-label">Category</label>
                            <select name="CategoryID" id="edit-category" class="modern-form-control w-100" required>
                                <option value="">Select Category</option>
                                @foreach (var cat in categories)
                                {
                                    <option value="@cat.CategoryID">@cat.CategoryName</option>
                                }
                            </select>
                        </div>
                        <div class="col">
                            <label class="modern-form-label">Price (₱)</label>
                            <input type="number" step="0.01" name="Price" id="edit-price" class="modern-form-control w-100" required />
                        </div>
                    </div>
                    <input type="hidden" name="StockQuantity" id="edit-stock" value="1000" />
                    <div class="form-check form-switch mt-2">
                        <input type="checkbox" name="IsAvailable" id="edit-available" value="true" class="form-check-input" />
                        <label class="form-check-label fw-bold text-sm ms-2">Available for Sale</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary rounded-pill px-4">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.btn-edit').on('click', function() {
                var id = $(this).data('id');
                var name = $(this).data('name');
                var category = $(this).data('category');
                var price = $(this).data('price');
                var stock = $(this).data('stock');
                var available = $(this).data('available');

                $('#edit-id').val(id);
                $('#edit-name').val(name);
                $('#edit-category').val(category);
                $('#edit-price').val(price);
                $('#edit-price').val(price);
                $('#edit-available').prop('checked', available);

                var myModal = new bootstrap.Modal(document.getElementById('editProductModal'));
                myModal.show();
            });
        });
    </script>
}
