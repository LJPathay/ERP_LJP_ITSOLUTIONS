@model IEnumerable<ljp_itsolutions.Models.Order>
@{
    ViewData["Title"] = "Transaction Overrides";
}

<div class="container-fluid py-4">
    <div class="card border shadow-sm rounded-3 overflow-hidden mb-4">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th class="ps-4">Transaction ID</th>
                        <th>Date & Time</th>
                        <th>Cashier</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th class="text-end pe-4">Manager Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <span class="fw-bold text-primary">#@order.OrderID.ToString().Substring(0, 8)</span>
                            </td>
                            <td>
                                <div class="small text-muted">@order.OrderDate.ToString("MMM dd, yyyy")</div>
                                <div class="fw-semibold">@order.OrderDate.ToString("HH:mm")</div>
                            </td>
                            <td>@order.Cashier?.FullName</td>
                            <td class="fw-bold text-dark">â‚±@order.FinalAmount.ToString("N2")</td>
                            <td>
                                @if (order.PaymentStatus == "Paid" || order.PaymentStatus == "Paid (Digital)")
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success">Paid</span>
                                }
                                else if (order.PaymentStatus == "Voided")
                                {
                                    <span class="badge bg-danger bg-opacity-10 text-danger">Voided</span>
                                }
                                else if (order.PaymentStatus == "Refunded")
                                {
                                    <span class="badge bg-info bg-opacity-10 text-info">Refunded</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning bg-opacity-10 text-warning">@order.PaymentStatus</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                @if (order.PaymentStatus == "Paid" || order.PaymentStatus == "Paid (Digital)")
                                {
                                    <div class="d-flex justify-content-end gap-2">
                                        <button class="btn btn-sm btn-outline-danger px-3 rounded-pill void-btn" 
                                                data-id="@order.OrderID" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#voidModal">
                                            <i class="fas fa-ban me-1"></i>Void
                                        </button>
                                        <button class="btn btn-sm btn-outline-info px-3 rounded-pill refund-btn"
                                                data-id="@order.OrderID"
                                                data-bs-toggle="modal"
                                                data-bs-target="#refundModal">
                                            <i class="fas fa-undo me-1"></i>Refund
                                        </button>
                                    </div>
                                }
                                else
                                {
                                    <span class="badge bg-light text-muted border">Locked</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Void Confirmation Modal -->
<div class="modal fade" id="voidModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title fw-bold">Critical Action: Void Transaction</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body py-4 text-center">
                <div class="mb-4">
                    <i class="fas fa-exclamation-triangle fa-4x text-danger animate__animated animate__pulse animate__infinite"></i>
                </div>
                <h5 class="fw-bold">Confirm Transaction Void?</h5>
                <p class="text-muted mb-0">This action will mark the transaction as voided and cannot be undone.</p>
            </div>
            <div class="modal-footer bg-light border-0">
                <form asp-action="VoidOrder" method="post" class="w-100">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="void-orderid" />
                    <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger rounded-pill px-4 float-end">Confirm & Void</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Refund Confirmation Modal -->
<div class="modal fade" id="refundModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title fw-bold">Process Refund</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body py-4 text-center">
                <div class="mb-4">
                    <i class="fas fa-undo-alt fa-4x text-info"></i>
                </div>
                <h5 class="fw-bold">Process this refund?</h5>
                <p class="text-muted mb-0">The order will be marked as Refunded in the financial records.</p>
            </div>
            <div class="modal-footer bg-light border-0">
                <form asp-action="RefundOrder" method="post" class="w-100">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="refund-orderid" />
                    <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-info rounded-pill px-4 float-end text-white">Confirm Refund</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.void-btn').click(function() {
                $('#void-orderid').val($(this).data('id'));
            });
            $('.refund-btn').click(function() {
                $('#refund-orderid').val($(this).data('id'));
            });
        });
    </script>
}
