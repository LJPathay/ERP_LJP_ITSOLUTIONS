@{
    ViewData["Title"] = "Business Intelligence";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Business Intelligence</h2>
            <p class="text-muted">Analytics and sales performance reports.</p>
        </div>
        <div class="d-flex gap-2">
            <input type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-01")" />
            <span class="align-self-center">to</span>
            <input type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            <button class="btn btn-primary">Filter</button>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-lg-7">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent border-0 py-3">
                    <h5 class="fw-bold mb-0">Sales Performance</h5>
                </div>
                <div class="card-body">
                    <div class="chart-placeholder d-flex align-items-center justify-content-center bg-light rounded" style="height: 300px;">
                        <div class="text-center">
                            <i class="fas fa-chart-area fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Interactive Chart Visualization (Placeholder)</p>
                            <small class="text-muted d-block">Requires Chart.js or D3.js integration</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-5">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent border-0 py-3">
                    <h5 class="fw-bold mb-0">Sales by Category</h5>
                </div>
                <div class="card-body">
                    <div class="chart-placeholder d-flex align-items-center justify-content-center bg-light rounded" style="height: 300px;">
                        <div class="text-center">
                            <i class="fas fa-chart-pie fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Revenue Share Placeholder</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-transparent border-0 py-3 d-flex justify-content-between align-items-center">
            <h5 class="fw-bold mb-0">Top Performing Products</h5>
            <a href="#" class="btn btn-link btn-sm text-decoration-none">Export Summary</a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Product</th>
                            <th>Total Sold</th>
                            <th>Revenue</th>
                            <th>Trend</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="ps-4">
                                <span class="fw-bold">Espresso Blend</span>
                            </td>
                            <td>450 units</td>
                            <td>$1,250.00</td>
                            <td><span class="text-success fw-bold">↑ 12%</span></td>
                        </tr>
                        <tr>
                            <td class="ps-4">
                                <span class="fw-bold">Caramel Macchiato</span>
                            </td>
                            <td>380 units</td>
                            <td>$1,900.00</td>
                            <td><span class="text-success fw-bold">↑ 8%</span></td>
                        </tr>
                        <tr>
                            <td class="ps-4">
                                <span class="fw-bold">Iced Vanilla Latte</span>
                            </td>
                            <td>310 units</td>
                            <td>$1,395.00</td>
                            <td><span class="text-danger fw-bold">↓ 4%</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
