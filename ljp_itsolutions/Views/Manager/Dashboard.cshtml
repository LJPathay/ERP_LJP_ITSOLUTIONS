@model dynamic
@{
    ViewData["Title"] = "Manager Dashboard";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Manager Overview</h2>
            <p class="text-muted">Quick insights into your store operations.</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-primary"><i class="fas fa-download me-2"></i>Export Report</button>
            <button class="btn btn-primary"><i class="fas fa-plus me-2"></i>New Entry</button>
        </div>
    </div>

    <!-- KPI Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="stats-icon bg-primary bg-opacity-10 text-primary rounded-3 p-3 me-3">
                            <i class="fas fa-coffee fa-lg"></i>
                        </div>
                        <div>
                            <p class="text-muted mb-0 small uppercase fw-bold ls-1">Total Products</p>
                            <h3 class="fw-bold mb-0">@Model.TotalProducts</h3>
                        </div>
                    </div>
                    <div class="progress" style="height: 6px;">
                        <div class="progress-bar" role="progressbar" style="width: 75%"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="stats-icon bg-success bg-opacity-10 text-success rounded-3 p-3 me-3">
                            <i class="fas fa-shopping-cart fa-lg"></i>
                        </div>
                        <div>
                            <p class="text-muted mb-0 small uppercase fw-bold ls-1">Total Orders</p>
                            <h3 class="fw-bold mb-0">@Model.TotalOrders</h3>
                        </div>
                    </div>
                    <div class="progress" style="height: 6px;">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 60%"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="stats-icon bg-info bg-opacity-10 text-info rounded-3 p-3 me-3">
                            <i class="fas fa-users fa-lg"></i>
                        </div>
                        <div>
                            <p class="text-muted mb-0 small uppercase fw-bold ls-1">Active Users</p>
                            <h3 class="fw-bold mb-0">@Model.TotalUsers</h3>
                        </div>
                    </div>
                    <div class="progress" style="height: 6px;">
                        <div class="progress-bar bg-info" role="progressbar" style="width: 45%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Quick Actions -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent border-0 py-3">
                    <h5 class="fw-bold mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <a asp-action="Products" class="card action-card border-0 bg-light text-decoration-none p-4 h-100 text-center transition">
                                <i class="fas fa-plus-circle text-primary mb-3 fa-2x"></i>
                                <h6 class="fw-bold mb-1">Add Product</h6>
                                <p class="text-muted small mb-0">Create new menu item</p>
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-action="Inventory" class="card action-card border-0 bg-light text-decoration-none p-4 h-100 text-center transition">
                                <i class="fas fa-boxes text-success mb-3 fa-2x"></i>
                                <h6 class="fw-bold mb-1">Update Stock</h6>
                                <p class="text-muted small mb-0">Manage current inventory</p>
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-action="Reports" class="card action-card border-0 bg-light text-decoration-none p-4 h-100 text-center transition">
                                <i class="fas fa-chart-line text-info mb-3 fa-2x"></i>
                                <h6 class="fw-bold mb-1">View Reports</h6>
                                <p class="text-muted small mb-0">Daily sales analytics</p>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity Placeholder -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent border-0 py-3">
                    <h5 class="fw-bold mb-0">Recent Activity</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item border-0 p-3">
                            <div class="d-flex align-items-center">
                                <div class="bg-light rounded-circle p-2 me-3">
                                    <i class="fas fa-shopping-bag text-primary small"></i>
                                </div>
                                <div>
                                    <p class="mb-0 small fw-bold">New order #1024</p>
                                    <p class="text-muted x-small mb-0">5 minutes ago</p>
                                </div>
                            </div>
                        </div>
                        <div class="list-group-item border-0 p-3">
                            <div class="d-flex align-items-center">
                                <div class="bg-light rounded-circle p-2 me-3">
                                    <i class="fas fa-exclamation-triangle text-warning small"></i>
                                </div>
                                <div>
                                    <p class="mb-0 small fw-bold">Low stock: Espresso Beans</p>
                                    <p class="text-muted x-small mb-0">1 hour ago</p>
                                </div>
                            </div>
                        </div>
                        <div class="list-group-item border-0 p-3">
                            <div class="d-flex align-items-center">
                                <div class="bg-light rounded-circle p-2 me-3">
                                    <i class="fas fa-user-plus text-success small"></i>
                                </div>
                                <div>
                                    <p class="mb-0 small fw-bold">New customer registered</p>
                                    <p class="text-muted x-small mb-0">3 hours ago</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 text-center py-3">
                    <a href="#" class="btn btn-link btn-sm text-decoration-none text-muted">View All Activity</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .ls-1 { letter-spacing: 0.5px; }
    .uppercase { text-transform: uppercase; }
    .x-small { font-size: 0.7rem; }
    .transition { transition: transform 0.2s; }
    .action-card:hover {
        transform: translateY(-5px);
        background: #fff !important;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1) !important;
    }
</style>
