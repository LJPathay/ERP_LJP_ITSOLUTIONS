@model ljp_itsolutions.Models.ManagerDashboardViewModel
@{
    ViewData["Title"] = "Manager Dashboard";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Manager Overview</h2>
            <p class="text-muted">Quick insights into your store operations.</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-primary"><i class="fas fa-download me-2"></i>Export Report</button>
            <button class="btn btn-primary"><i class="fas fa-plus me-2"></i>New Entry</button>
        </div>
    </div>

    <!-- KPI Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 stat-card">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="stats-icon bg-primary bg-opacity-10 text-primary rounded-3 p-3 me-3">
                            <i class="fas fa-coffee fa-lg"></i>
                        </div>
                        <div>
                            <p class="text-muted mb-0 small uppercase fw-bold ls-1">Total Products</p>
                            <h3 class="fw-bold mb-0">@Model.TotalProducts</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 stat-card">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="stats-icon bg-success bg-opacity-10 text-success rounded-3 p-3 me-3">
                            <i class="fas fa-shopping-cart fa-lg"></i>
                        </div>
                        <div>
                            <p class="text-muted mb-0 small uppercase fw-bold ls-1">Total Orders</p>
                            <h3 class="fw-bold mb-0">@Model.TotalOrders</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 stat-card">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="stats-icon bg-info bg-opacity-10 text-info rounded-3 p-3 me-3">
                            <i class="fas fa-dollar-sign fa-lg"></i>
                        </div>
                        <div>
                            <p class="text-muted mb-0 small uppercase fw-bold ls-1">Total Revenue</p>
                            <h3 class="fw-bold mb-0">₱@Model.TotalRevenue.ToString("N2")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 stat-card">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="stats-icon bg-warning bg-opacity-10 text-warning rounded-3 p-3 me-3">
                            <i class="fas fa-users fa-lg"></i>
                        </div>
                        <div>
                            <p class="text-muted mb-0 small uppercase fw-bold ls-1">Active Users</p>
                            <h3 class="fw-bold mb-0">@Model.TotalUsers</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Recent Orders -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-transparent border-0 py-3 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0">Recent Orders</h5>
                    <a asp-controller="Cashier" asp-action="TransactionHistory" class="btn btn-sm btn-light">View All</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Order ID</th>
                                    <th>Date</th>
                                    <th>Cashier</th>
                                    <th>Amount</th>
                                    <th class="text-end pe-4">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.RecentOrders)
                                {
                                    <tr>
                                        <td class="ps-4 fw-bold">#@order.OrderID</td>
                                        <td>@order.OrderDate.ToString("MMM dd, hh:mm tt")</td>
                                        <td>@order.Cashier?.FullName</td>
                                        <td>₱@order.FinalAmount.ToString("N2")</td>
                                        <td class="text-end pe-4">
                                            @if (order.PaymentStatus == "Paid")
                                            {
                                                <span class="badge bg-success bg-opacity-10 text-success">Paid</span>
                                            }
                                            else if (order.PaymentStatus == "Voided")
                                            {
                                                <span class="badge bg-danger bg-opacity-10 text-danger">Voided</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning bg-opacity-10 text-warning">@order.PaymentStatus</span>
                                            }
                                        </td>
                                    </tr>
                                }
                                @if (!Model.RecentOrders.Any())
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-4 text-muted">No orders found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Top Products -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent border-0 py-3">
                    <h5 class="fw-bold mb-0">Top Performing Products</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Product Name</th>
                                    <th>Total Sold</th>
                                    <th class="text-end pe-4">Revenue</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.TopProducts)
                                {
                                    <tr>
                                        <td class="ps-4 fw-bold">@item.ProductName</td>
                                        <td>@item.TotalSold units</td>
                                        <td class="text-end pe-4">₱@item.Revenue.ToString("N2")</td>
                                    </tr>
                                }
                                @if (!Model.TopProducts.Any())
                                {
                                    <tr>
                                        <td colspan="3" class="text-center py-4 text-muted">No sales data recorded.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar Actions & Alerts -->
        <div class="col-lg-4">
            <!-- Low Stock Alerts -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-transparent border-0 py-3">
                    <h5 class="fw-bold mb-0 text-danger"><i class="fas fa-exclamation-triangle me-2"></i>Low Stock Alerts</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @foreach (var alert in Model.LowStockProducts)
                        {
                            <div class="list-group-item border-0 p-3">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-danger bg-opacity-10 rounded-circle p-2 me-3">
                                            <i class="fas fa-box text-danger small"></i>
                                        </div>
                                        <div>
                                            <p class="mb-0 small fw-bold">@alert.ProductName</p>
                                            <p class="text-muted x-small mb-0">Category: @alert.Category?.CategoryName</p>
                                        </div>
                                    </div>
                                    <span class="badge bg-danger rounded-pill">@alert.StockQuantity left</span>
                                </div>
                            </div>
                        }
                        @if (!Model.LowStockProducts.Any())
                        {
                            <div class="p-4 text-center">
                                <i class="fas fa-check-circle text-success fa-2x mb-2"></i>
                                <p class="text-muted mb-0 small">All products are healthy.</p>
                            </div>
                        }
                    </div>
                </div>
                @if (Model.LowStockProducts.Any())
                {
                    <div class="card-footer bg-transparent border-0 text-center py-3">
                        <a asp-action="Inventory" class="btn btn-outline-danger btn-sm w-100">Manage Inventory</a>
                    </div>
                }
            </div>

            <!-- Quick Access -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent border-0 py-3">
                    <h5 class="fw-bold mb-0">Quick Management</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Products" class="btn btn-light text-start p-3 border-0 transition">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-plus-circle text-primary me-3 fa-lg"></i>
                                <div>
                                    <h6 class="fw-bold mb-0 small">Add New Product</h6>
                                    <p class="text-muted x-small mb-0">Add to coffee shop menu</p>
                                </div>
                            </div>
                        </a>
                        <a asp-action="Reports" class="btn btn-light text-start p-3 border-0 transition">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-chart-line text-info me-3 fa-lg"></i>
                                <div>
                                    <h6 class="fw-bold mb-0 small">Sales Analysis</h6>
                                    <p class="text-muted x-small mb-0">View deep analytics</p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .ls-1 { letter-spacing: 0.5px; }
    .uppercase { text-transform: uppercase; }
    .x-small { font-size: 0.7rem; }
    .transition { transition: transform 0.2s; }
    .action-card:hover {
        transform: translateY(-5px);
        background: #fff !important;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1) !important;
    }
</style>
