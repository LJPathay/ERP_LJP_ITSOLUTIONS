@model IEnumerable<ljp_itsolutions.Models.Product>
@{
    ViewData["Title"] = "Recipe Management";
    var ingredients = ViewBag.Ingredients as IEnumerable<ljp_itsolutions.Models.Ingredient>;
}
<style>
    .recipe-entry { transition: all 0.2s ease-in-out; }
    .recipe-entry:hover { border-color: #0d6efd !important; box-shadow: 0 0.25rem 0.5rem rgba(0,0,0,0.05) !important; }
    .x-small { font-size: 0.75rem; }
    .hover-scale { transition: transform 0.2s; }
    .hover-scale:hover { transform: scale(1.1); }
</style>

<div class="container-fluid py-4">
    <!-- Recipe Cards -->
    <div class="row g-4">
        @foreach (var product in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="fw-bold mb-0">@product.ProductName</h6>
                            <small class="text-muted">@product.Category?.CategoryName</small>
                        </div>
                        <button class="btn btn-sm btn-primary" 
                                data-bs-toggle="modal" 
                                data-bs-target="#editRecipeModal"
                                data-product-id="@product.ProductID"
                                data-product-name="@product.ProductName">
                            <i class="fas fa-edit"></i>
                        </button>
                    </div>
                    <div class="card-body">
                        @if (product.ProductRecipes != null && product.ProductRecipes.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var recipe in product.ProductRecipes)
                                {
                                    <div class="list-group-item px-0 py-2 border-0">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-leaf text-success me-2"></i>
                                                <div>
                                                    <span class="small d-block fw-bold">@recipe.Ingredient?.Name</span>
                                                    @{
                                                        var stock = recipe.Ingredient?.StockQuantity ?? 0;
                                                        var threshold = recipe.Ingredient?.LowStockThreshold ?? 0;
                                                        var stockClass = stock <= threshold ? "text-danger" : "text-muted";
                                                    }
                                                    <small class="@stockClass x-small">Stock: @stock @recipe.Ingredient?.Unit</small>
                                                </div>
                                            </div>
                                            <span class="badge bg-primary bg-opacity-10 text-primary rounded-pill">
                                                @recipe.QuantityRequired @recipe.Ingredient?.Unit
                                            </span>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-3">
                                <i class="fas fa-exclamation-circle text-warning mb-2"></i>
                                <p class="text-muted small mb-0">No recipe defined</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Edit Recipe Modal -->
<div class="modal fade" id="editRecipeModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content border-0 shadow">
            <div class="modal-header">
                <h5 class="modal-title fw-bold">Edit Recipe: <span id="modal-product-name"></span></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="UpdateRecipe" method="post">
                <input type="hidden" name="ProductID" id="modal-product-id" />
                <div class="modal-body">
                    <p class="text-muted small mb-3">Define which ingredients are used and how much is needed per serving.</p>
                    
                    <div id="recipe-ingredients-container">
                        <!-- Will be populated dynamically -->
                    </div>

                    <button type="button" class="btn btn-sm btn-outline-primary mt-3" onclick="addIngredientRow()">
                        <i class="fas fa-plus me-2"></i>Add Ingredient
                    </button>
                </div>
                <div class="modal-footer bg-light border-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary px-4">Save Recipe</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let ingredientsList = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ingredients));
        let currentRecipes = [];
        let rowCounter = 0;

        document.addEventListener('DOMContentLoaded', function() {
            const modal = document.getElementById('editRecipeModal');
            modal.addEventListener('show.bs.modal', async function(event) {
                const button = event.relatedTarget;
                const productId = button.getAttribute('data-product-id');
                const productName = button.getAttribute('data-product-name');
                
                document.getElementById('modal-product-name').innerText = productName;
                document.getElementById('modal-product-id').value = productId;
                
                // Fetch existing recipes
                await loadRecipes(productId);
            });
        });

        async function loadRecipes(productId) {
            try {
                const response = await fetch(`/Manager/GetProductRecipes?productId=${productId}`);
                currentRecipes = await response.json();
                renderRecipeRows();
            } catch (error) {
                console.error('Error loading recipes:', error);
                currentRecipes = [];
                renderRecipeRows();
            }
        }

        function renderRecipeRows() {
            const container = document.getElementById('recipe-ingredients-container');
            container.innerHTML = '';
            rowCounter = 0;

            if (currentRecipes.length === 0) {
                addIngredientRow();
            } else {
                currentRecipes.forEach(recipe => {
                    addIngredientRow(recipe.ingredientID, recipe.quantityRequired);
                });
            }
        }

        function addIngredientRow(selectedIngredientId = '', quantity = '') {
            const container = document.getElementById('recipe-ingredients-container');
            const rowId = rowCounter++;
            
            const row = document.createElement('div');
            row.className = 'recipe-entry p-3 bg-light rounded-3 mb-3 border transition-all';
            row.id = `recipe-row-${rowId}`;
            
            row.innerHTML = `
                <div class="row g-3 align-items-end">
                    <div class="col-md-6">
                        <label class="form-label x-small fw-bold text-muted mb-1">Ingredient</label>
                        <select name="Recipes[${rowId}].IngredientID" class="form-select border-0 shadow-sm">
                            <option value="">Select Ingredient</option>
                            ${ingredientsList.map(ing => 
                                `<option value="${ing.IngredientID}" ${ing.IngredientID == selectedIngredientId ? 'selected' : ''}>
                                    ${ing.Name} (Stock: ${ing.StockQuantity} ${ing.Unit})
                                </option>`
                            ).join('')}
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label x-small fw-bold text-muted mb-1">Quantity</label>
                        <div class="input-group shadow-sm">
                            <input type="number" step="0.001" name="Recipes[${rowId}].QuantityRequired" 
                                   class="form-control border-0" placeholder="0.00" value="${quantity}" />
                        </div>
                    </div>
                    <div class="col-md-2 text-end">
                        <button type="button" class="btn btn-outline-danger border-0 hover-scale" onclick="removeRow(${rowId})">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </div>
                </div>
            `;
            
            container.appendChild(row);
        }

        function removeRow(rowId) {
            const row = document.getElementById(`recipe-row-${rowId}`);
            if (row) row.remove();
        }
    </script>
}
