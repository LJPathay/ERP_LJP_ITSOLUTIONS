@model ljp_itsolutions.Models.FinanceViewModel
@{
    ViewData["Title"] = "Profit & Expense Summary";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-end mb-4">
        <button class="btn btn-primary rounded-pill px-4 shadow-sm" data-bs-toggle="modal" data-bs-target="#addExpenseModal">
            <i class="fas fa-plus me-2"></i>Record New Expense
        </button>
    </div>

    <!-- Financial Summary Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="kpi-card h-100 transition-hover">
                <div class="kpi-card-icon bg-success bg-opacity-10 text-success">
                    <i class="fas fa-arrow-up fa-lg"></i>
                </div>
                <p class="kpi-card-label">Total Revenue</p>
                <h3 class="kpi-card-value text-success">₱@Model.TotalRevenue.ToString("N2")</h3>
            </div>
        </div>
        <div class="col-md-4">
            <div class="kpi-card h-100 transition-hover">
                <div class="kpi-card-icon bg-danger bg-opacity-10 text-danger">
                    <i class="fas fa-arrow-down fa-lg"></i>
                </div>
                <p class="kpi-card-label">Total Expenses</p>
                <h3 class="kpi-card-value text-danger">₱@Model.TotalExpenses.ToString("N2")</h3>
            </div>
        </div>
        <div class="col-md-4">
            <div class="kpi-card h-100 transition-hover">
                <div class="kpi-card-icon bg-primary bg-opacity-10 text-primary">
                    <i class="fas fa-wallet fa-lg"></i>
                </div>
                <p class="kpi-card-label">Net Profit</p>
                <h3 class="kpi-card-value text-primary">₱@Model.NetProfit.ToString("N2")</h3>
            </div>
        </div>
    </div>

    <!-- Financial Trends Chart -->
    <div class="card border-0 shadow-soft rounded-lg overflow-hidden mb-4">
        <div class="card-header bg-white py-3 border-bottom">
            <h5 class="fw-bold mb-0">Financial Performance Overview</h5>
        </div>
        <div class="card-body">
            <div style="height: 350px;">
                <canvas id="financeTrendChart"></canvas>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Recent Expenses -->
        <div class="col-lg-7">
            <div class="modern-table h-100">
                <div class="p-3 bg-light border-bottom">
                    <h6 class="fw-bold mb-0">Recent Business Expenses</h6>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                            <tr>
                                <th class="ps-4">Expense Item</th>
                                <th>Category</th>
                                <th>Date</th>
                                <th class="text-end pe-4">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var exp in Model.Expenses)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold">@exp.Title</div>
                                        <div class="text-muted text-xs">@exp.Description</div>
                                    </td>
                                    <td><span class="status-badge warning text-xs">@exp.Category</span></td>
                                    <td><span class="text-muted text-xs">@exp.ExpenseDate.ToString("MMM dd")</span></td>
                                    <td class="text-end pe-4 fw-bold text-danger">-₱@exp.Amount.ToString("N2")</td>
                                </tr>
                            }
                            @if (!Model.Expenses.Any())
                            {
                                <tr>
                                    <td colspan="4">
                                        <div class="empty-state p-4">
                                            <i class="fas fa-receipt empty-state-icon fa-2x"></i>
                                            <p class="text-muted small">No expenses recorded.</p>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Recent Income -->
        <div class="col-lg-5">
            <div class="card border-0 shadow-soft rounded-lg h-100">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="fw-bold mb-0">Record Stream (Latest Income)</h6>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @foreach (var order in Model.RecentTransactions)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center py-3 border-0 border-bottom mx-2">
                                <div>
                                    <h6 class="fw-bold mb-0 text-sm">Order #@order.OrderID.ToString().Substring(0, 8)</h6>
                                    <small class="text-muted x-small">@order.OrderDate.ToString("HH:mm") • @order.PaymentMethod</small>
                                </div>
                                <span class="fw-bold text-success">+₱@order.FinalAmount.ToString("F2")</span>
                            </div>
                        }
                    </div>
                </div>
                <div class="card-footer bg-light border-0 text-center py-2">
                    <a asp-action="Transactions" class="btn btn-link btn-sm text-decoration-none fw-bold">View Financial Records</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Expense Modal -->
<div class="modal fade modern-modal" id="addExpenseModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Record New Expense</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="CreateExpense" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="modern-form-label">Expense Title</label>
                        <input type="text" name="Title" class="modern-form-control w-100" required placeholder="e.g. Electricity Bill Jan" />
                    </div>
                    <div class="mb-3">
                        <label class="modern-form-label">Description</label>
                        <textarea name="Description" class="modern-form-control w-100" rows="2" placeholder="Brief details about this expense..."></textarea>
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            <label class="modern-form-label">Category</label>
                            <select name="Category" class="modern-form-control w-100" required>
                                <option value="Supplies">Supplies</option>
                                <option value="Utilities">Utilities</option>
                                <option value="Salary">Salary</option>
                                <option value="Rent">Rent</option>
                                <option value="Marketing">Marketing</option>
                                <option value="General">General</option>
                            </select>
                        </div>
                        <div class="col">
                            <label class="modern-form-label">Amount (₱)</label>
                            <input type="number" step="0.01" name="Amount" class="modern-form-control w-100" required placeholder="0.00" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="modern-form-label">Date</label>
                        <input type="date" name="ExpenseDate" class="modern-form-control w-100" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary rounded-pill px-4">Save Expense</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const ctx = document.getElementById('financeTrendChart').getContext('2d');
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: @Html.Raw(Json.Serialize(ViewBag.TrendLabels)),
                    datasets: [
                        {
                            label: 'Income (₱)',
                            data: @Html.Raw(Json.Serialize(ViewBag.IncomeTrend)),
                            borderColor: '#3b82f6', // Premium Blue
                            backgroundColor: 'rgba(59, 130, 246, 0.1)',
                            fill: true,
                            tension: 0.4,
                            pointRadius: 4,
                            pointBackgroundColor: '#3b82f6',
                            borderWidth: 3
                        },
                        {
                            label: 'Expenses (₱)',
                            data: @Html.Raw(Json.Serialize(ViewBag.ExpenseTrend)),
                            borderColor: '#ef4444', // Premium Red
                            backgroundColor: 'rgba(239, 68, 68, 0.1)',
                            fill: true,
                            tension: 0.4,
                            pointRadius: 0,
                            borderWidth: 2,
                            borderDash: [5, 5]
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    interaction: {
                        mode: 'index',
                        intersect: false,
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                display: true,
                                color: 'rgba(0,0,0,0.03)'
                            },
                            ticks: {
                                callback: function(value) { return '₱' + value.toLocaleString(); },
                                font: { size: 11 }
                            }
                        },
                        x: {
                            grid: { display: false },
                            ticks: { font: { size: 11 } }
                        }
                    },
                    plugins: {
                        legend: {
                            position: 'top',
                            align: 'end',
                            labels: {
                                boxWidth: 10,
                                usePointStyle: true,
                                pointStyle: 'circle',
                                font: { size: 12, weight: '600' }
                            }
                        },
                        tooltip: {
                            backgroundColor: '#1e293b',
                            padding: 12,
                            titleFont: { size: 12 },
                            bodyFont: { size: 13 },
                            callbacks: {
                                label: function(context) {
                                    return ' ' + context.dataset.label + ': ₱' + context.parsed.y.toLocaleString();
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
}

<style>
    .x-small { font-size: 0.75rem; }
    .shadow-soft { box-shadow: 0 4px 20px rgba(0,0,0,0.05); }
    .rounded-lg { border-radius: 16px; }
</style>
