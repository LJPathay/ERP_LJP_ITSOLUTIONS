@model ljp_itsolutions.Models.FinanceViewModel
@{
    ViewData["Title"] = "Profit & Expense Summary";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-end mb-4">
        <button class="btn btn-primary rounded-pill px-4 shadow-sm" data-bs-toggle="modal" data-bs-target="#addExpenseModal">
            <i class="fas fa-plus me-2"></i>Record New Expense
        </button>
    </div>

    <!-- Financial Summary Cards (Compact) -->
    <div class="row g-3 mb-4">
        <!-- Revenue -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden" style="border-left: 3px solid #10b981 !important;">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted x-small fw-bold text-uppercase tracking-wider mb-1">Total Revenue</p>
                            <h4 class="fw-bold mb-0 text-success">₱@Model.TotalRevenue.ToString("N2")</h4>
                            <span class="text-muted xx-small">Gross Earnings</span>
                        </div>
                        <div class="bg-success bg-opacity-10 rounded-3 p-2 text-success">
                            <i class="fas fa-arrow-up"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Expenses -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden" style="border-left: 3px solid #ef4444 !important;">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted x-small fw-bold text-uppercase tracking-wider mb-1">Total Expenses</p>
                            <h4 class="fw-bold mb-0 text-danger">₱@Model.TotalExpenses.ToString("N2")</h4>
                             <span class="text-muted xx-small">Operating Costs</span>
                        </div>
                        <div class="bg-danger bg-opacity-10 rounded-3 p-2 text-danger">
                            <i class="fas fa-arrow-down"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Net Profit -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden" style="border-left: 3px solid #3b82f6 !important;">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted x-small fw-bold text-uppercase tracking-wider mb-1">Net Profit</p>
                            <h4 class="fw-bold mb-0 text-primary">₱@Model.NetProfit.ToString("N2")</h4>
                             <span class="text-muted xx-small">Bottom Line</span>
                        </div>
                        <div class="bg-primary bg-opacity-10 rounded-3 p-2 text-primary">
                            <i class="fas fa-wallet"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Financial Trends Chart -->
    <div class="card border shadow-sm rounded-3 overflow-hidden mb-4">
        <div class="card-header bg-white py-3 border-bottom">
            <h5 class="fw-bold mb-0">Financial Performance Overview</h5>
        </div>
        <div class="card-body">
            <div style="height: 350px;">
                <canvas id="financeTrendChart"></canvas>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Recent Expenses -->
        <div class="col-lg-7">
            <div class="card border shadow-sm rounded-3 overflow-hidden h-100">
                <div class="card-header bg-light py-3 border-bottom">
                    <h6 class="fw-bold mb-0">Recent Business Expenses</h6>
                </div>
                <div class="table-responsive" style="max-height: 450px; overflow-y: auto;">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                            <tr>
                                <th class="ps-4">Expense Item</th>
                                <th>By</th>
                                <th>Category</th>
                                <th>Date</th>
                                <th class="text-end">Amount</th>
                                <th class="text-end pe-4"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var exp in Model.Expenses)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold">@exp.Title</div>
                                        <div class="text-muted text-xs">@exp.Description</div>
                                    </td>
                                    <td>
                                        <span class="text-xs fw-medium text-muted">@(exp.User?.FullName?.Split(' ')[0] ?? "System")</span>
                                    </td>
                                    <td><span class="status-badge warning text-xs">@exp.Category</span></td>
                                    <td><span class="text-muted text-xs">@exp.ExpenseDate.ToString("MMM dd")</span></td>
                                    <td class="text-end fw-bold text-danger">-₱@exp.Amount.ToString("N2")</td>
                                    <td class="text-end pe-4">
                                        <div class="d-flex justify-content-end gap-1">
                                            <button class="btn btn-sm btn-light border-0 rounded-circle edit-expense-btn" title="Edit"
                                                    data-id="@exp.ExpenseID"
                                                    data-title="@exp.Title"
                                                    data-desc="@exp.Description"
                                                    data-cat="@exp.Category"
                                                    data-amount="@exp.Amount"
                                                    data-date="@exp.ExpenseDate.ToString("yyyy-MM-dd")">
                                                <i class="fas fa-edit text-primary"></i>
                                            </button>
                                            <form asp-action="DeleteExpense" method="post" onsubmit="return confirm('Remove this expense record?');" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@exp.ExpenseID" />
                                                <button type="submit" class="btn btn-sm btn-light border-0 text-danger rounded-circle">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                            @if (!Model.Expenses.Any())
                            {
                                <tr>
                                    <td colspan="5">
                                        <div class="empty-state p-4 text-center">
                                            <i class="fas fa-receipt empty-state-icon fa-2x opacity-25 mb-2"></i>
                                            <p class="text-muted small">No expenses recorded.</p>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Recent Income -->
        <div class="col-lg-5">
            <div class="card border shadow-sm rounded-3 h-100">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="fw-bold mb-0">Record Stream (Latest Income)</h6>
                </div>
                <div class="card-body p-0 scrollable-table" style="max-height: 450px; overflow-y: auto;">
                    <div class="list-group list-group-flush">
                        @foreach (var order in Model.RecentTransactions)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center py-3 border-0 border-bottom mx-2">
                                <div>
                                    <h6 class="fw-bold mb-0 text-sm">Order #@order.OrderID.ToString().Substring(0, 8)</h6>
                                    <small class="text-muted x-small">@order.OrderDate.ToString("HH:mm") • @order.PaymentMethod</small>
                                </div>
                                <span class="fw-bold text-success">+₱@order.FinalAmount.ToString("F2")</span>
                            </div>
                        }
                    </div>
                </div>
                <div class="card-footer bg-light border-0 text-center py-2">
                    <a asp-action="Transactions" class="btn btn-link btn-sm text-decoration-none fw-bold">View Financial Records</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Expense Modal -->
<div class="modal fade modern-modal" id="addExpenseModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h5 class="modal-title text-dark fw-bold">Record New Expense</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="CreateExpense" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label small fw-bold">Expense Title</label>
                        <input type="text" name="Title" class="form-control" required placeholder="e.g. Electricity Bill Jan" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label small fw-bold">Description</label>
                        <textarea name="Description" class="form-control" rows="2" placeholder="Brief details about this expense..."></textarea>
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            <label class="form-label small fw-bold">Category</label>
                            <select name="Category" class="form-select" required>
                                <option value="Supplies">Supplies</option>
                                <option value="Utilities">Utilities</option>
                                <option value="Salary">Salary</option>
                                <option value="Rent">Rent</option>
                                <option value="Marketing">Marketing</option>
                                <option value="General">General</option>
                            </select>
                        </div>
                        <div class="col">
                            <label class="form-label small fw-bold">Amount (₱)</label>
                            <input type="number" step="0.01" name="Amount" class="form-control" required placeholder="0.00" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label small fw-bold">Date</label>
                        <input type="date" name="ExpenseDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary rounded-pill px-4">Save Expense</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Expense Modal -->
<div class="modal fade modern-modal" id="editExpenseModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title fw-bold">Update Expense Record</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="EditExpense" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="ExpenseID" id="edit-exp-id" />
                <div class="modal-body p-4">
                    <div class="mb-3">
                        <label class="form-label small fw-bold">Expense Title</label>
                        <input type="text" name="Title" id="edit-exp-title" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label small fw-bold">Description</label>
                        <textarea name="Description" id="edit-exp-desc" class="form-control" rows="2"></textarea>
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            <label class="form-label small fw-bold">Category</label>
                            <select name="Category" id="edit-exp-cat" class="form-select" required>
                                <option value="Supplies">Supplies</option>
                                <option value="Utilities">Utilities</option>
                                <option value="Salary">Salary</option>
                                <option value="Rent">Rent</option>
                                <option value="Marketing">Marketing</option>
                                <option value="General">General</option>
                            </select>
                        </div>
                        <div class="col">
                            <label class="form-label small fw-bold">Amount (₱)</label>
                            <input type="number" step="0.01" name="Amount" id="edit-exp-amount" class="form-control" required />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label small fw-bold">Date</label>
                        <input type="date" name="ExpenseDate" id="edit-exp-date" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer bg-light border-0">
                    <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary rounded-pill px-4">Update Expense</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Edit Expense Logic
            document.querySelectorAll('.edit-expense-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.getElementById('edit-exp-id').value = this.dataset.id;
                    document.getElementById('edit-exp-title').value = this.dataset.title;
                    document.getElementById('edit-exp-desc').value = this.dataset.desc;
                    document.getElementById('edit-exp-cat').value = this.dataset.cat;
                    document.getElementById('edit-exp-amount').value = this.dataset.amount;
                    document.getElementById('edit-exp-date').value = this.dataset.date;
                    
                    new bootstrap.Modal(document.getElementById('editExpenseModal')).show();
                });
            });

            const ctx = document.getElementById('financeTrendChart').getContext('2d');
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: @Html.Raw(Json.Serialize(ViewBag.TrendLabels)),
                    datasets: [
                        {
                            label: 'Income (₱)',
                            data: @Html.Raw(Json.Serialize(ViewBag.IncomeTrend)),
                            borderColor: '#3b82f6', // Premium Blue
                            backgroundColor: 'rgba(59, 130, 246, 0.1)',
                            fill: true,
                            tension: 0.4,
                            pointRadius: 4,
                            pointBackgroundColor: '#3b82f6',
                            borderWidth: 3
                        },
                        {
                            label: 'Expenses (₱)',
                            data: @Html.Raw(Json.Serialize(ViewBag.ExpenseTrend)),
                            borderColor: '#ef4444', // Premium Red
                            backgroundColor: 'rgba(239, 68, 68, 0.1)',
                            fill: true,
                            tension: 0.4,
                            pointRadius: 0,
                            borderWidth: 2,
                            borderDash: [5, 5]
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    interaction: {
                        mode: 'index',
                        intersect: false,
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                display: true,
                                color: 'rgba(0,0,0,0.03)'
                            },
                            ticks: {
                                callback: function(value) { return '₱' + value.toLocaleString(); },
                                font: { size: 11 }
                            }
                        },
                        x: {
                            grid: { display: false },
                            ticks: { font: { size: 11 } }
                        }
                    },
                    plugins: {
                        legend: {
                            position: 'top',
                            align: 'end',
                            labels: {
                                boxWidth: 10,
                                usePointStyle: true,
                                pointStyle: 'circle',
                                font: { size: 12, weight: '600' }
                            }
                        },
                        tooltip: {
                            backgroundColor: '#1e293b',
                            padding: 12,
                            titleFont: { size: 12 },
                            bodyFont: { size: 13 },
                            callbacks: {
                                label: function(context) {
                                    return ' ' + context.dataset.label + ': ₱' + context.parsed.y.toLocaleString();
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
}


