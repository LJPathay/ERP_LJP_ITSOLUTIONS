@model ljp_itsolutions.Models.FinanceViewModel
@{
    ViewData["Title"] = "Profit & Expense Summary";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Financial Intelligence</h2>
            <p class="text-muted">Analyze your revenue, expenses, and net profitability.</p>
        </div>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addExpenseModal">
            <i class="fas fa-plus me-2"></i>Record New Expense
        </button>
    </div>

    <!-- Financial Summary Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted small uppercase fw-bold mb-1">Total Revenue</h6>
                        <h2 class="fw-bold mb-0 text-success">₱@Model.TotalRevenue.ToString("N2")</h2>
                    </div>
                    <div class="bg-success-soft p-3 rounded-circle text-success">
                        <i class="fas fa-arrow-up fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted small uppercase fw-bold mb-1">Total Expenses</h6>
                        <h2 class="fw-bold mb-0 text-danger">₱@Model.TotalExpenses.ToString("N2")</h2>
                    </div>
                    <div class="bg-danger-soft p-3 rounded-circle text-danger">
                        <i class="fas fa-arrow-down fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm p-3 bg-dark text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-light small uppercase fw-bold mb-1">Net Profit</h6>
                        <h2 class="fw-bold mb-0 text-primary">₱@Model.NetProfit.ToString("N2")</h2>
                    </div>
                    <div class="bg-primary p-3 rounded-circle text-white">
                        <i class="fas fa-dollar-sign fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Financial Trends Chart -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="fw-bold mb-0">Financial Trends (Last 6 Months)</h5>
                </div>
                <div class="card-body">
                    <canvas id="financeTrendChart" height="300"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Recent Expenses -->
        <div class="col-lg-7">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3">
                    <h5 class="fw-bold mb-0">Recent Business Expenses</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Expense</th>
                                    <th>Category</th>
                                    <th>Date</th>
                                    <th class="text-end pe-4">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var exp in Model.Expenses)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="fw-bold">@exp.Title</div>
                                            <small class="text-muted">@exp.Description</small>
                                        </td>
                                        <td><span class="badge bg-light text-dark">@exp.Category</span></td>
                                        <td>@exp.ExpenseDate.ToString("MMM dd")</td>
                                        <td class="text-end pe-4 fw-bold text-danger">-₱@exp.Amount.ToString("N2")</td>
                                    </tr>
                                }
                                @if (!Model.Expenses.Any())
                                {
                                    <tr>
                                        <td colspan="4" class="text-center py-5 text-muted">No expenses recorded yet.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Income -->
        <div class="col-lg-5">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3">
                    <h5 class="fw-bold mb-0">Recent Order Revenue</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @foreach (var order in Model.RecentTransactions)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center py-3">
                                <div>
                                    <h6 class="fw-bold mb-0">Order #@order.OrderID.ToString().Substring(0, 8)</h6>
                                    <small class="text-muted">@order.OrderDate.ToString("HH:mm") • @order.PaymentMethod</small>
                                </div>
                                <span class="fw-bold text-success">+₱@order.FinalAmount.ToString("F2")</span>
                            </div>
                        }
                    </div>
                </div>
                <div class="card-footer bg-white text-center">
                    <a asp-action="Transactions" class="btn btn-link btn-sm">View All Transactions</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Expense Modal -->
<div class="modal fade" id="addExpenseModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content border-0 shadow">
            <div class="modal-header">
                <h5 class="modal-title fw-bold">Record New Expense</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="CreateExpense" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Expense Title</label>
                        <input type="text" name="Title" class="form-control" required placeholder="e.g. Electricity Bill Jan" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea name="Description" class="form-control" rows="2" placeholder="Brief details about this expense..."></textarea>
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            <label class="form-label">Category</label>
                            <select name="Category" class="form-select" required>
                                <option value="Supplies">Supplies</option>
                                <option value="Utilities">Utilities</option>
                                <option value="Salary">Salary</option>
                                <option value="Rent">Rent</option>
                                <option value="Marketing">Marketing</option>
                                <option value="General">General</option>
                            </select>
                        </div>
                        <div class="col">
                            <label class="form-label">Amount (₱)</label>
                            <input type="number" step="0.01" name="Amount" class="form-control" required placeholder="0.00" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Date</label>
                        <input type="date" name="ExpenseDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                    </div>
                </div>
                <div class="modal-footer bg-light border-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary px-4">Save Expense</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const ctx = document.getElementById('financeTrendChart').getContext('2d');
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: @Html.Raw(Json.Serialize(ViewBag.TrendLabels)),
                    datasets: [
                        {
                            label: 'Income (₱)',
                            data: @Html.Raw(Json.Serialize(ViewBag.IncomeTrend)),
                            borderColor: '#198754', // Success Green
                            backgroundColor: 'rgba(25, 135, 84, 0.1)',
                            fill: true,
                            tension: 0.4
                        },
                        {
                            label: 'Expenses (₱)',
                            data: @Html.Raw(Json.Serialize(ViewBag.ExpenseTrend)),
                            borderColor: '#dc3545', // Danger Red
                            backgroundColor: 'rgba(220, 53, 69, 0.1)',
                            fill: true,
                            tension: 0.4
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    interaction: {
                        mode: 'index',
                        intersect: false,
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) { return '₱' + value; }
                            }
                        }
                    },
                    plugins: {
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.dataset.label + ': ₱' + context.parsed.y.toLocaleString();
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
}

<style>
    .bg-success-soft { background-color: rgba(25, 135, 84, 0.1); }
    .bg-danger-soft { background-color: rgba(220, 53, 69, 0.1); }
</style>
