@model IEnumerable<ljp_itsolutions.Models.Promotion>
@{
    ViewData["Title"] = "Promotional Campaigns";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Promotional Campaigns</h2>
            <p class="text-muted">Create and manage discounts for your customers.</p>
        </div>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPromotionModal">
            <i class="fas fa-plus me-2"></i>New Campaign
        </button>
    </div>

    <div class="modern-table">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th class="ps-4">Campaign Name</th>
                        <th>Type</th>
                        <th>Value</th>
                        <th>Status</th>
                        <th>Valid Period</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var promo in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold text-dark">@promo.PromotionName</div>
                                <div class="text-muted text-xs">Code: PROMO-@promo.PromotionID</div>
                            </td>
                            <td><span class="status-badge info text-xs">@promo.DiscountType</span></td>
                            <td class="fw-bold text-success">
                                @(promo.DiscountType == "Percentage" ? $"{promo.DiscountValue}%" : $"₱{promo.DiscountValue:F2}")
                            </td>
                            <td>
                                @if (promo.IsActive && promo.EndDate >= DateTime.Now)
                                {
                                    <span class="status-badge success">Active</span>
                                }
                                else
                                {
                                    <span class="status-badge secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                <div class="text-muted text-xs">
                                    <i class="far fa-calendar-alt me-1"></i>
                                    @promo.StartDate.ToString("MMM dd") - @promo.EndDate.ToString("MMM dd, yyyy")
                                </div>
                            </td>
                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-2">
                                    <button class="action-btn btn-edit-promo"
                                            data-id="@promo.PromotionID"
                                            data-name="@promo.PromotionName"
                                            data-type="@promo.DiscountType"
                                            data-value="@promo.DiscountValue"
                                            data-start="@promo.StartDate.ToString("yyyy-MM-dd")"
                                            data-end="@promo.EndDate.ToString("yyyy-MM-dd")"
                                            data-active="@promo.IsActive.ToString().ToLower()">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <form asp-action="DeletePromotion" method="post" class="d-inline" onsubmit="return confirm('Delete this campaign?');">
                                        <input type="hidden" name="id" value="@promo.PromotionID" />
                                        <button type="submit" class="action-btn danger"><i class="fas fa-trash"></i></button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6">
                                <div class="empty-state p-5">
                                    <i class="fas fa-bullhorn empty-state-icon fa-2x"></i>
                                    <p class="text-muted">No promotional campaigns found.</p>
                                    <button class="btn btn-sm btn-outline-primary rounded-pill px-4 mt-2" data-bs-toggle="modal" data-bs-target="#addPromotionModal">Create New</button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add Promotion Modal -->
<div class="modal fade modern-modal" id="addPromotionModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Campaign</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="CreatePromotion" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="modern-form-label">Campaign Name</label>
                        <input type="text" name="PromotionName" class="modern-form-control w-100" required placeholder="e.g. Summer Special" />
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            <label class="modern-form-label">Type</label>
                            <select name="DiscountType" class="modern-form-control w-100" required>
                                <option value="Percentage">Percentage (%)</option>
                                <option value="Fixed">Fixed Amount (₱)</option>
                            </select>
                        </div>
                        <div class="col">
                            <label class="modern-form-label">Value</label>
                            <input type="number" step="0.01" name="DiscountValue" class="modern-form-control w-100" required />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            <label class="modern-form-label">Start Date</label>
                            <input type="date" name="StartDate" class="modern-form-control w-100" required value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col">
                            <label class="modern-form-label">End Date</label>
                            <input type="date" name="EndDate" class="modern-form-control w-100" required value="@DateTime.Now.AddDays(7).ToString("yyyy-MM-dd")" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary rounded-pill px-4">Create Promotion</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Promotion Modal -->
<div class="modal fade modern-modal" id="editPromotionModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Campaign</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="EditPromotion" method="post">
                <input type="hidden" name="PromotionID" id="edit-promo-id" />
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="modern-form-label">Campaign Name</label>
                        <input type="text" name="PromotionName" id="edit-promo-name" class="modern-form-control w-100" required />
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            <label class="modern-form-label">Type</label>
                            <select name="DiscountType" id="edit-promo-type" class="modern-form-control w-100" required>
                                <option value="Percentage">Percentage (%)</option>
                                <option value="Fixed">Fixed Amount (₱)</option>
                            </select>
                        </div>
                        <div class="col">
                            <label class="modern-form-label">Value</label>
                            <input type="number" step="0.01" name="DiscountValue" id="edit-promo-value" class="modern-form-control w-100" required />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            <label class="modern-form-label">Start Date</label>
                            <input type="date" name="StartDate" id="edit-promo-start" class="modern-form-control w-100" required />
                        </div>
                        <div class="col">
                            <label class="modern-form-label">End Date</label>
                            <input type="date" name="EndDate" id="edit-promo-end" class="modern-form-control w-100" required />
                        </div>
                    </div>
                    <div class="form-check form-switch mt-2">
                        <input type="checkbox" name="IsActive" id="edit-promo-active" class="form-check-input" value="true" />
                        <label class="form-check-label fw-bold text-sm ms-2">Is Active</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary rounded-pill px-4">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.btn-edit-promo').on('click', function() {
                var id = $(this).data('id');
                var name = $(this).data('name');
                var type = $(this).data('type');
                var value = $(this).data('value');
                var start = $(this).data('start');
                var end = $(this).data('end');
                var active = $(this).data('active');

                $('#edit-promo-id').val(id);
                $('#edit-promo-name').val(name);
                $('#edit-promo-type').val(type);
                $('#edit-promo-value').val(value);
                $('#edit-promo-start').val(start);
                $('#edit-promo-end').val(end);
                $('#edit-promo-active').prop('checked', active);

                var myModal = new bootstrap.Modal(document.getElementById('editPromotionModal'));
                myModal.show();
            });
        });
    </script>
}
