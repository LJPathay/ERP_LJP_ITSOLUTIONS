@model IEnumerable<ljp_itsolutions.Models.Promotion>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Campaign Approvals";
}

<div class="container-fluid py-2">
    <!-- Stats Badge -->
    <div class="d-flex justify-content-end mb-4">
        <div class="badge rounded-pill bg-warning bg-opacity-10 text-warning border border-warning border-opacity-10 px-4 py-2">
            <i class="fas fa-clock me-2"></i>
            <span class="fw-bold">@Model.Count() Pending</span>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3 text-uppercase x-small fw-bold text-muted">Campaign Name</th>
                            <th class="py-3 text-uppercase x-small fw-bold text-muted">Type</th>
                            <th class="py-3 text-uppercase x-small fw-bold text-muted">Value</th>
                            <th class="py-3 text-uppercase x-small fw-bold text-muted">Duration</th>
                            <th class="py-3 text-uppercase x-small fw-bold text-muted">Status</th>
                            <th class="pe-4 py-3 text-end text-uppercase x-small fw-bold text-muted">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var campaign in Model)
                        {
                            <tr style="cursor: pointer;" onclick="openApprovalModal(@campaign.PromotionID)">
                                <td class="ps-4">
                                    <div class="fw-bold text-dark">@campaign.PromotionName</div>
                                    <div class="text-muted x-small">ID: #@campaign.PromotionID.ToString().PadLeft(4, '0')</div>
                                </td>
                                <td>
                                    <span class="badge rounded-pill bg-light text-dark border">@campaign.DiscountType</span>
                                </td>
                                <td class="fw-bold text-primary">
                                    @(campaign.DiscountType == "Percentage" ? $"{campaign.DiscountValue}%" : $"₱{campaign.DiscountValue}")
                                </td>
                                <td>
                                    <div class="d-flex flex-column small">
                                        <span class="fw-medium">@campaign.StartDate.ToString("MMM dd, yyyy")</span>
                                        <span class="text-muted x-small">to @campaign.EndDate.ToString("MMM dd, yyyy")</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge rounded-pill bg-warning px-3">
                                        <i class="fas fa-clock me-1"></i>PENDING
                                    </span>
                                </td>
                                <td class="pe-4 text-end">
                                    <button class="btn btn-sm btn-light rounded-pill px-3 fw-bold text-primary shadow-sm"
                                            onclick="event.stopPropagation(); openApprovalModal(@campaign.PromotionID)">
                                        Review
                                    </button>
                                </td>
                            </tr>

                            <!-- Hidden Data for Modal -->
                            <div id="data-@campaign.PromotionID" class="d-none"
                                 data-name="@campaign.PromotionName"
                                 data-type="@campaign.DiscountType"
                                 data-value="@(campaign.DiscountType == "Percentage" ? $"{campaign.DiscountValue}%" : $"₱{campaign.DiscountValue}")"
                                 data-start="@campaign.StartDate.ToString("MMM dd, yyyy")"
                                 data-end="@campaign.EndDate.ToString("MMM dd, yyyy")"
                                 data-days="@((campaign.EndDate - campaign.StartDate).Days)"
                                 data-auto="@(campaign.IsActive ? "true" : "false")">
                            </div>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
            <div class="card-body text-center py-5">
                <div class="py-5">
                    <i class="fas fa-check-double fa-4x text-success opacity-25 mb-4"></i>
                    <h5 class="fw-bold text-dark">All Caught Up!</h5>
                    <p class="text-muted">No campaigns are currently awaiting your approval.</p>
                    <p class="text-muted x-small">Marketing staff can create new campaigns from their Promotions page.</p>
                </div>
            </div>
        </div>
    }
</div>

<!-- Approval/Rejection Modal -->
<div class="modal fade" id="approvalModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header bg-light border-0">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-sm bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center text-primary" style="width: 40px; height: 40px;">
                        <i class="fas fa-clipboard-check"></i>
                    </div>
                    <div>
                        <h6 class="modal-title fw-bold text-dark mb-0">Review Campaign</h6>
                        <p class="mb-0 x-small text-muted uppercase tracking-wider">Manager Approval Required</p>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <input type="hidden" id="modalCampaignId" />
                
                <h5 class="fw-bold text-dark mb-4" id="modalCampaignName">Campaign Name</h5>
                
                <div class="row g-3 mb-4">
                    <div class="col-6">
                        <div class="p-3 bg-light rounded-4 border border-white shadow-sm border-2 h-100">
                            <p class="x-small text-muted uppercase tracking-wider mb-1">Discount</p>
                            <h5 class="fw-bold text-primary mb-0" id="modalDiscountValue">0%</h5>
                            <small class="text-muted" id="modalDiscountType">Percentage</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-3 bg-light rounded-4 border border-white shadow-sm border-2 h-100">
                            <p class="x-small text-muted uppercase tracking-wider mb-1">Duration</p>
                            <div class="fw-bold text-dark" id="modalDuration">Jan 01 - Dec 31</div>
                            <small class="text-muted" id="modalDays">0 days</small>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="p-3 bg-info bg-opacity-10 rounded-4 border border-info border-opacity-10">
                            <div class="d-flex align-items-center gap-2">
                                <i class="fas fa-toggle-on text-info" id="modalAutoIcon"></i>
                                <span class="small text-info fw-bold" id="modalAutoText">
                                    Auto-activate upon approval
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Rejection Reason Input (Hidden by default) -->
                <div id="rejectionSection" class="d-none mb-3">
                    <label class="form-label fw-bold text-danger small">Reason for Rejection</label>
                    <textarea id="rejectionReason" class="form-control rounded-3" rows="3" placeholder="Explain why this campaign is being rejected..."></textarea>
                </div>

                <div class="d-flex gap-2" id="actionButtons">
                    <button class="btn btn-success flex-fill rounded-pill py-2 fw-bold shadow-sm" onclick="confirmApprove()">
                        <i class="fas fa-check-circle me-2"></i>Approve
                    </button>
                    <button class="btn btn-danger flex-fill rounded-pill py-2 fw-bold shadow-sm" onclick="showRejectionInput()">
                        <i class="fas fa-times-circle me-2"></i>Reject
                    </button>
                </div>

                <div class="d-flex gap-2 d-none" id="confirmRejectButtons">
                    <button class="btn btn-light flex-fill rounded-pill py-2 fw-bold" onclick="cancelRejection()">
                        Cancel
                    </button>
                    <button class="btn btn-danger flex-fill rounded-pill py-2 fw-bold shadow-sm" onclick="confirmReject()">
                        Confirm Rejection
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let approvalModal;

        document.addEventListener('DOMContentLoaded', function() {
            approvalModal = new bootstrap.Modal(document.getElementById('approvalModal'));
        });

        function openApprovalModal(id) {
            const dataContainer = document.getElementById(`data-${id}`);
            if (!dataContainer) return;

            document.getElementById('modalCampaignId').value = id;
            document.getElementById('modalCampaignName').textContent = dataContainer.dataset.name;
            document.getElementById('modalDiscountValue').textContent = dataContainer.dataset.value;
            document.getElementById('modalDiscountType').textContent = dataContainer.dataset.type || 'Percentage';
            
            const start = dataContainer.dataset.start || '';
            const end = dataContainer.dataset.end || '';
            document.getElementById('modalDuration').textContent = `${start} — ${end}`;
            document.getElementById('modalDays').textContent = `${dataContainer.dataset.days || 0} days`;
            
            const isAuto = dataContainer.dataset.auto === 'true';
            document.getElementById('modalAutoIcon').className = `fas fa-toggle-${isAuto ? 'on' : 'off'} text-${isAuto ? 'info' : 'secondary'}`;
            const autoText = document.getElementById('modalAutoText');
            autoText.textContent = isAuto ? 'Auto-activate upon approval' : 'Manual activation required';
            autoText.className = `small text-${isAuto ? 'info' : 'secondary'} fw-bold`;

            document.getElementById('rejectionSection').classList.add('d-none');
            document.getElementById('actionButtons').classList.remove('d-none');
            document.getElementById('confirmRejectButtons').classList.add('d-none');
            document.getElementById('rejectionReason').value = '';

            approvalModal.show();
        }

        function showRejectionInput() {
            document.getElementById('rejectionSection').classList.remove('d-none');
            document.getElementById('actionButtons').classList.add('d-none');
            document.getElementById('confirmRejectButtons').classList.remove('d-none');
            document.getElementById('rejectionReason').focus();
        }

        function cancelRejection() {
            document.getElementById('rejectionSection').classList.add('d-none');
            document.getElementById('actionButtons').classList.remove('d-none');
            document.getElementById('confirmRejectButtons').classList.add('d-none');
            document.getElementById('rejectionReason').value = '';
        }

        async function confirmApprove() {
            const id = document.getElementById('modalCampaignId').value;

            try {
                const response = await fetch('@Url.Action("ApproveCampaign", "Manager")?id=' + id, {
                    method: 'POST',
                    headers: { 
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || '' 
                    }
                });

                if (response.ok) {
                    approvalModal.hide();
                    location.reload();
                } else {
                    alert('Failed to approve campaign.');
                }
            } catch (err) { 
                console.error(err);
                alert('Network error occurred.'); 
            }
        }

        async function confirmReject() {
            const id = document.getElementById('modalCampaignId').value;
            const reason = document.getElementById('rejectionReason').value.trim();

            if (!reason) {
                alert('Please provide a rejection reason.');
                return;
            }

            try {
                const response = await fetch('@Url.Action("RejectCampaign", "Manager")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    },
                    body: JSON.stringify({ id: parseInt(id), reason: reason })
                });

                if (response.ok) {
                    approvalModal.hide();
                    location.reload();
                } else {
                    alert('Failed to reject campaign.');
                }
            } catch (err) { 
                console.error(err);
                alert('Network error occurred.'); 
            }
        }
    </script>
}

<style>
    .x-small { font-size: 0.75rem; }
    .uppercase { text-transform: uppercase; }
    .tracking-wider { letter-spacing: 0.05em; }
    tbody tr:hover { background-color: rgba(var(--bs-primary-rgb), 0.03) !important; }
</style>
