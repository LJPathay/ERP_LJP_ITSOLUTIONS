@model ljp_itsolutions.Models.InventoryViewModel
@{
    ViewData["Title"] = "Inventory Management";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Inventory Management</h2>
            <p class="text-muted">Monitor stock levels and manage reorders.</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-danger"><i class="fas fa-exclamation-circle me-2"></i>Low Stock Alerts</button>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addIngredientModal">
                <i class="fas fa-plus me-2"></i>Add Ingredient
            </button>
        </div>
    </div>

    <!-- Inventory Summary -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center p-3">
                <h6 class="text-muted small uppercase fw-bold mb-2">Total SKU</h6>
                <h3 class="fw-bold mb-0">@Model.Products.Count</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center p-3 border-start border-warning border-4">
                <h6 class="text-muted small uppercase fw-bold mb-2">Low Stock</h6>
                <h3 class="fw-bold mb-0 text-warning">@Model.LowStockCount</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center p-3 border-start border-danger border-4">
                <h6 class="text-muted small uppercase fw-bold mb-2">Out of Stock</h6>
                <h3 class="fw-bold mb-0 text-danger">@Model.OutOfStockCount</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center p-3 border-start border-success border-4">
                <h6 class="text-muted small uppercase fw-bold mb-2">Healthy Stock</h6>
                <h3 class="fw-bold mb-0 text-success">@Model.HealthyStockCount</h3>
            </div>
        </div>
    </div>

    <!-- Inventory Tabs -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-0 pt-3">
            <ul class="nav nav-pills card-header-pills" id="inventoryTabs" role="tablist">
                <li class="nav-item">
                    <button class="nav-link active" id="products-tab" data-bs-toggle="tab" data-bs-target="#products-content" type="button">
                        <i class="fas fa-box me-2"></i>Retail Products
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" id="ingredients-tab" data-bs-toggle="tab" data-bs-target="#ingredients-content" type="button">
                        <i class="fas fa-leaf me-2"></i>Raw Ingredients
                    </button>
                </li>
            </ul>
        </div>
        <div class="card-body p-0">
            <div class="tab-content" id="inventoryTabContent">
                <!-- Products Tab -->
                <div class="tab-pane fade show active" id="products-content">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Product Name</th>
                                    <th>Category</th>
                                    <th>Current Stock</th>
                                    <th>Threshold</th>
                                    <th>Status</th>
                                    <th class="text-end pe-4">Stock Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Products)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="fw-bold">@item.ProductName</div>
                                            <small class="text-muted">ID: @item.ProductID</small>
                                        </td>
                                        <td><span class="badge bg-light text-dark">@item.Category?.CategoryName</span></td>
                                        <td>
                                            <span class="fw-bold @(item.StockQuantity < 10 ? "text-danger" : "")">@item.StockQuantity</span>
                                        </td>
                                        <td>10 units</td>
                                        <td>
                                            @if (item.StockQuantity == 0)
                                            {
                                                <span class="badge bg-danger rounded-pill">Out of Stock</span>
                                            }
                                            else if (item.StockQuantity < 10)
                                            {
                                                <span class="badge bg-warning rounded-pill">Low Stock</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success rounded-pill">In Stock</span>
                                            }
                                        </td>
                                        <td class="text-end pe-4">
                                            <form asp-action="UpdateStock" method="post" class="d-inline-flex gap-2">
                                                <input type="hidden" name="id" value="@item.ProductID" />
                                                <input type="number" name="stock" value="@item.StockQuantity" class="form-control form-control-sm" style="width: 80px;" />
                                                <button type="submit" class="btn btn-sm btn-primary">Update</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Ingredients Tab -->
                <div class="tab-pane fade" id="ingredients-content">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Ingredient Name</th>
                                    <th>Current Stock</th>
                                    <th>Unit</th>
                                    <th>Threshold</th>
                                    <th>Status</th>
                                    <th class="text-end pe-4">Stock Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Ingredients)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="fw-bold">@item.Name</div>
                                            <small class="text-muted">ID: @item.IngredientID</small>
                                        </td>
                                        <td>
                                            <span class="fw-bold @(item.StockQuantity < item.LowStockThreshold ? "text-danger" : "")">@item.StockQuantity.ToString("F3")</span>
                                        </td>
                                        <td>@item.Unit</td>
                                        <td>@item.LowStockThreshold @item.Unit</td>
                                        <td>
                                            @if (item.StockQuantity == 0)
                                            {
                                                <span class="badge bg-danger rounded-pill">Out of Stock</span>
                                            }
                                            else if (item.StockQuantity < item.LowStockThreshold)
                                            {
                                                <span class="badge bg-warning rounded-pill">Low Stock</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success rounded-pill">In Stock</span>
                                            }
                                        </td>
                                        <td class="text-end pe-4">
                                            <button class="btn btn-sm btn-light btn-edit-ingredient" 
                                                    data-id="@item.IngredientID"
                                                    data-name="@item.Name"
                                                    data-stock="@item.StockQuantity"
                                                    data-unit="@item.Unit"
                                                    data-threshold="@item.LowStockThreshold">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <form asp-action="DeleteIngredient" method="post" class="d-inline" onsubmit="return confirm('Remove this ingredient?');">
                                                <input type="hidden" name="id" value="@item.IngredientID" />
                                                <button type="submit" class="btn btn-sm btn-light text-danger"><i class="fas fa-trash"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Ingredient Modal -->
<div class="modal fade" id="addIngredientModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content border-0 shadow">
            <div class="modal-header">
                <h5 class="modal-title fw-bold">Add Raw Ingredient</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="CreateIngredient" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Ingredient Name</label>
                        <input type="text" name="Name" class="form-control" required placeholder="e.g. Fresh Milk" />
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            <label class="form-label">Initial Stock</label>
                            <input type="number" step="0.001" name="StockQuantity" class="form-control" required value="0" />
                        </div>
                        <div class="col">
                            <label class="form-label">Unit</label>
                            <select name="Unit" class="form-select" required>
                                <option value="kg">kg (Kilogram)</option>
                                <option value="L">L (Liter)</option>
                                <option value="ml">ml (Milliliter)</option>
                                <option value="g">g (Gram)</option>
                                <option value="pcs">pcs (Pieces)</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Low Stock Threshold</label>
                        <input type="number" step="0.001" name="LowStockThreshold" class="form-control" required value="1" />
                        <div class="form-text">Notify me when stock falls below this level.</div>
                    </div>
                </div>
                <div class="modal-footer bg-light border-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary px-4">Add Ingredient</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Ingredient Modal -->
<div class="modal fade" id="editIngredientModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content border-0 shadow">
            <div class="modal-header">
                <h5 class="modal-title fw-bold">Edit Ingredient</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="EditIngredient" method="post">
                <input type="hidden" name="IngredientID" id="edit-ing-id" />
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Ingredient Name</label>
                        <input type="text" name="Name" id="edit-ing-name" class="form-control" required />
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            <label class="form-label">Update Stock</label>
                            <input type="number" step="0.001" name="StockQuantity" id="edit-ing-stock" class="form-control" required />
                        </div>
                        <div class="col">
                            <label class="form-label">Unit</label>
                            <select name="Unit" id="edit-ing-unit" class="form-select" required>
                                <option value="kg">kg</option>
                                <option value="L">L</option>
                                <option value="ml">ml</option>
                                <option value="g">g</option>
                                <option value="pcs">pcs</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Low Stock Threshold</label>
                        <input type="number" step="0.001" name="LowStockThreshold" id="edit-ing-threshold" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer bg-light border-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.btn-edit-ingredient').on('click', function() {
                var id = $(this).data('id');
                var name = $(this).data('name');
                var stock = $(this).data('stock');
                var unit = $(this).data('unit');
                var threshold = $(this).data('threshold');

                $('#edit-ing-id').val(id);
                $('#edit-ing-name').val(name);
                $('#edit-ing-stock').val(stock);
                $('#edit-ing-unit').val(unit);
                $('#edit-ing-threshold').val(threshold);

                var myModal = new bootstrap.Modal(document.getElementById('editIngredientModal'));
                myModal.show();
            });
        });
    </script>
}
