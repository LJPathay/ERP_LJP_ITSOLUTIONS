@model ljp_itsolutions.Models.InventoryViewModel
@{
    ViewData["Title"] = "Inventory Management";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Inventory Management</h2>
            <p class="text-muted">Monitor stock levels and manage reorders.</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-danger"><i class="fas fa-exclamation-circle me-2"></i>Low Stock Alerts</button>
            <button class="btn btn-primary"><i class="fas fa-truck-loading me-2"></i>Restock All</button>
        </div>
    </div>

    <!-- Inventory Summary -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center p-3">
                <h6 class="text-muted small uppercase fw-bold mb-2">Total SKU</h6>
                <h3 class="fw-bold mb-0">@Model.Products.Count</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center p-3 border-start border-warning border-4">
                <h6 class="text-muted small uppercase fw-bold mb-2">Low Stock</h6>
                <h3 class="fw-bold mb-0 text-warning">@Model.LowStockCount</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center p-3 border-start border-danger border-4">
                <h6 class="text-muted small uppercase fw-bold mb-2">Out of Stock</h6>
                <h3 class="fw-bold mb-0 text-danger">@Model.OutOfStockCount</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center p-3 border-start border-success border-4">
                <h6 class="text-muted small uppercase fw-bold mb-2">Healthy Stock</h6>
                <h3 class="fw-bold mb-0 text-success">@Model.HealthyStockCount</h3>
            </div>
        </div>
    </div>

    <!-- Inventory Tabs -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-0 pt-3">
            <ul class="nav nav-pills card-header-pills" id="inventoryTabs" role="tablist">
                <li class="nav-item">
                    <button class="nav-link active" id="products-tab" data-bs-toggle="tab" data-bs-target="#products-content" type="button">
                        <i class="fas fa-box me-2"></i>Retail Products
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" id="ingredients-tab" data-bs-toggle="tab" data-bs-target="#ingredients-content" type="button">
                        <i class="fas fa-leaf me-2"></i>Raw Ingredients
                    </button>
                </li>
            </ul>
        </div>
        <div class="card-body p-0">
            <div class="tab-content" id="inventoryTabContent">
                <!-- Products Tab -->
                <div class="tab-pane fade show active" id="products-content">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Product Name</th>
                                    <th>Category</th>
                                    <th>Current Stock</th>
                                    <th>Threshold</th>
                                    <th>Status</th>
                                    <th class="text-end pe-4">Stock Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Products)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="fw-bold">@item.ProductName</div>
                                            <small class="text-muted">ID: @item.ProductID</small>
                                        </td>
                                        <td><span class="badge bg-light text-dark">@item.Category?.CategoryName</span></td>
                                        <td>
                                            <span class="fw-bold @(item.StockQuantity < 10 ? "text-danger" : "")">@item.StockQuantity</span>
                                        </td>
                                        <td>10 units</td>
                                        <td>
                                            @if (item.StockQuantity == 0)
                                            {
                                                <span class="badge bg-danger rounded-pill">Out of Stock</span>
                                            }
                                            else if (item.StockQuantity < 10)
                                            {
                                                <span class="badge bg-warning rounded-pill">Low Stock</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success rounded-pill">In Stock</span>
                                            }
                                        </td>
                                        <td class="text-end pe-4">
                                            <form asp-action="UpdateStock" method="post" class="d-inline-flex gap-2">
                                                <input type="hidden" name="id" value="@item.ProductID" />
                                                <input type="number" name="stock" value="@item.StockQuantity" class="form-control form-control-sm" style="width: 80px;" />
                                                <button type="submit" class="btn btn-sm btn-primary">Update</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Ingredients Tab -->
                <div class="tab-pane fade" id="ingredients-content">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Ingredient Name</th>
                                    <th>Current Stock</th>
                                    <th>Unit</th>
                                    <th>Threshold</th>
                                    <th>Status</th>
                                    <th class="text-end pe-4">Stock Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Ingredients)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="fw-bold">@item.Name</div>
                                            <small class="text-muted">ID: @item.IngredientID</small>
                                        </td>
                                        <td>
                                            <span class="fw-bold @(item.StockQuantity < item.LowStockThreshold ? "text-danger" : "")">@item.StockQuantity.ToString("F3")</span>
                                        </td>
                                        <td>@item.Unit</td>
                                        <td>@item.LowStockThreshold @item.Unit</td>
                                        <td>
                                            @if (item.StockQuantity == 0)
                                            {
                                                <span class="badge bg-danger rounded-pill">Out of Stock</span>
                                            }
                                            else if (item.StockQuantity < item.LowStockThreshold)
                                            {
                                                <span class="badge bg-warning rounded-pill">Low Stock</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success rounded-pill">In Stock</span>
                                            }
                                        </td>
                                        <td class="text-end pe-4">
                                            <button class="btn btn-sm btn-outline-primary"><i class="fas fa-plus me-1"></i>Add Stock</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
